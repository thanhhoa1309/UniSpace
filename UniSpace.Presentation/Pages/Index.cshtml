@page
@model UniSpace.Presentation.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid py-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">
            <i class="bi bi-mortarboard"></i> Welcome to UniSpace
        </h1>
        <p class="lead fs-4 text-muted">University Space Management System</p>
        
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="mt-4">
                <h3 class="mb-3">Hello, <span class="text-primary">@User.Identity.Name</span>!</h3>
                <p class="mb-4">Ready to manage your bookings?</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-page="/Dashboard" class="btn btn-primary btn-lg">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a asp-page="/Bookings/SearchRooms" class="btn btn-success btn-lg">
                        <i class="bi bi-search"></i> Search Rooms
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="mt-4">
                <p class="fs-5 mb-4">Manage campus rooms, bookings, and reports efficiently.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-page="/Auth/Login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                    <a asp-page="/Auth/Register" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Register
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Features Section -->
    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-primary">
                        <i class="bi bi-door-open" style="font-size: 3.5rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold">Room Management</h5>
                    <p class="card-text">Browse and manage available rooms across different campuses. View real-time availability and room details.</p>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-page="/Bookings/SearchRooms" class="btn btn-outline-primary mt-2">
                            <i class="bi bi-search"></i> Browse Rooms
                        </a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-success">
                        <i class="bi bi-calendar-check" style="font-size: 3.5rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold">Booking System</h5>
                    <p class="card-text">Book rooms for classes, meetings, and events easily. Track your bookings and manage reservations.</p>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-page="/Bookings/MyBookings" class="btn btn-outline-success mt-2">
                            <i class="bi bi-list-check"></i> My Bookings
                        </a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3 text-warning">
                        <i class="bi bi-exclamation-triangle" style="font-size: 3.5rem;"></i>
                    </div>
                    <h5 class="card-title fw-bold">Report Issues</h5>
                    <p class="card-text">Report and track room maintenance issues efficiently. Help maintain quality of campus facilities.</p>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-page="/RoomReports/MyReports" class="btn btn-outline-warning mt-2">
                            <i class="bi bi-file-text"></i> My Reports
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">How It Works</h2>
                        <div class="row text-center">
                            <div class="col-md-3 mb-3">
                                <div class="mb-3">
                                    <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                                </div>
                                <h5>1. Register</h5>
                                <p class="text-muted">Create your account as a student or lecturer</p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="mb-3">
                                    <i class="bi bi-search text-primary" style="font-size: 3rem;"></i>
                                </div>
                                <h5>2. Search Rooms</h5>
                                <p class="text-muted">Find available rooms by campus, type, and capacity</p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="mb-3">
                                    <i class="bi bi-calendar-plus text-primary" style="font-size: 3rem;"></i>
                                </div>
                                <h5>3. Book</h5>
                                <p class="text-muted">Reserve your preferred room for your needs</p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="mb-3">
                                    <i class="bi bi-check-circle text-primary" style="font-size: 3rem;"></i>
                                </div>
                                <h5>4. Manage</h5>
                                <p class="text-muted">Track bookings and report any issues</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
