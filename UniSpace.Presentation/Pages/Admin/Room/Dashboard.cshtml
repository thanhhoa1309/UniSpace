@page
@model UniSpace.Presentation.Pages.Admin.Room.DashboardModel
@{
    ViewData["Title"] = "Room Dashboard";
}

<style>
    /* Dark Background */
    .dashboard-container {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    /* Glassmorphism Cards */
    .glass-card {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    /* Orange Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    .white-text {
        color: #ffffff;
        font-weight: bold;
    }

    .orange-text {
        color: #ff8a00;
    }

    .green-text {
        color: #10b981;
    }

    .cyan-text {
        color: #06b6d4;
    }

    .text-danger-neon {
        color: #f87171;
    }

    /* New Statistics Cards (Row 1) */
    .stat-card-new {
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 12px;
        padding: 0;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .stat-card-new:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 138, 0, 0.15);
            border-color: rgba(255, 138, 0, 0.4);
        }

    .stat-card-content {
        padding: 24px;
    }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .stat-title-new {
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .stat-icon-circle {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #1a1a1a;
    }

    .orange-bg {
        background: linear-gradient(135deg, #ff0c00 0%, #e67700 100%);
        backdrop-filter: blur(10px);
    }

    .green-bg {
        background: linear-gradient(135deg, #06c1d4 0%, #0862b2 100%);
    }

    .cyan-bg {
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);

    }

    .stat-value-new {
        font-size: 3rem;
        font-weight: 700;
        color: #ffffff;
        margin: 12px 0;
        line-height: 1;
    }

    .stat-description {
        font-size: 0.875rem;
        color: #9ca3af;
    }

    /* Large Statistics Cards (Row 2) */
    .stat-card-large {
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 12px;
        padding: 0;
        transition: all 0.3s ease;
    }

        .stat-card-large:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 138, 0, 0.15);
            border-color: rgba(255, 138, 0, 0.4);
        }

    .stat-title-large {
        font-size: 1rem;
        font-weight: 700;
        letter-spacing: 0.3px;
    }

    .stat-value-large {
        font-size: 3.5rem;
        font-weight: 700;
        color: #ffffff;
        line-height: 1;
    }

    .stat-value-medium {
        font-size: 1.5rem;
        font-weight: 700;
        color: #ffffff;
    }

    .progress-bar-new {
        width: 100%;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill-new {
        height: 100%;
        border-radius: 20px;
        transition: width 0.8s ease;
        box-shadow: 0 0 15px rgba(255, 138, 0, 0.5);
    }

    .progress-fill-green {
        height: 100%;
        border-radius: 20px;
        transition: width 0.8s ease;
        box-shadow: 0 0 15px rgba(16, 185, 129, 0.5);
    }

    .progress-fill-cyan {
        height: 100%;
        border-radius: 20px;
        transition: width 0.8s ease;
        box-shadow: 0 0 15px rgba(6, 182, 212, 0.5);
    }

    .stat-footer-text {
        font-size: 0.875rem;
        color: #6b7280;
    }

    /* Card Headers */
    .card-header-glass {
        background: rgba(255, 138, 0, 0.1);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 15px 20px;
        border-radius: 15px 15px 0 0;
        color: #fff;
    }

    /* Card Body */
    .card-body {
        padding: 20px;
        color: #e0e0e0;
    }

    /* Buttons */
    .btn-neon {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: bold;
        padding: 10px 25px;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.5);
    }

        .btn-neon:hover {
            background: linear-gradient(135deg, #ff6b00 0%, #ff8a00 100%);
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.8), 0 0 40px rgba(255, 138, 0, 0.6);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-glass {
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        padding: 10px 25px;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-glass:hover {
            border: 1px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.3);
        }

    /* List Items */
    .list-group-glass {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .list-item-glass {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 15px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

        .list-item-glass:hover {
            background: rgba(255, 138, 0, 0.1);
            border: 1px solid rgba(255, 138, 0, 0.4);
            transform: translateX(5px);
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    /* Badges */
    .badge-neon {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        color: #fff;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: bold;
        box-shadow: 0 0 15px rgba(255, 138, 0, 0.6);
        display: inline-block;
    }

    .badge-glass {
        background: rgba(255, 255, 255, 0.1);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 20px;
        border: 1px solid rgba(255, 138, 0, 0.3);
        font-weight: bold;
        display: inline-block;
    }

    /* Text Colors */
    .text-secondary {
        color: #a0a0a0 !important;
    }

    .text-light {
        color: #e0e0e0 !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stat-value-new {
            font-size: 2.5rem;
        }

        .stat-value-large {
            font-size: 2.5rem;
        }

        .stat-icon-circle {
            width: 48px;
            height: 48px;
            font-size: 1.25rem;
        }
    }
</style>

<div class="dashboard-container">
    <div class="container-fluid mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h2 class="white-text mb-2">
                                <i class="bi bi-door-open"></i> Room Dashboard
                            </h2>
                            <p class="text-secondary mb-0">Comprehensive overview of all room facilities</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-page="Index" class="btn btn-glass">
                                <i class="bi bi-list"></i> View All
                            </a>
                            <a asp-page="Create" class="btn btn-neon">
                                <i class="bi bi-plus-circle"></i> Add Room
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards Row 1 -->
        <div class="row mb-4">
            <!-- Total Rooms -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stat-card-new h-100">
                    <div class="stat-card-content">
                        <div class="stat-header">
                            <span class="stat-title-new orange-text">TOTAL ROOMS</span>
                            <div class="stat-icon-circle orange-bg">
                                <i class="bi bi-door-open"></i>
                            </div>
                        </div>
                        <div class="stat-value-new">@Model.TotalRooms</div>
                        <div class="stat-description">All room facilities</div>
                    </div>
                </div>
            </div>

            <!-- Available Rooms -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stat-card-new h-100">
                    <div class="stat-card-content">
                        <div class="stat-header">
                            <span class="stat-title-new green-text">AVAILABLE ROOMS</span>
                            <div class="stat-icon-circle green-bg">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                        <div class="stat-value-new">@Model.AvailableRooms</div>
                        <div class="stat-description">Ready for booking</div>
                    </div>
                </div>
            </div>

            <!-- Total Capacity -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stat-card-new h-100">
                    <div class="stat-card-content">
                        <div class="stat-header">
                            <span class="stat-title-new cyan-text">TOTAL CAPACITY</span>
                            <div class="stat-icon-circle cyan-bg">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                        <div class="stat-value-new">@Model.TotalCapacity</div>
                        <div class="stat-description">Total seats available</div>
                    </div>
                </div>
            </div>

            <!-- Average Capacity -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stat-card-new h-100">
                    <div class="stat-card-content">
                        <div class="stat-header">
                            <span class="stat-title-new orange-text">AVERAGE CAPACITY</span>
                            <div class="stat-icon-circle orange-bg">
                                <i class="bi bi-calculator"></i>
                            </div>
                        </div>
                        <div class="stat-value-new">@Model.AverageCapacity</div>
                        <div class="stat-description">Seats per room</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Room Type Distribution -->
        <div class="row mb-4">
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="stat-card-large h-100">
                    <div class="stat-card-content">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-book orange-text me-2" style="font-size: 1.5rem;"></i>
                            <span class="stat-title-large orange-text">Classrooms</span>
                        </div>
                        <div class="stat-value-large mb-2">@Model.TotalClassrooms</div>
                        <div class="stat-description mb-3">Standard teaching rooms</div>
                        <div class="progress-bar-new">
                            <div class="progress-fill-new" style="width: @((Model.TotalRooms > 0 ? (double)Model.TotalClassrooms / Model.TotalRooms * 100 : 0))%"></div>
                        </div>
                        <div class="mt-2 stat-footer-text">
                            @((Model.TotalRooms > 0 ? Math.Round((double)Model.TotalClassrooms / Model.TotalRooms * 100, 1) : 0))% of total rooms
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="stat-card-large h-100">
                    <div class="stat-card-content">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-laptop green-text me-2" style="font-size: 1.5rem;"></i>
                            <span class="stat-title-large green-text">Laboratories</span>
                        </div>
                        <div class="stat-value-large mb-2">@Model.TotalLabs</div>
                        <div class="stat-description mb-3">Computer labs & workshops</div>
                        <div class="progress-bar-new">
                            <div class="progress-fill-green" style="width: @((Model.TotalRooms > 0 ? (double)Model.TotalLabs / Model.TotalRooms * 100 : 0))%"></div>
                        </div>
                        <div class="mt-2 stat-footer-text">
                            @((Model.TotalRooms > 0 ? Math.Round((double)Model.TotalLabs / Model.TotalRooms * 100, 1) : 0))% of total rooms
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="stat-card-large h-100">
                    <div class="stat-card-content">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-flag cyan-text me-2" style="font-size: 1.5rem;"></i>
                            <span class="stat-title-large cyan-text">Stadiums</span>
                        </div>
                        <div class="stat-value-large mb-2">@Model.TotalStadiums</div>
                        <div class="stat-description mb-3">Sports & event facilities</div>
                        <div class="progress-bar-new">
                            <div class="progress-fill-cyan" style="width: @((Model.TotalRooms > 0 ? (double)Model.TotalStadiums / Model.TotalRooms * 100 : 0))%"></div>
                        </div>
                        <div class="mt-2 stat-footer-text">
                            @((Model.TotalRooms > 0 ? Math.Round((double)Model.TotalStadiums / Model.TotalRooms * 100, 1) : 0))% of total rooms
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Utilization Rate -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="stat-card-large">
                    <div class="stat-card-content">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-graph-up orange-text me-2" style="font-size: 1.5rem;"></i>
                            <span class="stat-title-large orange-text">Room Utilization Rate</span>
                        </div>
                        <div class="stat-value-large mb-2">@Model.UtilizationRate%</div>
                        <div class="stat-description mb-3">Percentage of rooms with booking history</div>
                        <div class="progress-bar-new">
                            <div class="progress-fill-new" style="width: @Model.UtilizationRate%"></div>
                        </div>
                        <div class="row text-center mt-4">
                            <div class="col-md-4">
                                <h5 class="stat-value-medium">@Model.TotalRooms</h5>
                                <small class="stat-description">Total Rooms</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="stat-value-medium green-text">@Model.AvailableRooms</h5>
                                <small class="stat-description">Available</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="stat-value-medium text-danger-neon">@Model.UnavailableRooms</h5>
                                <small class="stat-description">Unavailable</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Rooms and Top Lists -->
        <div class="row mb-4">
            <!-- Recent Rooms -->
            <div class="col-xl-4 col-md-12 mb-4">
                <div class="glass-card h-100">
                    <div class="card-header-glass">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-clock-history neon-text"></i> Recent Rooms
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentRooms.Any())
                        {
                            <div class="list-group-glass">
                                @foreach (var room in Model.RecentRooms)
                                {
                                    <a asp-page="Details" asp-route-id="@room.Id"
                                       class="list-item-glass">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1 text-light">
                                                    <i class="bi bi-door-open neon-text"></i> @room.Name
                                                </h6>
                                                <small class="text-secondary">
                                                    <i class="bi bi-building"></i> @room.CampusName
                                                </small><br />
                                                <small class="text-secondary">
                                                    <i class="bi bi-tag"></i> @room.TypeDisplay
                                                </small>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge-neon">@room.Capacity seats</span><br />
                                                <small class="text-secondary">@room.CreatedAt.ToString("dd/MM/yyyy")</small>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-inbox display-4 text-secondary"></i>
                                <p class="text-secondary mt-3">No rooms available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Largest Rooms -->
            <div class="col-xl-4 col-md-12 mb-4">
                <div class="glass-card h-100">
                    <div class="card-header-glass">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-trophy neon-text"></i> Largest Rooms
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.LargestRooms.Any())
                        {
                            <div class="list-group-glass">
                                @for (int i = 0; i < Model.LargestRooms.Count; i++)
                                {
                                    var room = Model.LargestRooms[i];
                                    var medal = i == 0 ? "🥇" : i == 1 ? "🥈" : i == 2 ? "🥉" : "";

                                    <a asp-page="Details" asp-route-id="@room.Id"
                                       class="list-item-glass">
                                        <div class="d-flex w-100 justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(medal))
                                                {
                                                    <span class="me-2" style="font-size: 1.5em;">@medal</span>
                                                }
                                                else
                                                {
                                                    <span class="badge-glass me-2">@(i + 1)</span>
                                                }
                                                <div>
                                                    <h6 class="mb-1 text-light">@room.Name</h6>
                                                    <small class="text-secondary">@room.CampusName</small>
                                                </div>
                                            </div>
                                            <div>
                                                <h5 class="mb-0">
                                                    <span class="badge-neon">@room.Capacity</span>
                                                </h5>
                                                <small class="text-secondary">seats</small>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-inbox display-4 text-secondary"></i>
                                <p class="text-secondary mt-3">No rooms available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Most Booked Rooms -->
            <div class="col-xl-4 col-md-12 mb-4">
                <div class="glass-card h-100">
                    <div class="card-header-glass">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-fire neon-text"></i> Most Booked Rooms
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.MostBookedRooms.Any())
                        {
                            <div class="list-group-glass">
                                @foreach (var room in Model.MostBookedRooms)
                                {
                                    <a asp-page="Details" asp-route-id="@room.Id"
                                       class="list-item-glass">
                                        <div class="d-flex w-100 justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1 text-light">@room.Name</h6>
                                                <small class="text-secondary">
                                                    @room.CampusName • @room.TypeDisplay
                                                </small>
                                            </div>
                                            <div class="text-end">
                                                <h5 class="mb-0">
                                                    <span class="badge-neon">@room.TotalBookings</span>
                                                </h5>
                                                <small class="text-secondary">bookings</small>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-inbox display-4 text-secondary"></i>
                                <p class="text-secondary mt-3">No bookings yet</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row mb-4">
            <!-- Room Type Distribution Chart -->
            @if (Model.RoomTypeDistribution.Any())
            {
                <div class="col-md-6 mb-4">
                    <div class="glass-card">
                        <div class="card-header-glass">
                            <h6 class="m-0 font-weight-bold">
                                <i class="bi bi-pie-chart neon-text"></i> Room Type Distribution
                            </h6>
                        </div>
                        <div class="card-body">
                            <canvas id="roomTypeChart" style="height: 300px;"></canvas>
                        </div>
                    </div>
                </div>
            }

            <!-- Rooms by Campus Chart -->
            @if (Model.RoomsByCampus.Any())
            {
                <div class="col-md-6 mb-4">
                    <div class="glass-card">
                        <div class="card-header-glass">
                            <h6 class="m-0 font-weight-bold">
                                <i class="bi bi-bar-chart neon-text"></i> Rooms by Campus
                            </h6>
                        </div>
                        <div class="card-body">
                            <canvas id="roomsByCampusChart" style="height: 300px;"></canvas>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Quick Actions -->
        <div class="row">
            <div class="col-md-12">
                <div class="glass-card">
                    <div class="card-header-glass">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-lightning neon-text"></i> Quick Actions
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <a asp-page="Create" class="btn btn-neon btn-lg w-100">
                                    <i class="bi bi-plus-circle"></i><br />
                                    <small>Add New Room</small>
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a asp-page="Index" class="btn btn-glass btn-lg w-100">
                                    <i class="bi bi-list"></i><br />
                                    <small>View All Rooms</small>
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a asp-page="/Admin/Campus/Index" class="btn btn-glass btn-lg w-100">
                                    <i class="bi bi-building"></i><br />
                                    <small>Manage Campuses</small>
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-glass btn-lg w-100" disabled>
                                    <i class="bi bi-file-earmark-text"></i><br />
                                    <small>Generate Report</small>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Room Type Distribution Chart
        @if (Model.RoomTypeDistribution.Any())
        {
                <text>
                const typeCtx = document.getElementById('roomTypeChart');
                new Chart(typeCtx, {
                    type: 'doughnut',
                    data: {
                        labels: @Html.Raw(Json.Serialize(Model.RoomTypeDistribution.Keys)),
                        datasets: [{
