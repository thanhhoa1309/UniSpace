@page
@model UniSpace.Presentation.Pages.Admin.Room.DashboardModel
@{
    ViewData["Title"] = "Room Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-door-open"></i> Room Dashboard</h2>
                    <p class="text-muted">Comprehensive overview of all room facilities</p>
                </div>
                <div>
                    <a asp-page="Index" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-list"></i> View All
                    </a>
                    <a asp-page="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Add Room
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards Row 1 -->
    <div class="row mb-4">
        <!-- Total Rooms -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Rooms
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalRooms
                            </div>
                            <small class="text-muted">All room facilities</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-door-open" style="font-size: 2.5em; color: #4e73df;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Available Rooms -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Available Rooms
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.AvailableRooms
                            </div>
                            <small class="text-muted">Ready for booking</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle" style="font-size: 2.5em; color: #1cc88a;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Capacity -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Capacity
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalCapacity
                            </div>
                            <small class="text-muted">Total seats available</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people" style="font-size: 2.5em; color: #36b9cc;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Capacity -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Average Capacity
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.AverageCapacity
                            </div>
                            <small class="text-muted">Seats per room</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calculator" style="font-size: 2.5em; color: #f6c23e;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Room Type Distribution -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-book"></i> Classrooms
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2">@Model.TotalClassrooms</div>
                    <p class="text-muted">Standard teaching rooms</p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" 
                             style="width: @((Model.TotalRooms > 0 ? (double)Model.TotalClassrooms / Model.TotalRooms * 100 : 0))%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @((Model.TotalRooms > 0 ? Math.Round((double)Model.TotalClassrooms / Model.TotalRooms * 100, 1) : 0))% of total
                    </small>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-laptop"></i> Laboratories
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="display-4 text-success mb-2">@Model.TotalLabs</div>
                    <p class="text-muted">Computer labs & workshops</p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @((Model.TotalRooms > 0 ? (double)Model.TotalLabs / Model.TotalRooms * 100 : 0))%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @((Model.TotalRooms > 0 ? Math.Round((double)Model.TotalLabs / Model.TotalRooms * 100, 1) : 0))% of total
                    </small>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-flag"></i> Stadiums
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="display-4 text-info mb-2">@Model.TotalStadiums</div>
                    <p class="text-muted">Sports & event facilities</p>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-info" role="progressbar" 
                             style="width: @((Model.TotalRooms > 0 ? (double)Model.TotalStadiums / Model.TotalRooms * 100 : 0))%">
                        </div>
                    </div>
                    <small class="text-muted">
                        @((Model.TotalRooms > 0 ? Math.Round((double)Model.TotalStadiums / Model.TotalRooms * 100, 1) : 0))% of total
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Utilization Rate -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-graph-up"></i> Room Utilization Rate
                    </h6>
                </div>
                <div class="card-body">
                    <h4 class="mb-0">@Model.UtilizationRate%</h4>
                    <p class="text-muted mb-3">Percentage of rooms with booking history</p>
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar bg-warning" role="progressbar" 
                             style="width: @Model.UtilizationRate%" 
                             aria-valuenow="@Model.UtilizationRate" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                            @Model.UtilizationRate%
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h5>@Model.TotalRooms</h5>
                                <small class="text-muted">Total Rooms</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-success">@Model.AvailableRooms</h5>
                                <small class="text-muted">Available</small>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-danger">@Model.UnavailableRooms</h5>
                                <small class="text-muted">Unavailable</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Rooms and Top Lists -->
    <div class="row">
        <!-- Recent Rooms -->
        <div class="col-xl-4 col-md-12 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-clock-history"></i> Recent Rooms
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentRooms.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var room in Model.RecentRooms)
                            {
                                <a asp-page="Details" asp-route-id="@room.Id" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">
                                                <i class="bi bi-door-open text-primary"></i> @room.Name
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-building"></i> @room.CampusName
                                            </small><br/>
                                            <small class="text-muted">
                                                <i class="bi bi-tag"></i> @room.TypeDisplay
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-info">@room.Capacity seats</span><br/>
                                            <small class="text-muted">@room.CreatedAt.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted"></i>
                            <p class="text-muted mt-3">No rooms available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Largest Rooms -->
        <div class="col-xl-4 col-md-12 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-trophy"></i> Largest Rooms
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.LargestRooms.Any())
                    {
                        <div class="list-group list-group-flush">
                            @for (int i = 0; i < Model.LargestRooms.Count; i++)
                            {
                                var room = Model.LargestRooms[i];
                                var medal = i == 0 ? "??" : i == 1 ? "??" : i == 2 ? "??" : "";
                                
                                <a asp-page="Details" asp-route-id="@room.Id" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(medal))
                                            {
                                                <span class="me-2" style="font-size: 1.5em;">@medal</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary me-2">@(i + 1)</span>
                                            }
                                            <div>
                                                <h6 class="mb-1">@room.Name</h6>
                                                <small class="text-muted">@room.CampusName</small>
                                            </div>
                                        </div>
                                        <div>
                                            <h5 class="mb-0">
                                                <span class="badge bg-success">@room.Capacity</span>
                                            </h5>
                                            <small class="text-muted">seats</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted"></i>
                            <p class="text-muted mt-3">No rooms available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Most Booked Rooms -->
        <div class="col-xl-4 col-md-12 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-warning">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-fire"></i> Most Booked Rooms
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.MostBookedRooms.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var room in Model.MostBookedRooms)
                            {
                                <a asp-page="Details" asp-route-id="@room.Id" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@room.Name</h6>
                                            <small class="text-muted">
                                                @room.CampusName • @room.TypeDisplay
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <h5 class="mb-0">
                                                <span class="badge bg-warning">@room.TotalBookings</span>
                                            </h5>
                                            <small class="text-muted">bookings</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted"></i>
                            <p class="text-muted mt-3">No bookings yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <!-- Room Type Distribution Chart -->
        @if (Model.RoomTypeDistribution.Any())
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-pie-chart"></i> Room Type Distribution
                        </h6>
                    </div>
                    <div class="card-body">
                        <canvas id="roomTypeChart" style="height: 300px;"></canvas>
                    </div>
                </div>
            </div>
        }

        <!-- Rooms by Campus Chart -->
        @if (Model.RoomsByCampus.Any())
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-bar-chart"></i> Rooms by Campus
                        </h6>
                    </div>
                    <div class="card-body">
                        <canvas id="roomsByCampusChart" style="height: 300px;"></canvas>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="Create" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-plus-circle"></i><br/>
                                <small>Add New Room</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="Index" class="btn btn-info btn-lg w-100">
                                <i class="bi bi-list"></i><br/>
                                <small>View All Rooms</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Campus/Index" class="btn btn-success btn-lg w-100">
                                <i class="bi bi-building"></i><br/>
                                <small>Manage Campuses</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-warning btn-lg w-100" disabled>
                                <i class="bi bi-file-earmark-text"></i><br/>
                                <small>Generate Report</small>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-xs {
        font-size: 0.7rem;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Room Type Distribution Chart
        @if (Model.RoomTypeDistribution.Any())
        {
            <text>
            const typeCtx = document.getElementById('roomTypeChart');
            new Chart(typeCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RoomTypeDistribution.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.RoomTypeDistribution.Values)),
                        backgroundColor: [
                            'rgba(78, 115, 223, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(54, 185, 204, 0.8)'
                        ],
                        borderColor: [
                            'rgba(78, 115, 223, 1)',
                            'rgba(28, 200, 138, 1)',
                            'rgba(54, 185, 204, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            </text>
        }

        // Rooms by Campus Chart
        @if (Model.RoomsByCampus.Any())
        {
            <text>
            const campusCtx = document.getElementById('roomsByCampusChart');
            new Chart(campusCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RoomsByCampus.Keys)),
                    datasets: [{
                        label: 'Number of Rooms',
                        data: @Html.Raw(Json.Serialize(Model.RoomsByCampus.Values)),
                        backgroundColor: 'rgba(78, 115, 223, 0.8)',
                        borderColor: 'rgba(78, 115, 223, 1)',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
