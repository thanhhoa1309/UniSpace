@page
@using UniSpace.BusinessObject.Enums
@model UniSpace.Presentation.Pages.Admin.Schedule.DetailsModel
@{
    ViewData["Title"] = "Schedule Details";
}

<style>
    /* Page Container */
    .details-page-container {
        min-height: 100vh;
        padding: 20px 0;
    }

    /* Glass Card */
    .glass-card {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        margin-bottom: 24px;
    }

    /* Breadcrumb Glass */
    .breadcrumb-glass {
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 10px;
        padding: 12px 20px;
    }

        .breadcrumb-glass .breadcrumb {
            margin-bottom: 0;
            background: transparent;
        }

        .breadcrumb-glass .breadcrumb-item a {
            color: #ff8a00;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .breadcrumb-glass .breadcrumb-item a:hover {
                color: #ffa500;
                text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
            }

        .breadcrumb-glass .breadcrumb-item.active {
            color: #e0e0e0;
        }

        .breadcrumb-glass .breadcrumb-item + .breadcrumb-item::before {
            color: #9ca3af;
        }

    /* Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    .text-muted-glass {
        color: #9ca3af;
    }

    .text-glass {
        color: #e0e0e0;
    }

    /* Alert Glass */
    .alert-glass-success {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #6ee7b7;
        margin-bottom: 20px;
    }

    .alert-glass-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fca5a5;
        margin-bottom: 20px;
    }

    .alert-glass-warning {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fbbf24;
        margin-bottom: 20px;
    }

    /* Card Header */
    .glass-card-header {
        background: rgba(255, 138, 0, 0.15);
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
        border-radius: 15px 15px 0 0;
        padding: 24px;
    }

    .glass-card-header-academic {
        background: rgba(59, 130, 246, 0.15);
        border-bottom: 2px solid rgba(59, 130, 246, 0.3);
    }

    .glass-card-header-maintenance {
        background: rgba(245, 158, 11, 0.15);
        border-bottom: 2px solid rgba(245, 158, 11, 0.3);
    }

    /* Card Body */
    .glass-card-body {
        padding: 24px;
        color: #e0e0e0;
    }

    /* Card Footer */
    .glass-card-footer {
        background: rgba(45, 45, 45, 0.3);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0 0 15px 15px;
        padding: 20px 24px;
    }

    /* Badges */
    .badge-glass-primary {
        background: rgba(255, 138, 0, 0.2);
        border: 1px solid rgba(255, 138, 0, 0.4);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-secondary {
        background: rgba(156, 163, 175, 0.2);
        border: 1px solid rgba(156, 163, 175, 0.4);
        color: #9ca3af;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-info {
        background: rgba(6, 182, 212, 0.2);
        border: 1px solid rgba(6, 182, 212, 0.4);
        color: #06b6d4;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-success {
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.4);
        color: #10b981;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-warning {
        background: rgba(245, 158, 11, 0.2);
        border: 1px solid rgba(245, 158, 11, 0.4);
        color: #f59e0b;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-danger {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.4);
        color: #ef4444;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    /* Buttons */
    .btn-neon-primary {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-neon-primary:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-secondary:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    .btn-glass-warning {
        background: rgba(245, 158, 11, 0.15);
        border: 2px solid rgba(245, 158, 11, 0.3);
        color: #fbbf24;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-warning:hover {
            background: rgba(245, 158, 11, 0.25);
            border-color: rgba(245, 158, 11, 0.5);
            color: #fcd34d;
            box-shadow: 0 0 20px rgba(245, 158, 11, 0.3);
        }

    .btn-glass-danger {
        background: rgba(239, 68, 68, 0.15);
        border: 2px solid rgba(239, 68, 68, 0.3);
        color: #f87171;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-danger:hover {
            background: rgba(239, 68, 68, 0.25);
            border-color: rgba(239, 68, 68, 0.5);
            color: #fca5a5;
            box-shadow: 0 0 20px rgba(239, 68, 68, 0.3);
        }

    .btn-glass-info {
        background: rgba(6, 182, 212, 0.15);
        border: 2px solid rgba(6, 182, 212, 0.3);
        color: #06b6d4;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-info:hover {
            background: rgba(6, 182, 212, 0.25);
            border-color: rgba(6, 182, 212, 0.5);
            color: #22d3ee;
            box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
        }

    /* Info Box */
    .info-box-glass {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 16px;
        margin-bottom: 16px;
        transition: all 0.3s ease;
    }

        .info-box-glass:hover {
            background: rgba(255, 138, 0, 0.05);
            border-color: rgba(255, 138, 0, 0.2);
        }

        .info-box-glass label {
            color: #9ca3af;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            display: block;
        }

        .info-box-glass p {
            color: #e0e0e0;
            margin-bottom: 0;
            font-size: 1rem;
        }

    /* Code styling */
    code {
        background: rgba(255, 138, 0, 0.1);
        border: 1px solid rgba(255, 138, 0, 0.3);
        padding: 4px 8px;
        border-radius: 6px;
        color: #ff8a00;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }

    /* Section Headers */
    .section-header-glass {
        color: #ff8a00;
        font-weight: 700;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
    }

    /* Divider */
    .divider-glass {
        border: none;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255, 138, 0, 0.3), transparent);
        margin: 24px 0;
    }

    /* Modal */
    .modal-content-glass {
        border: 1px solid rgba(255, 138, 0, 0.3);
        border-radius: 15px;
        color: #e0e0e0;
    }

    .modal-header-glass-danger {
        background: rgba(239, 68, 68, 0.15);
        border-bottom: 1px solid rgba(239, 68, 68, 0.3);
        padding: 20px 24px;
    }

    .modal-body-glass {
        padding: 24px;
        color: #e0e0e0;
    }

    .modal-footer-glass {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 24px;
    }

    /* Quick Actions */
    .quick-actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-card-header,
        .glass-card-body,
        .glass-card-footer {
            padding: 16px;
        }

        .quick-actions-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="details-page-container">
    <div class="container-fluid px-4">
        <!-- Breadcrumb -->
        <div class="breadcrumb-glass mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Admin/Dashboard">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="Index">Schedule Management</a>
                    </li>
                    <li class="breadcrumb-item active">@Model.Schedule?.Title</li>
                </ol>
            </nav>
        </div>

        <!-- Success/Error Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert-glass-success" role="alert">
                <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-glass-danger" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
            </div>
        }

        @if (Model.Schedule != null)
        {
            <!-- Main Details Card -->
            <div class="glass-card">
                <div class="glass-card-header @(Model.Schedule.ScheduleType == ScheduleType.Academic_Course ? "glass-card-header-academic" : "glass-card-header-maintenance")">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h4 class="neon-text" style="margin-bottom: 1rem !important">
                                <i class="bi @(Model.Schedule.ScheduleType == ScheduleType.Academic_Course ? "bi-book" : "bi-tools")"></i>
                                @Model.Schedule.Title
                            </h4>
                            <span class="badge-glass-@(Model.Schedule.ScheduleType == ScheduleType.Academic_Course ? "primary" : "warning")">
                                @Model.Schedule.ScheduleTypeDisplay
                            </span>
                        </div>
                        <div class="text-end">
                            <span class="badge-glass-info" style="font-size: 1.1em;">
                                <i class="bi bi-calendar3"></i> @Model.Schedule.DayOfWeekDisplay
                            </span>
                        </div>
                    </div>
                </div>
                <div class="glass-card-body">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-lg-6">
                            <h5 class="section-header-glass">
                                <i class="bi bi-info-circle"></i> Basic Information
                            </h5>

                            <div class="info-box-glass">
                                <label>SCHEDULE ID</label>
                                <p>
                                    <code>@Model.Schedule.Id</code>
                                </p>
                            </div>

                            <div class="info-box-glass">
                                <label>ROOM</label>
                                <p>
                                    <i class="bi bi-door-closed" style="color: #10b981;"></i>
                                    <strong>@Model.Schedule.RoomName</strong>
                                </p>
                            </div>

                            <div class="info-box-glass">
                                <label>CAMPUS</label>
                                <p>
                                    <i class="bi bi-building" style="color: #06b6d4;"></i>
                                    @Model.Schedule.CampusName
                                </p>
                            </div>

                            <div class="info-box-glass">
                                <label>DAY OF WEEK</label>
                                <p>
                                    <span class="badge-glass-info">
                                        @Model.Schedule.DayOfWeekDisplay
                                    </span>
                                </p>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-lg-6">
                            <h5 class="section-header-glass">
                                <i class="bi bi-clock"></i> Time & Duration
                            </h5>

                            <div class="info-box-glass">
                                <label>TIME RANGE</label>
                                <p>
                                    <i class="bi bi-clock"></i>
                                    <strong>@Model.Schedule.StartTime.ToString(@"hh\:mm")</strong>
                                    <i class="bi bi-arrow-right mx-2" style="color: #ff8a00;"></i>
                                    <strong>@Model.Schedule.EndTime.ToString(@"hh\:mm")</strong>
                                </p>
                                <small class="text-muted-glass">
                                    Duration: @((Model.Schedule.EndTime - Model.Schedule.StartTime).Hours) hours
                                    @((Model.Schedule.EndTime - Model.Schedule.StartTime).Minutes) minutes
                                </small>
                            </div>

                            <div class="info-box-glass">
                                <label>START DATE</label>
                                <p>
                                    <i class="bi bi-calendar-check" style="color: #10b981;"></i>
                                    @Model.Schedule.StartDate.ToString("MMMM dd, yyyy")
                                </p>
                            </div>

                            <div class="info-box-glass">
                                <label>END DATE</label>
                                <p>
                                    <i class="bi bi-calendar-x" style="color: #ef4444;"></i>
                                    @Model.Schedule.EndDate.ToString("MMMM dd, yyyy")
                                </p>
                            </div>

                            <div class="info-box-glass">
                                <label>TOTAL PERIOD</label>
                                <p>
                                    <span class="badge-glass-secondary">
                                        @((Model.Schedule.EndDate - Model.Schedule.StartDate).Days) days
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr class="divider-glass" />

                    <!-- Metadata -->
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted-glass">
                                <i class="bi bi-clock-history"></i> Created
                            </h6>
                            <p class="text-glass">
                                @Model.Schedule.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </p>
                        </div>
                        <div class="col-md-6 text-end" style="padding-top: 1.2%">
                            @{
                                var isActive = Model.Schedule.StartDate <= DateTime.UtcNow &&
                                Model.Schedule.EndDate >= DateTime.UtcNow;
                            }
                            <span class="badge-glass-@(isActive ? "success" : "secondary")" style="font-size: 1em;">
                                <i class="bi @(isActive ? "bi-check-circle" : "bi-dash-circle")"></i>
                                @(isActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="glass-card-footer">
                    <div class="d-flex gap-2 justify-content-between flex-wrap">
                        <a asp-page="Index" class="btn btn-glass-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-page="Edit" asp-route-id="@Model.Schedule.Id" class="btn btn-glass-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button type="button"
                                    class="btn btn-glass-danger"
                                    onclick="confirmDelete('@Model.Schedule.Id', '@Model.Schedule.Title')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Conflicting Schedules Warning -->
            @if (Model.ConflictingSchedules.Any())
            {
                <div class="alert-glass-warning">
                    <h5 class="mb-3">
                        <i class="bi bi-exclamation-triangle"></i> Potential Conflicts Detected
                    </h5>
                    <p class="text-glass">This schedule may conflict with the following schedule(s) in the same room:</p>
                    <ul class="mb-0">
                        @foreach (var conflict in Model.ConflictingSchedules)
                        {
                            <li class="mb-2">
                                <strong>@conflict.Title</strong> -
                                @conflict.DayOfWeekDisplay,
                                @conflict.StartTime.ToString(@"hh\:mm") - @conflict.EndTime.ToString(@"hh\:mm")
                                <a asp-page="Details" asp-route-id="@conflict.Id" class="btn btn-glass-warning btn-sm ms-2">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }

            <!-- Quick Actions Card -->
            <div class="glass-card">
                <div class="glass-card-header">
                    <h5 class="mb-0 neon-text">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="glass-card-body">
                    <div class="quick-actions-grid">
                        <a asp-page="Create"
                           asp-route-roomId="@Model.Schedule.RoomId"
                           class="btn btn-neon-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Create Similar Schedule
                        </a>
                        <a asp-page="Index"
                           asp-route-roomId="@Model.Schedule.RoomId"
                           class="btn btn-glass-info">
                            <i class="bi bi-list me-2"></i>
                            View Room Schedules
                        </a>
                        <a asp-page="Dashboard" class="btn btn-glass-secondary">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content-glass">
            <div class="modal-header-glass-danger d-flex justify-content-between align-items-center">
                <h5 class="modal-title mb-0" style="color: #f87171;">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: brightness(0) invert(1);"></button>
            </div>
            <div class="modal-body-glass">
                <p>Are you sure you want to delete this schedule?</p>
                <div class="alert-glass-danger">
                    <strong id="scheduleTitle"></strong>
                </div>
                <p class="mb-0"><small class="text-muted-glass">This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer-glass">
                <button type="button" class="btn btn-glass-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm" class="d-inline">
                    <input type="hidden" name="id" id="deleteScheduleId" />
                    <button type="submit" class="btn btn-glass-danger">
                        <i class="bi bi-trash me-1"></i>Delete Schedule
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            document.getElementById('deleteScheduleId').value = id;
            document.getElementById('scheduleTitle').textContent = title;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Auto-dismiss alerts after 5 seconds
        window.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var alerts = document.querySelectorAll('[class*="alert-glass"]');
                alerts.forEach(function(alert) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}