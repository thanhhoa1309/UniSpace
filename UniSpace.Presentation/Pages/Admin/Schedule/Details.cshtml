@page
@using UniSpace.BusinessObject.Enums
@model UniSpace.Presentation.Pages.Admin.Schedule.DetailsModel
@{
    ViewData["Title"] = "Schedule Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Admin/Dashboard">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="Index">Schedule Management</a>
                    </li>
                    <li class="breadcrumb-item active">@Model.Schedule?.Title</li>
                </ol>
            </nav>

            <!-- Success/Error Messages -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Schedule != null)
            {
                <!-- Main Details Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header @(Model.Schedule.ScheduleType == ScheduleType.Academic_Course ? "bg-primary" : "bg-warning") text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-1">
                                    <i class="bi @(Model.Schedule.ScheduleType == ScheduleType.Academic_Course ? "bi-book" : "bi-tools")"></i>
                                    @Model.Schedule.Title
                                </h4>
                                <p class="mb-0">
                                    <span class="badge bg-light text-dark">
                                        @Model.Schedule.ScheduleTypeDisplay
                                    </span>
                                </p>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-light text-dark" style="font-size: 1em;">
                                    <i class="bi bi-calendar3"></i> @Model.Schedule.DayOfWeekDisplay
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <h5 class="mb-3">
                                    <i class="bi bi-info-circle text-primary"></i> Basic Information
                                </h5>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">SCHEDULE ID</label>
                                    <p class="mb-0">
                                        <code>@Model.Schedule.Id</code>
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">ROOM</label>
                                    <p class="mb-0">
                                        <i class="bi bi-door-closed text-success"></i>
                                        <strong>@Model.Schedule.RoomName</strong>
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">CAMPUS</label>
                                    <p class="mb-0">
                                        <i class="bi bi-building text-info"></i>
                                        @Model.Schedule.CampusName
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">DAY OF WEEK</label>
                                    <p class="mb-0">
                                        <span class="badge bg-info">
                                            @Model.Schedule.DayOfWeekDisplay
                                        </span>
                                    </p>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <h5 class="mb-3">
                                    <i class="bi bi-clock text-warning"></i> Time & Duration
                                </h5>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">TIME RANGE</label>
                                    <p class="mb-0">
                                        <i class="bi bi-clock"></i>
                                        <strong>@Model.Schedule.StartTime.ToString(@"hh\:mm")</strong>
                                        <i class="bi bi-arrow-right mx-2"></i>
                                        <strong>@Model.Schedule.EndTime.ToString(@"hh\:mm")</strong>
                                    </p>
                                    <small class="text-muted">
                                        Duration: @((Model.Schedule.EndTime - Model.Schedule.StartTime).Hours) hours 
                                        @((Model.Schedule.EndTime - Model.Schedule.StartTime).Minutes) minutes
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">START DATE</label>
                                    <p class="mb-0">
                                        <i class="bi bi-calendar-check text-success"></i>
                                        @Model.Schedule.StartDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">END DATE</label>
                                    <p class="mb-0">
                                        <i class="bi bi-calendar-x text-danger"></i>
                                        @Model.Schedule.EndDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">TOTAL PERIOD</label>
                                    <p class="mb-0">
                                        <span class="badge bg-secondary">
                                            @((Model.Schedule.EndDate - Model.Schedule.StartDate).Days) days
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Metadata -->
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">
                                    <i class="bi bi-clock-history"></i> Created
                                </h6>
                                <p class="mb-2">
                                    @Model.Schedule.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                </p>
                            </div>
                            <div class="col-md-6 text-end">
                                @{
                                    var isActive = Model.Schedule.StartDate <= DateTime.UtcNow && 
                                                   Model.Schedule.EndDate >= DateTime.UtcNow;
                                }
                                <span class="badge @(isActive ? "bg-success" : "bg-secondary")" style="font-size: 1em;">
                                    <i class="bi @(isActive ? "bi-check-circle" : "bi-dash-circle")"></i>
                                    @(isActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-page="Edit" asp-route-id="@Model.Schedule.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button type="button" 
                                        class="btn btn-danger" 
                                        onclick="confirmDelete('@Model.Schedule.Id', '@Model.Schedule.Title')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Conflicting Schedules Warning -->
                @if (Model.ConflictingSchedules.Any())
                {
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i> Potential Conflicts Detected
                        </h5>
                        <p>This schedule may conflict with the following schedule(s) in the same room:</p>
                        <ul class="mb-0">
                            @foreach (var conflict in Model.ConflictingSchedules)
                            {
                                <li>
                                    <strong>@conflict.Title</strong> - 
                                    @conflict.DayOfWeekDisplay, 
                                    @conflict.StartTime.ToString(@"hh\:mm") - @conflict.EndTime.ToString(@"hh\:mm")
                                    <a asp-page="Details" asp-route-id="@conflict.Id" class="btn btn-sm btn-outline-warning ms-2">
                                        View
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }

                <!-- Quick Actions Card -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-lightning"></i> Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a asp-page="Create" 
                                       asp-route-roomId="@Model.Schedule.RoomId"
                                       class="btn btn-outline-primary">
                                        <i class="bi bi-plus-circle me-2"></i>
                                        Create Similar Schedule
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a asp-page="Index" 
                                       asp-route-roomId="@Model.Schedule.RoomId"
                                       class="btn btn-outline-info">
                                        <i class="bi bi-list me-2"></i>
                                        View Room Schedules
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-grid">
                                    <a asp-page="Dashboard" class="btn btn-outline-secondary">
                                        <i class="bi bi-speedometer2 me-2"></i>
                                        Go to Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this schedule?</p>
                <div class="alert alert-warning">
                    <strong id="scheduleTitle"></strong>
                </div>
                <p class="mb-0"><small class="text-muted">This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <input type="hidden" name="id" id="deleteScheduleId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Schedule
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            document.getElementById('deleteScheduleId').value = id;
            document.getElementById('scheduleTitle').textContent = title;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Auto-dismiss alerts after 5 seconds
        window.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert-dismissible');
                alerts.forEach(function(alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-2px);
        }

        code {
            background-color: #f8f9fa;
            padding: 0.2rem 0.4rem;
            border-radius: 0.25rem;
            color: #d63384;
        }

        .badge {
            font-weight: 500;
        }
    </style>
}
