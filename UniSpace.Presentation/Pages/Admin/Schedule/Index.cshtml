@page
@using UniSpace.BusinessObject.Enums
@model UniSpace.Presentation.Pages.Admin.Schedule.IndexModel
@{
    ViewData["Title"] = "Schedule Management";
}

<style>
    /* Page Container */
    .index-page-container {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        min-height: 100vh;
        padding: 20px 0;
        position: relative;
    }

    /* Glass Card Header */
    .glass-card-header {
        background: rgba(45, 45, 45, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        padding: 24px;
        transition: all 0.3s ease;
        position: relative;
    }

        .glass-card-header:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    .text-muted-glass {
        color: #9ca3af;
    }

    /* Search Filter Card */
    .search-filter-card {
        background: rgba(45, 45, 45, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        position: relative;
    }

    .search-filter-header {
        background: rgba(255, 138, 0, 0.1);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 15px 20px;
    }

    .search-filter-body {
        padding: 24px;
    }

    /* Form Controls */
    .form-label-glass {
        color: #e0e0e0;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-control-glass,
    .form-select-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 10px 14px;
        transition: all 0.3s ease;
    }

        .form-control-glass::placeholder {
            color: #6b7280;
        }

        .form-control-glass:focus,
        .form-select-glass:focus {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 138, 0, 0.6);
            outline: none;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.2);
            color: #ffffff;
        }

        .form-select-glass option {
            background: #2d2d2d;
            color: #ffffff;
        }

    /* Buttons */
    .btn-neon-primary {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-neon-primary:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-secondary:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    .btn-glass-info {
        background: rgba(6, 182, 212, 0.15);
        border: 2px solid rgba(6, 182, 212, 0.3);
        color: #06b6d4;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-info:hover {
            background: rgba(6, 182, 212, 0.25);
            border-color: rgba(6, 182, 212, 0.5);
            color: #22d3ee;
            box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
        }

    /* Table Card */
    .table-card-glass {
        background: rgba(45, 45, 45, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .table-header-glass {
        background: rgba(255, 138, 0, 0.15);
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
        padding: 20px 24px;
    }

    .badge-count {
        background: rgba(255, 255, 255, 0.1);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        border: 1px solid rgba(255, 138, 0, 0.3);
    }

    /* Table Styles */
    .table-glass {
        color: #e0e0e0;
        margin-bottom: 0;
    }

        .table-glass thead th {
            background: rgba(255, 138, 0, 0.1);
            color: #ff8a00;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(255, 138, 0, 0.3);
            padding: 16px 12px;
        }

        .table-glass tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .table-glass tbody tr:hover {
                background: rgba(255, 138, 0, 0.05);
            }

        .table-glass tbody td {
            padding: 16px 12px;
            vertical-align: middle;
        }

    /* Badges */
    .badge-neon {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        color: #fff;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 0 15px rgba(255, 138, 0, 0.5);
    }

    .badge-glass-success {
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.4);
        color: #10b981;
    }

    .badge-glass-danger {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.4);
        color: #f87171;
    }

    .badge-glass-info {
        background: rgba(6, 182, 212, 0.2);
        border: 1px solid rgba(6, 182, 212, 0.4);
        color: #06b6d4;
    }

    .badge-glass-warning {
        background: rgba(245, 158, 11, 0.2);
        border: 1px solid rgba(245, 158, 11, 0.4);
        color: #f59e0b;
    }

    /* Action Buttons */
    .btn-action-glass {
        padding: 6px 12px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.875rem;
    }

    .btn-action-info {
        background: rgba(59, 130, 246, 0.2);
        color: #60a5fa;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

        .btn-action-info:hover {
            background: rgba(59, 130, 246, 0.3);
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
        }

    .btn-action-warning {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
        border: 1px solid rgba(251, 191, 36, 0.3);
    }

        .btn-action-warning:hover {
            background: rgba(251, 191, 36, 0.3);
            box-shadow: 0 0 15px rgba(251, 191, 36, 0.4);
        }

    .btn-action-danger {
        background: rgba(239, 68, 68, 0.2);
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

        .btn-action-danger:hover {
            background: rgba(239, 68, 68, 0.3);
            box-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
        }

    /* Alerts */
    .alert-glass-success {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #6ee7b7;
        position: relative;
        z-index: 1;
    }

    .alert-glass-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fca5a5;
        position: relative;
        z-index: 1;
    }

    /* Modal - Critical z-index fix */
    .modal {
        z-index: 9999 !important;
    }

    .modal-backdrop {
        z-index: 9998 !important;
    }

    .modal-content-glass {
        background: rgba(35, 35, 35, 0.98);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 138, 0, 0.3);
        border-radius: 15px;
        position: relative;
        z-index: 10000;
    }

    .modal-header-glass-danger {
        background: rgba(239, 68, 68, 0.15);
        border-bottom: 1px solid rgba(239, 68, 68, 0.3);
        padding: 20px 24px;
    }

    .modal-body-glass {
        padding: 24px;
        color: #e0e0e0;
    }

    .modal-footer-glass {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 24px;
    }

    /* Empty State */
    .empty-state-glass {
        text-align: center;
        padding: 80px 40px;
        color: #9ca3af;
    }

    /* Pagination Styles */
    .pagination-glass {
        display: flex;
        gap: 8px;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .page-item.active .page-link-glass {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border-color: #ff8a00;
        color: #fff;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.5);
    }

    .page-item.disabled .page-link-glass {
        background: rgba(255, 255, 255, 0.02);
        border-color: rgba(255, 255, 255, 0.1);
        color: #6b7280;
        cursor: not-allowed;
        pointer-events: none;
    }

    .page-link-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 8px 14px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        min-width: 40px;
        text-align: center;
    }

        .page-link-glass:hover:not(.page-item.disabled .page-link-glass) {
            background: rgba(255, 138, 0, 0.2);
            border-color: rgba(255, 138, 0, 0.4);
            color: #ff8a00;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.3);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-card-header,
        .search-filter-body {
            padding: 20px;
        }

        .table-header-glass {
            padding: 16px 20px;
        }
    }
</style>

<div class="index-page-container">
    <div class="container-fluid mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="glass-card-header">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h2 class="neon-text mb-2">
                                <i class="bi bi-calendar-week"></i> Schedule Management
                            </h2>
                            <p class="text-muted-glass mb-0">Manage room schedules and availability</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-page="Dashboard" class="btn btn-glass-info btn-lg">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                            <a asp-page="Create" class="btn btn-neon-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Create Schedule
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alerts -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert-glass-success mb-4" role="alert">
                <i class="bi bi-check-circle me-2"></i> @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-glass-danger mb-4" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
            </div>
        }

        <!-- Search and Filter Section -->
        <div class="search-filter-card mb-4">
            <div class="search-filter-header">
                <h5 class="mb-0 neon-text">
                    <i class="bi bi-funnel"></i> Search & Filter
                </h5>
            </div>
            <div class="search-filter-body">
                <form method="get">
                    <div class="d-flex justify-content-evenly align-items-end gap-3">
                        <!-- Search Bar -->
                        <div style="flex">
                            <label class="form-label-glass">
                                <i class="bi bi-search"></i> Search
                            </label>
                            <input type="text" name="search" class="form-control-glass"
                                   placeholder="Title, room, or campus..."
                                   value="@Model.SearchTerm" />
                        </div>

                        <!-- Room Filter -->
                        <div style="flex">
                            <label class="form-label-glass">
                                <i class="bi bi-door-closed"></i> Room
                            </label>
                            <select name="roomId" class="form-select-glass">
                                @foreach (var option in Model.RoomOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">
                                        @option.Text
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Type Filter -->
                        <div style="flex">
                            <label class="form-label-glass">
                                <i class="bi bi-tag"></i> Type
                            </label>
                            <select name="type" class="form-select-glass">
                                <option value="">All Types</option>
                                <option value="@ScheduleType.Academic_Course"
                                        selected="@(Model.FilterType == ScheduleType.Academic_Course)">
                                    Academic Course
                                </option>
                                <option value="@ScheduleType.Recurring_Maintenance"
                                        selected="@(Model.FilterType == ScheduleType.Recurring_Maintenance)">
                                    Maintenance
                                </option>
                            </select>
                        </div>

                        <!-- Day Filter -->
                        <div style="flex">
                            <label class="form-label-glass">
                                <i class="bi bi-calendar3"></i> Day
                            </label>
                            <select name="day" class="form-select-glass">
                                <option value="">All Days</option>
                                <option value="0" selected="@(Model.FilterDay == 0)">Sunday</option>
                                <option value="1" selected="@(Model.FilterDay == 1)">Monday</option>
                                <option value="2" selected="@(Model.FilterDay == 2)">Tuesday</option>
                                <option value="3" selected="@(Model.FilterDay == 3)">Wednesday</option>
                                <option value="4" selected="@(Model.FilterDay == 4)">Thursday</option>
                                <option value="5" selected="@(Model.FilterDay == 5)">Friday</option>
                                <option value="6" selected="@(Model.FilterDay == 6)">Saturday</option>
                            </select>
                        </div>

                        <!-- Action Button -->
                        <div style="align-self: flex-end">
                            <button type="submit" class="btn btn-neon-primary" style="padding: 10px 30px; white-space: nowrap;">
                                <i class="bi bi-search"></i> Filter
                            </button>
                        </div>
                    </div>

                    <!-- Clear Filters Button -->
                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.FilterRoomId.HasValue ||
                                        Model.FilterType.HasValue || Model.FilterDay.HasValue)
                    {
                        <div class="text-end mt-3">
                            <a asp-page="Index" class="btn btn-glass-secondary">
                                <i class="bi bi-x-circle"></i>
                            </a>
                        </div>
                    }
                </form>
            </div>
        </div>

        <!-- Schedules Table -->
        <div class="row">
            <div class="col-md-12">
                <div class="table-card-glass">
                    <div class="table-header-glass">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <h5 class="mb-0 neon-text">
                                <i class="bi bi-list-ul"></i> Schedule List
                                <span class="badge-count ms-2">@Model.Schedules.Count</span>
                            </h5>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.Schedules.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-glass">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%">#</th>
                                            <th style="width: 20%">
                                                <i class="bi bi-card-text me-1"></i> Title
                                            </th>
                                            <th style="width: 15%">
                                                <i class="bi bi-door-closed me-1"></i> Room
                                            </th>
                                            <th style="width: 12%">
                                                <i class="bi bi-tag me-1"></i> Type
                                            </th>
                                            <th style="width: 10%">
                                                <i class="bi bi-calendar3 me-1"></i> Day
                                            </th>
                                            <th style="width: 13%">
                                                <i class="bi bi-clock me-1"></i> Time
                                            </th>
                                            <th style="width: 13%">
                                                <i class="bi bi-calendar-range me-1"></i> Period
                                            </th>
                                            <th style="width: 12%" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Schedules.Count; i++)
                                        {
                                            var schedule = Model.Schedules[i];
                                            var typeBadge = schedule.ScheduleType == ScheduleType.Academic_Course
                                            ? "badge-neon" : "badge-glass-warning";

                                            <tr>
                                                <td><strong class="neon-text">@(i + 1)</strong></td>
                                                <td>
                                                    <strong class="neon-text">@schedule.Title</strong>
                                                    <br />
                                                    <small class="text-muted-glass">
                                                        <i class="bi bi-building"></i> @schedule.CampusName
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge badge-glass-info">
                                                        @schedule.RoomName
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge @typeBadge">
                                                        @if (schedule.ScheduleType == ScheduleType.Academic_Course)
                                                        {
                                                            <i class="bi bi-book me-1"></i>
                                                
                                                            <text>Academic</text>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-tools me-1"></i>
                                                
                                                            <text>Maintenance</text>
                                                        }
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge badge-glass-info">
                                                        @schedule.DayOfWeekDisplay
                                                    </span>
                                                </td>
                                                <td>
                                                    <small style="color: #d1d5db;">
                                                        @schedule.StartTime.ToString(@"hh\:mm") -
                                                        @schedule.EndTime.ToString(@"hh\:mm")
                                                    </small>
                                                </td>
                                                <td>
                                                    <small style="color: #d1d5db;">
                                                        @schedule.StartDate.ToString("MMM dd") -
                                                        @schedule.EndDate.ToString("MMM dd")
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-2 justify-content-center">
                                                        <a asp-page="Details" asp-route-id="@schedule.Id"
                                                           class="btn btn-action-glass btn-action-info" title="View Details">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a asp-page="Edit" asp-route-id="@schedule.Id"
                                                           class="btn btn-action-glass btn-action-warning" title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-action-glass btn-action-danger"
                                                                onclick="confirmDelete('@schedule.Id', '@schedule.Title')"
                                                                title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state-glass">
                                <i class="bi bi-calendar-x" style="font-size: 5rem;"></i>
                                <h4 class="mt-3">
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.FilterRoomId.HasValue ||
                                                                    Model.FilterType.HasValue || Model.FilterDay.HasValue)
                                    {
                                        <text>No schedules found matching your filters</text>
                                    }
                                    else
                                    {
                                        <text>No schedules available</text>
                                    }
                                </h4>
                                @if (string.IsNullOrEmpty(Model.SearchTerm) && !Model.FilterRoomId.HasValue)
                                {
                                    <p>Get started by creating your first schedule</p>
                                    <a asp-page="Create" class="btn btn-neon-primary btn-lg mt-3">
                                        <i class="bi bi-plus-circle"></i> Create First Schedule
                                    </a>
                                }
                                else
                                {
                                    <a asp-page="Index" class="btn btn-glass-secondary mt-3">
                                        <i class="bi bi-x-circle"></i> Clear Filters
                                    </a>
                                }
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (Model.Schedules.TotalPages > 1)
                    {
                        <div class="table-header-glass mt-3">
                            <nav aria-label="Schedule pagination">
                                <ul class="pagination pagination-glass mb-0 justify-content-center">
                                    <!-- First Page -->
                                    <li class="page-item @(Model.Schedules.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link-glass"
                                           asp-page="Index"
                                           asp-route-pageNumber="1"
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-roomId="@Model.FilterRoomId"
                                           asp-route-type="@Model.FilterType"
                                           asp-route-day="@Model.FilterDay"
                                           aria-label="First">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>

                                    <!-- Previous Page -->
                                    <li class="page-item @(Model.Schedules.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link-glass"
                                           asp-page="Index"
                                           asp-route-pageNumber="@(Model.Schedules.CurrentPage - 1)"
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-roomId="@Model.FilterRoomId"
                                           asp-route-type="@Model.FilterType"
                                           asp-route-day="@Model.FilterDay"
                                           aria-label="Previous">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>

                                    <!-- Page Numbers -->
                                    @{
                                        var startPage = Math.Max(1, Model.Schedules.CurrentPage - 2);
                                        var endPage = Math.Min(Model.Schedules.TotalPages, Model.Schedules.CurrentPage + 2);

                                        if (endPage - startPage < 4)
                                        {
                                            if (startPage == 1)
                                            {
                                                endPage = Math.Min(Model.Schedules.TotalPages, startPage + 4);
                                            }
                                            else if (endPage == Model.Schedules.TotalPages)
                                            {
                                                startPage = Math.Max(1, endPage - 4);
                                            }
                                        }

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == Model.Schedules.CurrentPage ? "active" : "")">
                                                <a class="page-link-glass"
                                                   asp-page="Index"
                                                   asp-route-pageNumber="@i"
                                                   asp-route-search="@Model.SearchTerm"
                                                   asp-route-roomId="@Model.FilterRoomId"
                                                   asp-route-type="@Model.FilterType"
                                                   asp-route-day="@Model.FilterDay">
                                                    @i
                                                </a>
                                            </li>
                                        }
                                    }

                                    <!-- Next Page -->
                                    <li class="page-item @(Model.Schedules.CurrentPage == Model.Schedules.TotalPages ? "disabled" : "")">
                                        <a class="page-link-glass"
                                           asp-page="Index"
                                           asp-route-pageNumber="@(Model.Schedules.CurrentPage + 1)"
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-roomId="@Model.FilterRoomId"
                                           asp-route-type="@Model.FilterType"
                                           asp-route-day="@Model.FilterDay"
                                           aria-label="Next">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>

                                    <!-- Last Page -->
                                    <li class="page-item @(Model.Schedules.CurrentPage == Model.Schedules.TotalPages ? "disabled" : "")">
                                        <a class="page-link-glass"
                                           asp-page="Index"
                                           asp-route-pageNumber="@Model.Schedules.TotalPages"
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-roomId="@Model.FilterRoomId"
                                           asp-route-type="@Model.FilterType"
                                           asp-route-day="@Model.FilterDay"
                                           aria-label="Last">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true" data-bs-backdrop="true" data-bs-keyboard="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-content-glass">
            <div class="modal-header modal-header-glass-danger">
                <h5 class="modal-title" id="deleteModalLabel" style="color: #f87171;">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body modal-body-glass">
                <p class="mb-3">
                    Are you sure you want to delete schedule <strong id="scheduleTitle" style="color: #f87171;"></strong>?
                </p>
                <div class="alert-glass-danger">
                    <i class="bi bi-info-circle"></i>
                    <small>This action cannot be undone.</small>
                </div>
            </div>
            <div class="modal-footer modal-footer-glass">
                <button type="button" class="btn btn-glass-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form method="post" asp-page-handler="Delete" class="d-inline" id="deleteForm">
                    <input type="hidden" name="id" id="deleteScheduleId" />
                    <button type="submit" class="btn btn-neon-primary" style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); border-color: #dc2626;">
                        <i class="bi bi-trash"></i> Delete Schedule
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Store modal instance globally
        let deleteModalInstance = null;

        // Initialize modal once when page loads
        window.addEventListener('DOMContentLoaded', function() {
            const deleteModalElement = document.getElementById('deleteModal');
            if (deleteModalElement) {
                deleteModalInstance = new bootstrap.Modal(deleteModalElement);
            }

            // Auto-hide alerts
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert-glass-success:not(.modal .alert-glass-success), .alert-glass-danger:not(.modal .alert-glass-danger)');
                alerts.forEach(function(alert) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                    bsAlert.close();
                });
            }, 5000);
        });

        // Delete confirmation
        function confirmDelete(scheduleId, scheduleTitle) {
            document.getElementById('deleteScheduleId').value = scheduleId;
            document.getElementById('scheduleTitle').textContent = scheduleTitle;

            if (deleteModalInstance) {
                deleteModalInstance.show();
            }
        }
    </script>
}