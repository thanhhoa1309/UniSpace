@page
@using UniSpace.BusinessObject.Enums
@model UniSpace.Presentation.Pages.Admin.Schedule.IndexModel
@{
    ViewData["Title"] = "Schedule Management";
}

<style>
    /* Page Container */
    .index-page-container {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    /* Glass Card Header */
    .glass-card-header {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        padding: 24px;
        transition: all 0.3s ease;
        margin-bottom: 24px;
    }

        .glass-card-header:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    .text-muted-glass {
        color: #9ca3af;
    }

    /* Alert Glass */
    .alert-glass-success {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #6ee7b7;
        margin-bottom: 20px;
    }

    .alert-glass-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fca5a5;
        margin-bottom: 20px;
    }

    /* Filter Card */
    .filter-card-glass {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        margin-bottom: 24px;
    }

    .filter-card-header {
        background: rgba(255, 138, 0, 0.1);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 15px 20px;
    }

    .filter-card-body {
        padding: 24px;
    }

    /* Form Controls */
    .form-label-glass {
        color: #e0e0e0;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-control-glass,
    .form-select-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 10px 14px;
        transition: all 0.3s ease;
    }

        .form-control-glass::placeholder {
            color: #6b7280;
        }

        .form-control-glass:focus,
        .form-select-glass:focus {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 138, 0, 0.6);
            outline: none;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.2);
            color: #ffffff;
        }

        .form-select-glass option {
            background: rgba(45, 45, 45, 0.95);
            color: #ffffff;
            padding: 8px;
            border: none;
            outline: none;
        }

            .form-select-glass option:hover,
            .form-select-glass option:checked {
                background: rgba(255, 138, 0, 0.2);
                color: #ff8a00;
                border: none;
            }

    /* Buttons */
    .btn-neon-primary {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-neon-primary:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-secondary:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    .btn-glass-info {
        background: rgba(6, 182, 212, 0.15);
        border: 2px solid rgba(6, 182, 212, 0.3);
        color: #06b6d4;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-info:hover {
            background: rgba(6, 182, 212, 0.25);
            border-color: rgba(6, 182, 212, 0.5);
            color: #22d3ee;
            box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
        }

    /* Table Card */
    .table-card-glass {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
    }

    .table-header-glass {
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
        padding: 20px 24px;
    }

    .badge-count {
        background: rgba(255, 255, 255, 0.1);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        border: 1px solid rgba(255, 138, 0, 0.3);
    }

    /* Table Styles */
    .table-glass {
        color: #e0e0e0;
        margin-bottom: 0;
    }

        .table-glass thead th {
            background: rgba(255, 138, 0, 0.1);
            color: #ff8a00;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(255, 138, 0, 0.3);
            padding: 16px 12px;
        }

        .table-glass tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .table-glass tbody tr:hover {
                background: rgba(255, 138, 0, 0.05);
            }

        .table-glass tbody td {
            padding: 16px 12px;
            vertical-align: middle;
        }

    /* Badges */
    .badge-glass-primary {
        background: rgba(255, 138, 0, 0.2);
        border: 1px solid rgba(255, 138, 0, 0.4);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-secondary {
        background: rgba(156, 163, 175, 0.2);
        border: 1px solid rgba(156, 163, 175, 0.4);
        color: #9ca3af;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-info {
        background: rgba(6, 182, 212, 0.2);
        border: 1px solid rgba(6, 182, 212, 0.4);
        color: #06b6d4;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-warning {
        background: rgba(245, 158, 11, 0.2);
        border: 1px solid rgba(245, 158, 11, 0.4);
        color: #f59e0b;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    /* Action Buttons */
    .btn-action-glass {
        padding: 6px 12px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.875rem;
    }

    .btn-action-info {
        background: rgba(59, 130, 246, 0.2);
        color: #60a5fa;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

        .btn-action-info:hover {
            background: rgba(59, 130, 246, 0.3);
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
        }

    .btn-action-warning {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
        border: 1px solid rgba(251, 191, 36, 0.3);
    }

        .btn-action-warning:hover {
            background: rgba(251, 191, 36, 0.3);
            box-shadow: 0 0 15px rgba(251, 191, 36, 0.4);
        }

    .btn-action-danger {
        background: rgba(239, 68, 68, 0.2);
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

        .btn-action-danger:hover {
            background: rgba(239, 68, 68, 0.3);
            box-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
        }

    /* Modal */
    .modal-content-glass {
        border: 1px solid rgba(255, 138, 0, 0.3);
        border-radius: 15px;
    }

    .modal-header-glass-danger {
        background: rgba(239, 68, 68, 0.15);
        border-bottom: 1px solid rgba(239, 68, 68, 0.3);
        padding: 20px 24px;
    }

    .modal-body-glass {
        padding: 24px;
        color: #e0e0e0;
    }

    .modal-footer-glass {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 24px;
    }

    /* Empty State */
    .empty-state-glass {
        text-align: center;
        padding: 80px 40px;
        color: #9ca3af;
    }

    /* Pagination */
    .pagination-glass {
        display: flex;
        gap: 8px;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .page-item.active .page-link-glass {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border-color: #ff8a00;
        color: #fff;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.5);
    }

    .page-item.disabled .page-link-glass {
        background: rgba(255, 255, 255, 0.02);
        border-color: rgba(255, 255, 255, 0.1);
        color: #6b7280;
        cursor: not-allowed;
        pointer-events: none;
    }

    .page-link-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 8px 14px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        min-width: 40px;
        text-align: center;
    }

        .page-link-glass:hover:not(.page-item.disabled .page-link-glass) {
            background: rgba(255, 138, 0, 0.2);
            border-color: rgba(255, 138, 0, 0.4);
            color: #ff8a00;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.3);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-card-header,
        .filter-card-body {
            padding: 20px;
        }

        .table-header-glass {
            padding: 16px 20px;
        }
    }
</style>

<div class="index-page-container">
    <div class="container-fluid px-4">
        <!-- Header -->
        <div class="glass-card-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="neon-text mb-2">
                        <i class="bi bi-calendar-week"></i> Schedule Management
                    </h2>
                    <p class="text-muted-glass mb-0">Manage room schedules and availability</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-page="Dashboard" class="btn btn-glass-info">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a asp-page="Create" class="btn btn-neon-primary">
                        <i class="bi bi-plus-circle"></i> Create Schedule
                    </a>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert-glass-success" role="alert">
                <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-glass-danger" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
            </div>
        }

        <!-- Filter Card -->
        <div class="filter-card-glass">
            <div class="filter-card-header">
                <h5 class="mb-0 neon-text">
                    <i class="bi bi-funnel"></i> Filter Schedules
                </h5>
            </div>
            <div class="filter-card-body">
                <form method="get">
                    <div class="d-flex justify-content-evenly align-items-end flex-wrap gap-3">
                        <!-- Search -->
                        <div class="flex-fill" style="min-width: 200px;">
                            <label class="form-label-glass">
                                <i class="bi bi-search"></i> Search
                            </label>
                            <input type="text"
                                   name="search"
                                   class="form-control-glass"
                                   placeholder="Title, room, or campus..."
                                   value="@Model.SearchTerm" />
                        </div>

                        <!-- Room Filter -->
                        <div class="flex-fill" style="min-width: 200px;">
                            <label class="form-label-glass">
                                <i class="bi bi-door-closed"></i> Room
                            </label>
                            <select name="roomId" class="form-select-glass">
                                @foreach (var option in Model.RoomOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">
                                        @option.Text
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Type Filter -->
                        <div class="flex-fill" style="min-width: 150px;">
                            <label class="form-label-glass">
                                <i class="bi bi-tag"></i> Type
                            </label>
                            <select name="type" class="form-select-glass">
                                <option value="">All Types</option>
                                <option value="@ScheduleType.Academic_Course"
                                        selected="@(Model.FilterType == ScheduleType.Academic_Course)">
                                    Academic Course
                                </option>
                                <option value="@ScheduleType.Recurring_Maintenance"
                                        selected="@(Model.FilterType == ScheduleType.Recurring_Maintenance)">
                                    Maintenance
                                </option>
                            </select>
                        </div>

                        <!-- Day Filter -->
                        <div class="flex-fill" style="min-width: 150px;">
                            <label class="form-label-glass">
                                <i class="bi bi-calendar3"></i> Day
                            </label>
                            <select name="day" class="form-select-glass">
                                <option value="">All Days</option>
                                <option value="0" selected="@(Model.FilterDay == 0)">Sunday</option>
                                <option value="1" selected="@(Model.FilterDay == 1)">Monday</option>
                                <option value="2" selected="@(Model.FilterDay == 2)">Tuesday</option>
                                <option value="3" selected="@(Model.FilterDay == 3)">Wednesday</option>
                                <option value="4" selected="@(Model.FilterDay == 4)">Thursday</option>
                                <option value="5" selected="@(Model.FilterDay == 5)">Friday</option>
                                <option value="6" selected="@(Model.FilterDay == 6)">Saturday</option>
                            </select>
                        </div>

                        <!-- Actions -->
                        <div style="min-width: 150px;">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-neon-primary flex-fill">
                                    <i class="bi bi-search"></i> Filter
                                </button>
                                <a asp-page="Index" class="btn btn-glass-secondary">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Schedules Table Card -->
        <div class="table-card-glass">
            <div class="table-header-glass">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <h5 class="mb-0 neon-text">
                            <i class="bi bi-list-ul"></i> Schedules
                        </h5>
                        <small class="text-muted-glass">
                            Showing @Model.Schedules.Count of @Model.Schedules.TotalCount schedules
                        </small>
                    </div>
                    <div>
                        <span class="badge-count">
                            Page @Model.Schedules.CurrentPage of @Model.Schedules.TotalPages
                        </span>
                    </div>
                </div>
            </div>
            <div class="p-0">
                @if (Model.Schedules.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-glass">
                            <thead>
                                <tr>
                                    <th width="250">
                                        <i class="bi bi-card-text me-1"></i>Title
                                    </th>
                                    <th width="180">
                                        <i class="bi bi-door-closed me-1"></i>Room
                                    </th>
                                    <th width="120">
                                        <i class="bi bi-tag me-1"></i>Type
                                    </th>
                                    <th width="100">
                                        <i class="bi bi-calendar3 me-1"></i>Day
                                    </th>
                                    <th width="120">
                                        <i class="bi bi-clock me-1"></i>Time
                                    </th>
                                    <th width="130">
                                        <i class="bi bi-calendar-range me-1"></i>Period
                                    </th>
                                    <th width="140" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var schedule in Model.Schedules)
                                {
                                    <tr>
                                        <td>
                                            <strong class="neon-text">@schedule.Title</strong>
                                            <br />
                                            <small class="text-muted-glass">
                                                <i class="bi bi-building"></i> @schedule.CampusName
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge-glass-secondary">
                                                @schedule.RoomName
                                            </span>
                                        </td>
                                        <td>
                                            @if (schedule.ScheduleType == ScheduleType.Academic_Course)
                                            {
                                                <span class="badge-glass-primary">
                                                    <i class="bi bi-book me-1"></i>Academic
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge-glass-warning">
                                                    <i class="bi bi-tools me-1"></i>Maintenance
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge-glass-info">
                                                @schedule.DayOfWeekDisplay
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted-glass">
                                                @schedule.StartTime.ToString(@"hh\:mm") -
                                                @schedule.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </td>
                                        <td>
                                            <small class="text-muted-glass">
                                                @schedule.StartDate.ToString("MMM dd") -
                                                @schedule.EndDate.ToString("MMM dd")
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex gap-2 justify-content-center">
                                                <a asp-page="Details"
                                                   asp-route-id="@schedule.Id"
                                                   class="btn btn-action-glass btn-action-info"
                                                   title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-page="Edit"
                                                   asp-route-id="@schedule.Id"
                                                   class="btn btn-action-glass btn-action-warning"
                                                   title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-action-glass btn-action-danger"
                                                        onclick="confirmDelete('@schedule.Id', '@schedule.Title')"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.Schedules.TotalPages > 1)
                    {
                        <div class="table-header-glass">
                            <nav aria-label="Schedule pagination">
                                <ul class="pagination pagination-glass mb-0 justify-content-center">
                                    <!-- Previous -->
                                    <li class="page-item @(Model.Schedules.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link-glass"
                                           asp-page="Index"
                                           asp-route-pageNumber="@(Model.Schedules.CurrentPage - 1)"
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-roomId="@Model.FilterRoomId"
                                           asp-route-type="@Model.FilterType"
                                           asp-route-day="@Model.FilterDay">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>

                                    <!-- Page Numbers -->
                                    @{
                                        var startPage = Math.Max(1, Model.Schedules.CurrentPage - 2);
                                        var endPage = Math.Min(Model.Schedules.TotalPages, startPage + 4);
                                        startPage = Math.Max(1, endPage - 4);
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.Schedules.CurrentPage ? "active" : "")">
                                            <a class="page-link-glass"
                                               asp-page="Index"
                                               asp-route-pageNumber="@i"
                                               asp-route-search="@Model.SearchTerm"
                                               asp-route-roomId="@Model.FilterRoomId"
                                               asp-route-type="@Model.FilterType"
                                               asp-route-day="@Model.FilterDay">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    <!-- Next -->
                                    <li class="page-item @(Model.Schedules.CurrentPage == Model.Schedules.TotalPages ? "disabled" : "")">
                                        <a class="page-link-glass"
                                           asp-page="Index"
                                           asp-route-pageNumber="@(Model.Schedules.CurrentPage + 1)"
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-roomId="@Model.FilterRoomId"
                                           asp-route-type="@Model.FilterType"
                                           asp-route-day="@Model.FilterDay">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state-glass">
                        <i class="bi bi-calendar-x" style="font-size: 5rem;"></i>
                        <h5 class="mt-3">No schedules found</h5>
                        <p class="text-muted-glass">Try adjusting your filters or create a new schedule.</p>
                        <a asp-page="Create" class="btn btn-neon-primary mt-2">
                            <i class="bi bi-plus-circle me-1"></i>Create First Schedule
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content-glass">
            <div class="modal-header-glass-danger d-flex justify-content-between align-items-center">
                <h5 class="modal-title mb-0" style="color: #f87171;">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: brightness(0) invert(1);"></button>
            </div>
            <div class="modal-body-glass">
                <p>Are you sure you want to delete this schedule?</p>
                <div class="alert-glass-danger">
                    <strong id="scheduleTitle"></strong>
                </div>
                <p class="mb-0"><small class="text-muted-glass">This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer-glass">
                <button type="button" class="btn btn-glass-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm" class="d-inline">
                    <input type="hidden" name="id" id="deleteScheduleId" />
                    <button type="submit" class="btn btn-neon-primary" style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); border-color: #dc2626;">
                        <i class="bi bi-trash me-1"></i>Delete Schedule
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            document.getElementById('deleteScheduleId').value = id;
            document.getElementById('scheduleTitle').textContent = title;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Auto-dismiss alerts after 5 seconds
        window.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var alerts = document.querySelectorAll('[class*="alert-glass"]');
                alerts.forEach(function(alert) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}