@page
@model UniSpace.Presentation.Pages.Admin.Schedule.DashboardModel
@{
    ViewData["Title"] = "Schedule Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    /* Page Container */
    .dashboard-page-container {
        min-height: 100vh;
        padding: 20px 0;
    }

    /* Glass Card Header */
    .glass-card-header {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        padding: 24px;
        transition: all 0.3s ease;
        margin-bottom: 24px;
    }

        .glass-card-header:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    .text-muted-glass {
        color: #9ca3af;
    }

    /* Statistics Cards */
    .stat-card-glass {
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        overflow: hidden;
        height: 100%;
    }

        .stat-card-glass:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            transform: translateY(-5px);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.2);
        }

    .stat-card-body {
        padding: 24px;
        color: #e0e0e0;
    }

    .stat-card-footer {
        background: rgba(0, 0, 0, 0.3);
        border-top: 1px solid rgba(255, 138, 0, 0.2);
        padding: 12px 24px;
    }

    .stat-title {
        color: #9ca3af;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 12px;
    }

    .stat-value {
        color: #ff8a00;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .stat-icon {
        background: rgba(255, 138, 0, 0.15);
        border: 1px solid rgba(255, 138, 0, 0.3);
        border-radius: 12px;
        padding: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .stat-icon i {
            font-size: 2rem;
            color: #ff8a00;
        }

    /* Chart Cards */
    .chart-card-glass {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
    }

    .chart-card-header {
        background: rgba(255, 138, 0, 0.15);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 20px 24px;
    }

    .chart-card-body {
        padding: 24px;
        color: #e0e0e0;
    }

    /* List Cards */
    .list-card-glass {
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
    }

    .list-item-glass {
        background: rgba(0, 0, 0, 0.2);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 16px 24px;
        transition: all 0.3s ease;
    }

        .list-item-glass:hover {
            background: rgba(255, 138, 0, 0.05);
        }

        .list-item-glass:last-child {
            border-bottom: none;
        }

    /* Table Glass */
    .table-glass {
        color: #e0e0e0;
        margin-bottom: 0;
    }

        .table-glass thead th {
            background: rgba(255, 138, 0, 0.1);
            color: #ff8a00;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(255, 138, 0, 0.3);
            padding: 16px 12px;
        }

        .table-glass tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .table-glass tbody tr:hover {
                background: rgba(255, 138, 0, 0.05);
            }

        .table-glass tbody td {
            padding: 16px 12px;
            vertical-align: middle;
        }

    /* Badges */
    .badge-glass-primary {
        background: rgba(255, 138, 0, 0.2);
        border: 1px solid rgba(255, 138, 0, 0.4);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-success {
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.4);
        color: #10b981;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-info {
        background: rgba(6, 182, 212, 0.2);
        border: 1px solid rgba(6, 182, 212, 0.4);
        color: #06b6d4;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-warning {
        background: rgba(245, 158, 11, 0.2);
        border: 1px solid rgba(245, 158, 11, 0.4);
        color: #f59e0b;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .badge-glass-secondary {
        background: rgba(156, 163, 175, 0.2);
        border: 1px solid rgba(156, 163, 175, 0.4);
        color: #9ca3af;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    /* Buttons */
    .btn-neon-primary {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-neon-primary:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-secondary:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    .btn-glass-info {
        background: rgba(6, 182, 212, 0.15);
        border: 2px solid rgba(6, 182, 212, 0.3);
        color: #06b6d4;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-info:hover {
            background: rgba(6, 182, 212, 0.25);
            border-color: rgba(6, 182, 212, 0.5);
            color: #22d3ee;
            box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
        }

    .btn-glass-success {
        background: rgba(16, 185, 129, 0.15);
        border: 2px solid rgba(16, 185, 129, 0.3);
        color: #10b981;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-success:hover {
            background: rgba(16, 185, 129, 0.25);
            border-color: rgba(16, 185, 129, 0.5);
            color: #34d399;
            box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
        }

    .btn-glass-warning {
        background: rgba(245, 158, 11, 0.15);
        border: 2px solid rgba(245, 158, 11, 0.3);
        color: #f59e0b;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-glass-warning:hover {
            background: rgba(245, 158, 11, 0.25);
            border-color: rgba(245, 158, 11, 0.5);
            color: #fbbf24;
            box-shadow: 0 0 20px rgba(245, 158, 11, 0.3);
        }

    /* Progress Bar Glass */
    .progress-glass {
        background: rgba(0, 0, 0, 0.4);
        border-radius: 10px;
        height: 25px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .progress-bar-glass {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 600;
        font-size: 0.875rem;
        transition: width 0.6s ease;
    }

    .progress-bar-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .progress-bar-info {
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
    }

    .progress-bar-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    /* Quick Action Cards */
    .action-card-glass {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        overflow: hidden;
        height: 100%;
        text-align: center;
    }

        .action-card-glass:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            transform: translateY(-5px);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.2);
        }

    .action-card-body {
        padding: 32px 24px;
    }

    .action-icon {
        background: rgba(255, 138, 0, 0.15);
        border: 2px solid rgba(255, 138, 0, 0.3);
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 16px;
        transition: all 0.3s ease;
    }

    .action-card-glass:hover .action-icon {
        background: rgba(255, 138, 0, 0.25);
        border-color: rgba(255, 138, 0, 0.5);
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

    .action-icon-primary {
        background: rgba(255, 138, 0, 0.15);
        border-color: rgba(255, 138, 0, 0.3);
    }

        .action-icon-primary i {
            color: #ff8a00;
        }

    .action-icon-info {
        background: rgba(6, 182, 212, 0.15);
        border-color: rgba(6, 182, 212, 0.3);
    }

        .action-icon-info i {
            color: #06b6d4;
        }

    .action-icon-warning {
        background: rgba(245, 158, 11, 0.15);
        border-color: rgba(245, 158, 11, 0.3);
    }

        .action-icon-warning i {
            color: #f59e0b;
        }

    .action-icon-success {
        background: rgba(16, 185, 129, 0.15);
        border-color: rgba(16, 185, 129, 0.3);
    }

        .action-icon-success i {
            color: #10b981;
        }

    /* Empty State */
    .empty-state-glass {
        text-align: center;
        padding: 60px 40px;
        color: #9ca3af;
    }

        .empty-state-glass i {
            font-size: 4rem;
            color: #6b7280;
            margin-bottom: 16px;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-card-header,
        .stat-card-body,
        .chart-card-body {
            padding: 20px;
        }

        .stat-value {
            font-size: 2rem;
        }
    }
</style>

<div class="dashboard-page-container">
    <div class="container-fluid px-4">
        <!-- Header -->
        <div class="glass-card-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="neon-text mb-2">
                        <i class="bi bi-calendar-week"></i> Schedule Dashboard
                    </h2>
                    <p class="text-muted-glass mb-0">Manage and monitor room schedules</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-page="Index" class="btn btn-glass-secondary">
                        <i class="bi bi-list"></i> View All
                    </a>
                    <a asp-page="Create" class="btn btn-neon-primary">
                        <i class="bi bi-plus-circle"></i> New Schedule
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-3 mb-4">
            <!-- Total Schedules -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-glass">
                    <div class="stat-card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="stat-title">Total Schedules</h6>
                                <div class="stat-value">@Model.TotalSchedules</div>
                                <small class="text-muted-glass">
                                    <i class="bi bi-arrow-up text-success"></i> All schedules
                                </small>
                            </div>
                            <div class="stat-icon">
                                <i class="bi bi-calendar3"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card-footer">
                        <a asp-page="Index" class="text-decoration-none" style="color: #ff8a00; font-size: 0.875rem;">
                            View All <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Academic Courses -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-glass">
                    <div class="stat-card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="stat-title">Academic Courses</h6>
                                <div class="stat-value">@Model.AcademicCourses</div>
                                <small class="text-muted-glass">
                                    <i class="bi bi-book" style="color: #06b6d4;"></i> @(Model.TotalSchedules > 0 ? Math.Round((double)Model.AcademicCourses / Model.TotalSchedules * 100, 1) : 0)%
                                </small>
                            </div>
                            <div class="stat-icon action-icon-info">
                                <i class="bi bi-book"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card-footer">
                        <a asp-page="Index" asp-route-type="Academic_Course" class="text-decoration-none" style="color: #06b6d4; font-size: 0.875rem;">
                            View Courses <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Maintenance Schedules -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-glass">
                    <div class="stat-card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="stat-title">Maintenance</h6>
                                <div class="stat-value">@Model.MaintenanceSchedules</div>
                                <small class="text-muted-glass">
                                    <i class="bi bi-tools" style="color: #f59e0b;"></i> @(Model.TotalSchedules > 0 ? Math.Round((double)Model.MaintenanceSchedules / Model.TotalSchedules * 100, 1) : 0)%
                                </small>
                            </div>
                            <div class="stat-icon action-icon-warning">
                                <i class="bi bi-tools"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card-footer">
                        <a asp-page="Index" asp-route-type="Recurring_Maintenance" class="text-decoration-none" style="color: #f59e0b; font-size: 0.875rem;">
                            View Maintenance <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Active Schedules -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-glass">
                    <div class="stat-card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="stat-title">Active Now</h6>
                                <div class="stat-value">@Model.ActiveSchedules</div>
                                <small class="text-muted-glass">
                                    <i class="bi bi-check-circle" style="color: #10b981;"></i> Currently running
                                </small>
                            </div>
                            <div class="stat-icon action-icon-success">
                                <i class="bi bi-clock-history"></i>
                            </div>
                        </div>
                    </div>
                    <div class="stat-card-footer">
                        <span class="text-muted-glass" style="font-size: 0.875rem;">
                            Real-time status
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row g-3 mb-4">
            <!-- Schedules by Day Chart -->
            <div class="col-xl-8">
                <div class="chart-card-glass h-100">
                    <div class="chart-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 neon-text">
                                <i class="bi bi-bar-chart-line"></i>
                                Schedules by Day of Week
                            </h5>
                            <span class="badge-glass-primary">Weekly Distribution</span>
                        </div>
                    </div>
                    <div class="chart-card-body">
                        .<div style="postition: relative; height: 200px">
                            <canvas id="dayChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Schedules by Type Chart -->
            <div class="col-xl-4">
                <div class="chart-card-glass">
                    <div class="chart-card-header">
                        <h5 class="mb-0 neon-text">
                            <i class="bi bi-pie-chart"></i>
                            Type Distribution
                        </h5>
                    </div>
                    <div class="chart-card-body">
                        <canvas id="typeChart" height="200"></canvas>
                    </div>
                    <div class="stat-card-footer">
                        <div class="d-flex justify-content-center" style="font-size: 0.875rem;">
                            <span style="color: #ffffff; padding-right: 20px"><i class="bi bi-circle-fill" style="color: #ff8a00;"></i> Academic</span>
                            <span style="color: #ffffff"><i class="bi bi-circle-fill" style="color: #f59e0b;"></i> Maintenance</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent and Upcoming Schedules -->
        <div class="row g-3 mb-4">
            <!-- Recent Schedules -->
            <div class="col-xl-6">
                <div class="list-card-glass h-100 d-flex flex-column">
                    <div class="chart-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 neon-text">
                                <i class="bi bi-clock-history"></i>
                                Recent Schedules
                            </h5>
                            <a asp-page="Index" class="btn btn-glass-secondary btn-sm">View All</a>
                        </div>
                    </div>
                    <div class="flex-grow-1 p-0">
                        @if (Model.RecentSchedules.Any())
                        {
                            @foreach (var schedule in Model.RecentSchedules.Take(5))
                            {
                                <div class="list-item-glass">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-2 neon-text">@schedule.Title</h6>
                                            <div class="d-flex gap-2 mb-2">
                                                <span class="badge-glass-secondary">
                                                    <i class="bi bi-door-closed"></i> @schedule.RoomName
                                                </span>
                                                @if (schedule.ScheduleType == UniSpace.BusinessObject.Enums.ScheduleType.Academic_Course)
                                                {
                                                    <span class="badge-glass-primary">
                                                        <i class="bi bi-book"></i> Academic
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge-glass-warning">
                                                        <i class="bi bi-tools"></i> Maintenance
                                                    </span>
                                                }
                                            </div>
                                            <small class="text-muted-glass">
                                                <i class="bi bi-clock"></i>
                                                @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </div>
                                        <small class="text-muted-glass">
                                            @schedule.CreatedAt.ToString("MMM dd")
                                        </small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state-glass">
                                <i class="bi bi-calendar-x"></i>
                                <p class="mb-0">No recent schedules</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Upcoming Schedules -->
            <div class="col-xl-6">
                <div class="list-card-glass h-100 d-flex flex-column">
                    <div class="chart-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 neon-text">
                                <i class="bi bi-calendar-event"></i>
                                Upcoming Schedules
                            </h5>
                            <span class="badge-glass-info">Next 5</span>
                        </div>
                    </div>
                    <div class="flex-grow-1 p-0">
                        @if (Model.UpcomingSchedules.Any())
                        {
                            @foreach (var schedule in Model.UpcomingSchedules.Take(5))
                            {
                                <div class="list-item-glass">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-2 neon-text">@schedule.Title</h6>
                                            <div class="d-flex gap-2 mb-2">
                                                <span class="badge-glass-secondary">
                                                    <i class="bi bi-door-closed"></i> @schedule.RoomName
                                                </span>
                                                @if (schedule.ScheduleType == UniSpace.BusinessObject.Enums.ScheduleType.Academic_Course)
                                                {
                                                    <span class="badge-glass-primary">Academic</span>
                                                }
                                                else
                                                {
                                                    <span class="badge-glass-warning">Maintenance</span>
                                                }
                                            </div>
                                            <small class="text-muted-glass">
                                                <i class="bi bi-clock"></i>
                                                @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </div>
                                        <small class="text-muted-glass">
                                            @schedule.StartDate.ToString("MMM dd")
                                        </small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state-glass">
                                <i class="bi bi-calendar-check"></i>
                                <p class="mb-0">No upcoming schedules</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Rooms by Schedule Count -->
        <div class="chart-card-glass mb-4">
            <div class="chart-card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 neon-text">
                        <i class="bi bi-trophy"></i>
                        Top Rooms by Schedule Count
                    </h5>
                    <span class="badge-glass-secondary">Top 10</span>
                </div>
            </div>
            <div class="chart-card-body">
                @if (Model.SchedulesByRoom.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-glass">
                            <thead>
                                <tr>
                                    <th width="60">#</th>
                                    <th>Room Name</th>
                                    <th width="120" class="text-center">Count</th>
                                    <th width="300">Distribution</th>
                                    <th width="100" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int rank = 1;
                                    var maxCount = Model.SchedulesByRoom.Any() ? Model.SchedulesByRoom.Values.Max() : 1;
                                }
                                @foreach (var room in Model.SchedulesByRoom)
                                {
                                    var percentage = (room.Value * 100.0 / maxCount);
                                    var badgeClass = rank == 1 ? "badge-glass-success" : rank == 2 ? "badge-glass-info" : rank == 3 ? "badge-glass-warning" : "badge-glass-secondary";
                                    var progressClass = rank == 1 ? "progress-bar-success" : rank == 2 ? "progress-bar-info" : rank == 3 ? "progress-bar-warning" : "progress-bar-glass";

                                    <tr>
                                        <td>
                                            <span class="@badgeClass">@rank</span>
                                        </td>
                                        <td>
                                            <strong class="neon-text">@room.Key</strong>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge-glass-primary">@room.Value</span>
                                        </td>
                                        <td>
                                            <div class="progress-glass">
                                                <div class="progress-bar-glass @progressClass"
                                                     role="progressbar"
                                                     style="width: @percentage%"
                                                     aria-valuenow="@room.Value"
                                                     aria-valuemin="0"
                                                     aria-valuemax="@maxCount">
                                                    @percentage.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <a asp-page="Index" asp-route-search="@room.Key"
                                               class="btn btn-glass-info btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state-glass">
                        <i class="bi bi-building"></i>
                        <p class="mb-0">No room data available</p>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="action-card-glass">
                    <div class="action-card-body">
                        <div class="action-icon action-icon-primary">
                            <i class="bi bi-plus-circle fs-1"></i>
                        </div>
                        <h6 class="mb-2 neon-text">Create Schedule</h6>
                        <p class="text-muted-glass small mb-3">Add new academic or maintenance schedule</p>
                        <a asp-page="Create" class="btn btn-neon-primary btn-sm">
                            <i class="bi bi-plus"></i> Create Now
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="action-card-glass">
                    <div class="action-card-body">
                        <div class="action-icon action-icon-info">
                            <i class="bi bi-list-ul fs-1"></i>
                        </div>
                        <h6 class="mb-2" style="color: #06b6d4;">View All Schedules</h6>
                        <p class="text-muted-glass small mb-3">Browse and manage all schedules</p>
                        <a asp-page="Index" class="btn btn-glass-info btn-sm">
                            <i class="bi bi-list"></i> View List
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="action-card-glass">
                    <div class="action-card-body">
                        <div class="action-icon action-icon-warning">
                            <i class="bi bi-funnel fs-1"></i>
                        </div>
                        <h6 class="mb-2" style="color: #f59e0b;">Filter Schedules</h6>
                        <p class="text-muted-glass small mb-3">Search by room, type, or day</p>
                        <a asp-page="Index" class="btn btn-glass-warning btn-sm">
                            <i class="bi bi-search"></i> Filter
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="action-card-glass">
                    <div class="action-card-body">
                        <div class="action-icon action-icon-success">
                            <i class="bi bi-download fs-1"></i>
                        </div>
                        <h6 class="mb-2" style="color: #10b981;">Export Data</h6>
                        <p class="text-muted-glass small mb-3">Download schedules report</p>
                        <button class="btn btn-glass-success btn-sm" onclick="alert('Export feature coming soon!')">
                            <i class="bi bi-download"></i> Export
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Schedules by Day Chart
        var dayCtx = document.getElementById('dayChart').getContext('2d');
        var dayChart = new Chart(dayCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.SchedulesByDay.Keys)),
                datasets: [{
                    label: 'Number of Schedules',
                    data: @Html.Raw(Json.Serialize(Model.SchedulesByDay.Values)),
                    backgroundColor: 'rgba(255, 138, 0, 0.8)',
                    borderColor: 'rgba(255, 138, 0, 1)',
                    borderWidth: 2,
                    borderRadius: 8,
                    hoverBackgroundColor: 'rgba(255, 138, 0, 1)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.9)',
                        padding: 12,
                        titleFont: {
                            size: 14,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 13
                        },
                        borderColor: 'rgba(255, 138, 0, 1)',
                        borderWidth: 2,
                        titleColor: '#ff8a00',
                        bodyColor: '#ffffff'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            color: '#9ca3af'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#9ca3af'
                        },
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Schedules by Type Chart
        var typeCtx = document.getElementById('typeChart').getContext('2d');
        var typeChart = new Chart(typeCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.SchedulesByType.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.SchedulesByType.Values)),
                    backgroundColor: [
                        'rgba(255, 138, 0, 0.8)',
                        'rgba(245, 158, 11, 0.8)'
                    ],
                    borderColor: [
                        'rgba(255, 138, 0, 1)',
                        'rgba(245, 158, 11, 1)'
                    ],
                    borderWidth: 2,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            font: {
                                size: 12
                            },
                            color: '#e0e0e0',
                            usePointStyle: true
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.9)',
                        padding: 12,
                        titleFont: {
                            size: 14,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 13
                        },
                        borderColor: 'rgba(255, 138, 0, 1)',
                        borderWidth: 2,
                        titleColor: '#ff8a00',
                        bodyColor: '#ffffff',
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                let value = context.parsed || 0;
                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                let percentage = ((value / total) * 100).toFixed(1);
                                return label + ': ' + value + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });

        // Auto-refresh statistics every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000); // 5 minutes
    </script>
}