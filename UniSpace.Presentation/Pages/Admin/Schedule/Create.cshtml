@page
@using UniSpace.BusinessObject.Enums
@model UniSpace.Presentation.Pages.Admin.Schedule.CreateModel
@{
    ViewData["Title"] = "Create Schedule";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Admin/Dashboard">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="Index">Schedule Management</a>
                    </li>
                    <li class="breadcrumb-item active">Create Schedule</li>
                </ol>
            </nav>

            <!-- Main Card -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Create New Schedule
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" id="createForm">
                        <div class="row">
                            <!-- Room Selection -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Input.RoomId" class="form-label fw-bold">
                                    <i class="bi bi-door-closed text-primary"></i> Room 
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Input.RoomId" class="form-select form-select-lg" id="roomSelect">
                                    @foreach (var option in Model.RoomOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.RoomId" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Select the room for this schedule
                                </div>
                            </div>

                            <!-- Schedule Type -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Input.ScheduleType" class="form-label fw-bold">
                                    <i class="bi bi-tag text-info"></i> Schedule Type 
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Input.ScheduleType" class="form-select form-select-lg" id="typeSelect">
                                    <option value="">-- Select Type --</option>
                                    <option value="@((int)ScheduleType.Academic_Course)">
                                        ?? Academic Course
                                    </option>
                                    <option value="@((int)ScheduleType.Recurring_Maintenance)">
                                        ?? Recurring Maintenance
                                    </option>
                                </select>
                                <span asp-validation-for="Input.ScheduleType" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Select schedule category
                                </div>
                            </div>

                            <!-- Title -->
                            <div class="col-md-12 mb-4">
                                <label asp-for="Input.Title" class="form-label fw-bold">
                                    <i class="bi bi-card-text text-success"></i> Title 
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Title" 
                                       class="form-control form-control-lg" 
                                       placeholder="e.g., PRN221 - Advanced C# Programming"
                                       id="titleInput" />
                                <span asp-validation-for="Input.Title" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Enter descriptive title (max 200 characters)
                                </div>
                            </div>

                            <!-- Day of Week -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Input.DayOfWeek" class="form-label fw-bold">
                                    <i class="bi bi-calendar3 text-warning"></i> Day of Week 
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Input.DayOfWeek" class="form-select form-select-lg" id="daySelect">
                                    <option value="">-- Select Day --</option>
                                    <option value="0">Sunday</option>
                                    <option value="1">Monday</option>
                                    <option value="2">Tuesday</option>
                                    <option value="3">Wednesday</option>
                                    <option value="4">Thursday</option>
                                    <option value="5">Friday</option>
                                    <option value="6">Saturday</option>
                                </select>
                                <span asp-validation-for="Input.DayOfWeek" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Day this schedule repeats
                                </div>
                            </div>

                            <!-- Break Time -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Input.BreakTimeMinutes" class="form-label fw-bold">
                                    <i class="bi bi-clock-history text-secondary"></i> Break Time (minutes)
                                </label>
                                <input asp-for="Input.BreakTimeMinutes" 
                                       type="number" 
                                       class="form-control form-control-lg" 
                                       min="0" 
                                       max="120"
                                       id="breakTime" />
                                <span asp-validation-for="Input.BreakTimeMinutes" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Buffer time between schedules
                                </div>
                            </div>

                            <!-- Time Range -->
                            <div class="col-md-12 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-clock text-primary"></i> Time Range 
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="startTime" class="form-label">Start Time</label>
                                        <input asp-for="Input.StartTime" 
                                               type="time" 
                                               class="form-control form-control-lg" 
                                               id="startTime" />
                                        <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="endTime" class="form-label">End Time</label>
                                        <input asp-for="Input.EndTime" 
                                               type="time" 
                                               class="form-control form-control-lg" 
                                               id="endTime" />
                                        <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-text mt-2">
                                    <i class="bi bi-info-circle"></i> End time must be after start time
                                </div>
                            </div>

                            <!-- Date Range -->
                            <div class="col-md-12 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-calendar-range text-success"></i> Date Range 
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="startDate" class="form-label">Start Date</label>
                                        <input asp-for="Input.StartDate" 
                                               type="date" 
                                               class="form-control form-control-lg" 
                                               id="startDate" />
                                        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="endDate" class="form-label">End Date</label>
                                        <input asp-for="Input.EndDate" 
                                               type="date" 
                                               class="form-control form-control-lg" 
                                               id="endDate" />
                                        <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-text mt-2">
                                    <i class="bi bi-info-circle"></i> Schedule active period
                                </div>
                            </div>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-info">
                            <i class="bi bi-lightbulb"></i> 
                            <strong>Tips:</strong>
                            <ul class="mb-0 mt-2">
                                <li>The schedule will repeat weekly on the selected day</li>
                                <li>Break time prevents scheduling conflicts</li>
                                <li>Make sure the room is available for the selected time</li>
                            </ul>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Create Schedule
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Live Preview Card -->
            <div class="card shadow-lg mt-4" id="previewCard" style="display: none;">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-eye text-info"></i> Live Preview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 id="previewTitle" class="text-primary mb-2">
                                <i class="bi bi-card-text"></i> Schedule Title
                            </h4>
                            <p class="mb-2">
                                <span class="badge bg-secondary" id="previewRoom">Room</span>
                                <span class="badge" id="previewType">Type</span>
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="mb-2">
                                <span class="badge bg-info" id="previewDay" style="font-size: 1em;">Day</span>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-primary" id="previewTime" style="font-size: 1em;">
                                    <i class="bi bi-clock"></i> Time
                                </span>
                            </div>
                            <div>
                                <span class="badge bg-success" id="previewPeriod" style="font-size: 1em;">
                                    <i class="bi bi-calendar-range"></i> Period
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Live preview functionality
        const titleInput = document.getElementById('titleInput');
        const roomSelect = document.getElementById('roomSelect');
        const typeSelect = document.getElementById('typeSelect');
        const daySelect = document.getElementById('daySelect');
        const startTime = document.getElementById('startTime');
        const endTime = document.getElementById('endTime');
        const startDate = document.getElementById('startDate');
        const endDate = document.getElementById('endDate');
        const previewCard = document.getElementById('previewCard');

        function updatePreview() {
            const title = titleInput.value.trim();
            const room = roomSelect.options[roomSelect.selectedIndex].text;
            const typeValue = typeSelect.value;
            const day = daySelect.options[daySelect.selectedIndex].text;
            
            if (title || typeValue || daySelect.value) {
                previewCard.style.display = 'block';
                
                // Update title
                document.getElementById('previewTitle').innerHTML = 
                    '<i class="bi bi-card-text"></i> ' + (title || 'Schedule Title');
                
                // Update room
                document.getElementById('previewRoom').textContent = 
                    room !== '-- Select Room --' ? room.substring(0, 50) : 'Room';
                
                // Update type
                const typeBadge = document.getElementById('previewType');
                if (typeValue === '0') {
                    typeBadge.className = 'badge bg-primary';
                    typeBadge.innerHTML = '<i class="bi bi-book me-1"></i>Academic';
                } else if (typeValue === '1') {
                    typeBadge.className = 'badge bg-warning';
                    typeBadge.innerHTML = '<i class="bi bi-tools me-1"></i>Maintenance';
                } else {
                    typeBadge.className = 'badge bg-secondary';
                    typeBadge.textContent = 'Type';
                }
                
                // Update day
                document.getElementById('previewDay').textContent = 
                    day !== '-- Select Day --' ? day : 'Day';
                
                // Update time
                const timeText = (startTime.value || '00:00') + ' - ' + (endTime.value || '00:00');
                document.getElementById('previewTime').innerHTML = 
                    '<i class="bi bi-clock"></i> ' + timeText;
                
                // Update period
                const periodText = (startDate.value || 'Start') + ' to ' + (endDate.value || 'End');
                document.getElementById('previewPeriod').innerHTML = 
                    '<i class="bi bi-calendar-range"></i> ' + periodText;
            } else {
                previewCard.style.display = 'none';
            }
        }

        titleInput.addEventListener('input', updatePreview);
        roomSelect.addEventListener('change', updatePreview);
        typeSelect.addEventListener('change', updatePreview);
        daySelect.addEventListener('change', updatePreview);
        startTime.addEventListener('change', updatePreview);
        endTime.addEventListener('change', updatePreview);
        startDate.addEventListener('change', updatePreview);
        endDate.addEventListener('change', updatePreview);

        // Form validation
        const form = document.getElementById('createForm');
        form.addEventListener('submit', function(e) {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            form.classList.add('was-validated');
        });

        // Set default times if empty
        window.addEventListener('DOMContentLoaded', function() {
            if (!startTime.value) startTime.value = '08:00';
            if (!endTime.value) endTime.value = '10:00';
        });
    </script>
}
