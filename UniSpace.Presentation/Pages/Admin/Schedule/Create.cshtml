@page
@using UniSpace.BusinessObject.Enums
@model UniSpace.Presentation.Pages.Admin.Schedule.CreateModel
@{
    ViewData["Title"] = "Create Schedule";
}

<style>
    /* Page Container */
    .create-page-container {
        min-height: 100vh;
        padding: 40px 0;
    }

    /* Breadcrumb Styling */
    .breadcrumb-glass {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 10px;
        padding: 12px 20px;
        margin-bottom: 30px;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

        .breadcrumb-glass .breadcrumb {
            background: transparent;
            padding: 0;
            margin: 0;
        }

        .breadcrumb-glass .breadcrumb-item a {
            color: #ff8a00;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .breadcrumb-glass .breadcrumb-item a:hover {
                color: #ffa500;
                text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
            }

        .breadcrumb-glass .breadcrumb-item.active {
            color: #9ca3af;
        }

        .breadcrumb-glass .breadcrumb-item + .breadcrumb-item::before {
            color: #9ca3af;
            content: "/";
        }

    /* Main Glass Card */
    .glass-card-create {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        max-width: 900px;
        margin: 0 auto;
        transition: all 0.3s ease;
    }

        .glass-card-create:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Header with orange gradient */
    .glass-card-header-create {
        background: rgba(255, 138, 0, 0.15);
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
        padding: 24px 32px;
    }

        .glass-card-header-create h4 {
            color: #ff8a00;
            font-weight: bold;
            margin: 0;
            font-size: 1.5rem;
        }

    .glass-card-body-create {
        padding: 32px;
    }

    /* Form Controls */
    .form-label-create {
        color: #e0e0e0;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .form-label-create i {
            font-size: 1rem;
        }

    .form-control-create,
    .form-select-create {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 12px 16px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }

        .form-control-create::placeholder {
            color: #6b7280;
        }

        .form-control-create:focus,
        .form-select-create:focus {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 138, 0, 0.6);
            outline: none;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.2);
            color: #ffffff;
        }

        .form-select-create option {
            background: #2d2d2d;
            color: #ffffff;
        }

    .form-text-create {
        color: #9ca3af;
        font-size: 0.85rem;
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    /* Buttons */
    .btn-create-primary {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 12px 32px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-create-primary:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-create-cancel {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 12px 32px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-create-cancel:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    /* Alert Styling */
    .alert-create-danger {
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fca5a5;
        margin-bottom: 24px;
    }

    .alert-create-info {
        background: rgba(6, 182, 212, 0.15);
        border: 1px solid rgba(6, 182, 212, 0.4);
        border-radius: 10px;
        padding: 20px;
        color: #22d3ee;
        margin-top: 24px;
    }

        .alert-create-info strong {
            color: #22d3ee;
            font-weight: 700;
        }

        .alert-create-info ul {
            color: #9ca3af;
            margin-left: 20px;
            margin-top: 12px;
            margin-bottom: 0;
        }

    /* Section Dividers */
    .form-section {
        margin-bottom: 32px;
    }

    .form-section-title {
        color: #ff8a00;
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
        padding-bottom: 8px;
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
    }

    /* Text Colors */
    .text-neon {
        color: #ff8a00;
    }

    .text-green-icon {
        color: #10b981;
    }

    .text-orange-icon {
        color: #f59e0b;
    }

    .text-red-icon {
        color: #ef4444;
    }

    .text-cyan-icon {
        color: #06b6d4;
    }

    /* Validation */
    .text-danger {
        color: #f87171 !important;
        font-size: 0.8rem;
        margin-top: 4px;
        display: block;
    }

    .text-danger-required {
        color: #f87171;
        margin-left: 2px;
    }

    /* Input groups */
    .time-range-group,
    .date-range-group {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-card-body-create {
            padding: 24px 20px;
        }

        .time-range-group,
        .date-range-group {
            grid-template-columns: 1fr;
        }

        .glass-card-header-create {
            padding: 20px 24px;
        }
    }
</style>

<div class="create-page-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <!-- Breadcrumb -->
                <div class="breadcrumb-glass">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-page="/Admin/Dashboard">
                                    <i class="bi bi-house"></i> Dashboard
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-page="Index">Schedule Management</a>
                            </li>
                            <li class="breadcrumb-item active">Create Schedule</li>
                        </ol>
                    </nav>
                </div>

                <!-- Main Card -->
                <div class="glass-card-create">
                    <div class="glass-card-header-create">
                        <h4>
                            <i class="bi bi-plus-circle"></i> Create New Schedule
                        </h4>
                    </div>
                    <div class="glass-card-body-create">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert-create-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
                            </div>
                        }

                        <form method="post" id="createForm">
                            <!-- Basic Information Section -->
                            <div class="row">
                                <!-- Room Selection -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Input.RoomId" class="form-label-create">
                                        <i class="bi bi-door-closed text-neon"></i> Room
                                        <span class="text-danger-required">*</span>
                                    </label>
                                    <select asp-for="Input.RoomId" class="form-select-create" id="roomSelect">
                                        <option value="">-- Select Room --</option>
                                        @foreach (var option in Model.RoomOptions)
                                        {
                                            <option value="@option.Value">@option.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Input.RoomId" class="text-danger"></span>
                                    <div class="form-text-create">
                                        <i class="bi bi-info-circle"></i> Select the room for this schedule
                                    </div>
                                </div>

                                <!-- Schedule Type -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Input.ScheduleType" class="form-label-create">
                                        <i class="bi bi-tag text-neon"></i> Schedule Type
                                        <span class="text-danger-required">*</span>
                                    </label>
                                    <select asp-for="Input.ScheduleType" class="form-select-create" id="typeSelect">
                                        <option value="">-- Select Type --</option>
                                        <option value="@((int)ScheduleType.Academic_Course)">
                                            📚 Academic Course
                                        </option>
                                        <option value="@((int)ScheduleType.Recurring_Maintenance)">
                                            🔧 Recurring Maintenance
                                        </option>
                                    </select>
                                    <span asp-validation-for="Input.ScheduleType" class="text-danger"></span>
                                    <div class="form-text-create">
                                        <i class="bi bi-info-circle"></i> Select schedule category
                                    </div>
                                </div>

                                <!-- Title -->
                                <div class="col-md-12 mb-4">
                                    <label asp-for="Input.Title" class="form-label-create">
                                        <i class="bi bi-card-text text-neon"></i> Title
                                        <span class="text-danger-required">*</span>
                                    </label>
                                    <input asp-for="Input.Title"
                                           class="form-control-create"
                                           placeholder="e.g., PRN221 - Advanced C# Programming"
                                           id="titleInput" />
                                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                                    <div class="form-text-create">
                                        <i class="bi bi-info-circle"></i> Enter descriptive title (max 200 characters)
                                    </div>
                                </div>

                                <!-- Day and Break Time -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Input.DayOfWeek" class="form-label-create">
                                        <i class="bi bi-calendar3 text-orange-icon"></i> Day of Week
                                        <span class="text-danger-required">*</span>
                                    </label>
                                    <select asp-for="Input.DayOfWeek" class="form-select-create" id="daySelect">
                                        <option value="">-- Select Day --</option>
                                        <option value="0">Sunday</option>
                                        <option value="1">Monday</option>
                                        <option value="2">Tuesday</option>
                                        <option value="3">Wednesday</option>
                                        <option value="4">Thursday</option>
                                        <option value="5">Friday</option>
                                        <option value="6">Saturday</option>
                                    </select>
                                    <span asp-validation-for="Input.DayOfWeek" class="text-danger"></span>
                                    <div class="form-text-create">
                                        <i class="bi bi-info-circle"></i> Day this schedule repeats
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Input.BreakTimeMinutes" class="form-label-create">
                                        <i class="bi bi-clock-history text-cyan-icon"></i> Break Time (minutes)
                                    </label>
                                    <input asp-for="Input.BreakTimeMinutes"
                                           type="number"
                                           class="form-control-create"
                                           min="0"
                                           max="120"
                                           placeholder="15"
                                           id="breakTime" />
                                    <span asp-validation-for="Input.BreakTimeMinutes" class="text-danger"></span>
                                    <div class="form-text-create">
                                        <i class="bi bi-info-circle"></i> Buffer time between schedules
                                    </div>
                                </div>
                            </div>

                            <!-- Time Range Section -->
                            <div class="form-section">
                                <div class="form-section-title">
                                    <i class="bi bi-clock"></i> Time Range
                                    <span class="text-danger-required">*</span>
                                </div>
                                <div class="time-range-group">
                                    <div>
                                        <label for="startTime" class="form-label-create">Start Time</label>
                                        <input asp-for="Input.StartTime"
                                               type="time"
                                               class="form-control-create"
                                               id="startTime" />
                                        <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <label for="endTime" class="form-label-create">End Time</label>
                                        <input asp-for="Input.EndTime"
                                               type="time"
                                               class="form-control-create"
                                               id="endTime" />
                                        <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-text-create mt-2">
                                    <i class="bi bi-info-circle"></i> End time must be after start time
                                </div>
                            </div>

                            <!-- Date Range Section -->
                            <div class="form-section">
                                <div class="form-section-title">
                                    <i class="bi bi-calendar-range"></i> Date Range
                                    <span class="text-danger-required">*</span>
                                </div>
                                <div class="date-range-group">
                                    <div>
                                        <label for="startDate" class="form-label-create">Start Date</label>
                                        <input asp-for="Input.StartDate"
                                               type="date"
                                               class="form-control-create"
                                               id="startDate" />
                                        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <label for="endDate" class="form-label-create">End Date</label>
                                        <input asp-for="Input.EndDate"
                                               type="date"
                                               class="form-control-create"
                                               id="endDate" />
                                        <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-text-create mt-2">
                                    <i class="bi bi-info-circle"></i> Schedule active period
                                </div>
                            </div>

                            <!-- Info Alert -->
                            <div class="alert-create-info">
                                <i class="bi bi-lightbulb"></i>
                                <strong>Tips:</strong>
                                <ul>
                                    <li>The schedule will repeat weekly on the selected day</li>
                                    <li>Break time prevents scheduling conflicts</li>
                                    <li>Make sure the room is available for the selected time</li>
                                </ul>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3 justify-content-end mt-4">
                                <a asp-page="Index" class="btn btn-create-cancel">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-create-primary">
                                    <i class="bi bi-check-circle"></i> Create Schedule
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Set default times if empty
        window.addEventListener('DOMContentLoaded', function() {
            const startTime = document.getElementById('startTime');
            const endTime = document.getElementById('endTime');

            if (!startTime.value) startTime.value = '08:00';
            if (!endTime.value) endTime.value = '10:00';
        });

        // Form validation
        const form = document.getElementById('createForm');
        form.addEventListener('submit', function(e) {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    </script>
}