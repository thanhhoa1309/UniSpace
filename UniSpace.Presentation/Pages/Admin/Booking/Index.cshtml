@page
@model UniSpace.Presentation.Pages.Admin.Booking.IndexModel
@{
    ViewData["Title"] = "Manage Bookings";
}

<style>
    body {
        min-height: 100vh;
    }

    .glass-card {
        -webkit-backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        color: #fff;
        padding: 10px 15px;
    }

    .glass-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .glass-input:focus {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
        color: #fff;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
    }

    .glass-btn {
        background: rgba(59, 130, 246, 0.3);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(59, 130, 246, 0.5);
        border-radius: 10px;
        color: #fff;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

    .glass-btn:hover {
        background: rgba(59, 130, 246, 0.5);
        border-color: rgba(59, 130, 246, 0.7);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(59, 130, 246, 0.3);
    }

    .glass-btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #ffffff;
    }

    .glass-btn-secondary:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 25px;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .stat-card.warning {
        border-left: 4px solid #fbbf24;
    }

    .stat-card.success {
        border-left: 4px solid #10b981;
    }

    .stat-card.danger {
        border-left: 4px solid #ef4444;
    }

    .stat-card.info {
        border-left: 4px solid #3b82f6;
    }

    .stat-card h5 {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .stat-card h2 {
        color: #fff;
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0;
    }

    .glass-table {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 15px;
        overflow: hidden;
    }

    .glass-table thead {
        background: rgba(255, 255, 255, 0.05);
    }

    .glass-table thead th {
        color: rgba(255, 255, 255, 0.8);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        padding: 15px;
        border: none;
    }

    .glass-table tbody tr {
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.2s ease;
    }

    .glass-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .glass-table tbody td {
        color: rgba(255, 255, 255, 0.9);
        padding: 15px;
        border: none;
    }

    .page-title {
        color: #fff;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0;
    }

    .form-label {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .alert-glass {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        color: #fff;
    }

    .alert-glass.alert-success {
        border-left: 4px solid #10b981;
    }

    .alert-glass.alert-danger {
        border-left: 4px solid #ef4444;
    }

    .alert-glass.alert-info {
        border-left: 4px solid #3b82f6;
    }

    .btn-action {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        padding: 5px 10px;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .btn-action:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.05);
    }

    .btn-action.btn-info {
        border-color: rgba(59, 130, 246, 0.5);
    }

    .btn-action.btn-info:hover {
        background: rgba(59, 130, 246, 0.3);
    }

    .btn-action.btn-warning {
        border-color: rgba(251, 191, 36, 0.5);
    }

    .btn-action.btn-warning:hover {
        background: rgba(251, 191, 36, 0.3);
    }

    .btn-action.btn-success {
        border-color: rgba(16, 185, 129, 0.5);
    }

    .btn-action.btn-success:hover {
        background: rgba(16, 185, 129, 0.3);
    }

    .btn-action.btn-danger {
        border-color: rgba(239, 68, 68, 0.5);
    }

    .btn-action.btn-danger:hover {
        background: rgba(239, 68, 68, 0.3);
    }

    .badge {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .pagination .page-link {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        margin: 0 3px;
        border-radius: 8px;
    }

    .pagination .page-link:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .pagination .page-item.active .page-link {
        background: rgba(59, 130, 246, 0.5);
        border-color: rgba(59, 130, 246, 0.7);
    }

    .pagination .page-item.disabled .page-link {
        background: rgba(255, 255, 255, 0.02);
        color: rgba(255, 255, 255, 0.3);
    }

    select.glass-input option {
        background: #1a1a2e;
        color: #fff;
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="bi bi-calendar-check"></i> Manage Bookings
        </h2>
        <div>
            <a asp-page="/Admin/Dashboard" class="btn glass-btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-glass alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-glass alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="glass-card mb-4 p-4">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label"><i class="bi bi-search"></i> Search</label>
                <input type="text" name="search" class="form-control glass-input" value="@Model.SearchTerm" placeholder="User, room, purpose..." />
            </div>
            <div class="col-md-2">
                <label class="form-label"><i class="bi bi-funnel"></i> Status</label>
                <select name="status" class="form-select glass-input">
                    <option value="">All Status</option>
                    <option value="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Pending)" selected="@(Model.FilterStatus == UniSpace.BusinessObject.Enums.BookingStatus.Pending)">Pending</option>
                    <option value="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Approved)" selected="@(Model.FilterStatus == UniSpace.BusinessObject.Enums.BookingStatus.Approved)">Approved</option>
                    <option value="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Rejected)" selected="@(Model.FilterStatus == UniSpace.BusinessObject.Enums.BookingStatus.Rejected)">Rejected</option>
                    <option value="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Completed)" selected="@(Model.FilterStatus == UniSpace.BusinessObject.Enums.BookingStatus.Completed)">Completed</option>
                    <option value="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Cancelled)" selected="@(Model.FilterStatus == UniSpace.BusinessObject.Enums.BookingStatus.Cancelled)">Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label"><i class="bi bi-calendar"></i> From Date</label>
                <input type="datetime-local" name="fromDate" class="form-control glass-input" value="@Model.FilterFromDate?.ToString("yyyy-MM-ddTHH:mm")" />
            </div>
            <div class="col-md-3">
                <label class="form-label"><i class="bi bi-calendar"></i> To Date</label>
                <input type="datetime-local" name="toDate" class="form-control glass-input" value="@Model.FilterToDate?.ToString("yyyy-MM-ddTHH:mm")" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn glass-btn w-100">
                    <i class="bi bi-search"></i> Filter
                </button>
            </div>
        </form>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card warning">
                <h5>Pending</h5>
                <h2>@Model.Bookings.Where(b => b.Status == UniSpace.BusinessObject.Enums.BookingStatus.Pending).Count()</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card success">
                <h5>Approved</h5>
                <h2>@Model.Bookings.Where(b => b.Status == UniSpace.BusinessObject.Enums.BookingStatus.Approved).Count()</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card danger">
                <h5>Rejected</h5>
                <h2>@Model.Bookings.Where(b => b.Status == UniSpace.BusinessObject.Enums.BookingStatus.Rejected).Count()</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card info">
                <h5>Completed</h5>
                <h2>@Model.Bookings.Where(b => b.Status == UniSpace.BusinessObject.Enums.BookingStatus.Completed).Count()</h2>
            </div>
        </div>
    </div>

    <!-- Bookings Table -->
    @if (Model.Bookings == null || !Model.Bookings.Any())
    {
        <div class="glass-card p-5 text-center">
            <i class="bi bi-info-circle fs-1 d-block mb-3" style="color: rgba(255, 255, 255, 0.5);"></i>
            <h5 style="color: rgba(255, 255, 255, 0.8);">No Bookings Found</h5>
            <p class="mb-0" style="color: rgba(255, 255, 255, 0.6);">There are no bookings matching your filters.</p>
        </div>
    }
    else
    {
        <div class="glass-card p-4">
            <div class="table-responsive">
                <table class="table glass-table align-middle">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Room</th>
                            <th>Campus</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Purpose</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.Bookings)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong style="color: #fff;">@booking.UserName</strong><br/>
                                        <small style="color: rgba(255, 255, 255, 0.5);">@booking.UserEmail</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@booking.RoomTypeDisplay</span><br/>
                                    <span style="color: rgba(255, 255, 255, 0.8);">@booking.RoomName</span>
                                </td>
                                <td>@booking.CampusName</td>
                                <td>
                                    <small style="color: rgba(255, 255, 255, 0.6);">@booking.StartTime.ToString("dd/MM/yyyy")</small><br/>
                                    <strong style="color: #fff;">@booking.StartTime.ToString("HH:mm")</strong>
                                </td>
                                <td>
                                    <small style="color: rgba(255, 255, 255, 0.6);">@booking.EndTime.ToString("dd/MM/yyyy")</small><br/>
                                    <strong style="color: #fff;">@booking.EndTime.ToString("HH:mm")</strong>
                                </td>
                                <td>
                                    <small style="color: rgba(255, 255, 255, 0.7);">@(booking.Purpose.Length > 50 ? booking.Purpose.Substring(0, 50) + "..." : booking.Purpose)</small>
                                </td>
                                <td>
                                    <span class="badge @Model.GetStatusBadgeClass(booking.Status)">
                                        @booking.StatusDisplay
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@booking.Id" class="btn btn-sm btn-action btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (booking.Status == UniSpace.BusinessObject.Enums.BookingStatus.Pending)
                                        {
                                            <a asp-page="./Confirm" asp-route-id="@booking.Id" class="btn btn-sm btn-action btn-warning" title="Review">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <form method="post" asp-page-handler="QuickApprove" asp-route-id="@booking.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-action btn-success" title="Quick Approve" onclick="return confirm('Are you sure you want to approve this booking?')">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@booking.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-action btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this booking?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Bookings.TotalPages > 1)
            {
                <nav aria-label="Booking pagination" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.Bookings.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.Bookings.CurrentPage - 1)" 
                               asp-route-search="@Model.SearchTerm"
                               asp-route-status="@Model.FilterStatus"
                               asp-route-fromDate="@Model.FilterFromDate"
                               asp-route-toDate="@Model.FilterToDate">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.Bookings.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Bookings.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i"
                                   asp-route-search="@Model.SearchTerm"
                                   asp-route-status="@Model.FilterStatus"
                                   asp-route-fromDate="@Model.FilterFromDate"
                                   asp-route-toDate="@Model.FilterToDate">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Bookings.CurrentPage == Model.Bookings.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.Bookings.CurrentPage + 1)"
                               asp-route-search="@Model.SearchTerm"
                               asp-route-status="@Model.FilterStatus"
                               asp-route-fromDate="@Model.FilterFromDate"
                               asp-route-toDate="@Model.FilterToDate">Next</a>
                        </li>
                    </ul>
                </nav>
            }

            <div class="text-center mt-3">
                <small style="color: rgba(255, 255, 255, 0.5);">Showing @Model.Bookings.Count of @Model.Bookings.TotalCount bookings</small>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}