@page
@model UniSpace.Presentation.Pages.Admin.Booking.DetailsModel
@{
    ViewData["Title"] = "Booking Details";
}

<style>
    body {
        background: #000000;
        min-height: 100vh;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .glass-card-header {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px 20px 0 0;
        padding: 20px;
    }

    .glass-card-body {
        padding: 25px;
    }

    .neon-orange {
        color: #ff6b35;
    }

    .neon-orange-bg {
        background: rgba(255, 107, 53, 0.2);
        border: 1px solid rgba(255, 107, 53, 0.5);
    }

    .neon-orange-border {
        border-left: 4px solid #ff6b35;
    }

    .page-title {
        color: #fff;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0;
    }

    .glass-btn {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        color: #fff;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .glass-btn:hover {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.3);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.1);
        }

    .glass-btn-orange {
        background: rgba(255, 107, 53, 0.2);
        border: 1px solid rgba(255, 107, 53, 0.5);
        color: #ff6b35;
    }

        .glass-btn-orange:hover {
            background: rgba(255, 107, 53, 0.3);
            border-color: rgba(255, 107, 53, 0.7);
            color: #ff6b35;
            box-shadow: 0 5px 15px rgba(255, 107, 53, 0.3);
        }

    .glass-btn-success {
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.5);
        color: #10b981;
    }

        .glass-btn-success:hover {
            background: rgba(16, 185, 129, 0.3);
            border-color: rgba(16, 185, 129, 0.7);
            color: #10b981;
            box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
        }

    .glass-btn-danger {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.5);
        color: #ef4444;
    }

        .glass-btn-danger:hover {
            background: rgba(239, 68, 68, 0.3);
            border-color: rgba(239, 68, 68, 0.7);
            color: #ef4444;
            box-shadow: 0 5px 15px rgba(239, 68, 68, 0.3);
        }

    .glass-btn-warning {
        background: rgba(251, 191, 36, 0.2);
        border: 1px solid rgba(251, 191, 36, 0.5);
        color: #fbbf24;
    }

        .glass-btn-warning:hover {
            background: rgba(251, 191, 36, 0.3);
            border-color: rgba(251, 191, 36, 0.7);
            color: #fbbf24;
            box-shadow: 0 5px 15px rgba(251, 191, 36, 0.3);
        }

    .section-title {
        color: #ff6b35;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .text-white-primary {
        color: rgba(255, 255, 255, 0.9);
    }

    .text-white-secondary {
        color: rgba(255, 255, 255, 0.7);
    }

    .text-white-muted {
        color: rgba(255, 255, 255, 0.5);
    }

    .glass-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 20px 0;
    }

    .glass-info-box {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
    }

    .glass-alert {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        color: #fff;
        padding: 15px;
    }

        .glass-alert.alert-success {
            border-left: 4px solid #10b981;
            background: rgba(16, 185, 129, 0.1);
        }

        .glass-alert.alert-danger {
            border-left: 4px solid #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }

        .glass-alert.alert-warning {
            border-left: 4px solid #fbbf24;
            background: rgba(251, 191, 36, 0.1);
        }

        .glass-alert.alert-light {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.15);
        }

    .badge-glass {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .badge-orange {
        background: rgba(255, 107, 53, 0.2);
        border: 1px solid rgba(255, 107, 53, 0.5);
        color: #ff6b35;
    }

    .badge-info {
        background: rgba(59, 130, 246, 0.2);
        border: 1px solid rgba(59, 130, 246, 0.5);
        color: #3b82f6;
    }

    .status-header-pending {
        background: rgba(251, 191, 36, 0.2);
        border-bottom: 2px solid rgba(251, 191, 36, 0.5);
    }

    .status-header-approved {
        background: rgba(16, 185, 129, 0.2);
        border-bottom: 2px solid rgba(16, 185, 129, 0.5);
    }

    .status-header-rejected {
        background: rgba(239, 68, 68, 0.2);
        border-bottom: 2px solid rgba(239, 68, 68, 0.5);
    }

    .status-header-completed {
        background: rgba(59, 130, 246, 0.2);
        border-bottom: 2px solid rgba(59, 130, 246, 0.5);
    }

    .status-header-cancelled {
        background: rgba(156, 163, 175, 0.2);
        border-bottom: 2px solid rgba(156, 163, 175, 0.5);
    }

    .time-box {
        background: rgba(255, 107, 53, 0.05);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 107, 53, 0.2);
        border-radius: 15px;
        padding: 20px;
    }

        .time-box h6 {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.85rem;
            margin-bottom: 10px;
        }

        .time-box p {
            color: rgba(255, 255, 255, 0.9);
        }

        .time-box .fs-4 {
            color: #ff6b35;
        }

    dl.row dt {
        color: rgba(255, 255, 255, 0.7);
    }

    dl.row dd {
        color: rgba(255, 255, 255, 0.9);
    }

    .font-monospace {
        font-family: 'Courier New', monospace;
        color: rgba(255, 255, 255, 0.6);
    }

    .btn-close-white {
        filter: brightness(0) invert(1);
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="bi bi-calendar-event-fill neon-orange"></i> Booking Details
        </h2>
        <div>
            <a asp-page="./Index" class="btn glass-btn">
                <i class="bi bi-arrow-left"></i> Back to Bookings
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="glass-alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="glass-alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Main Details -->
        <div class="col-lg-8">
            <div class="glass-card mb-4">
                <div class="glass-card-header @(Model.Booking.Status switch
                     {
                         UniSpace.BusinessObject.Enums.BookingStatus.Pending => "status-header-pending",
                         UniSpace.BusinessObject.Enums.BookingStatus.Approved => "status-header-approved",
                         UniSpace.BusinessObject.Enums.BookingStatus.Rejected => "status-header-rejected",
                         UniSpace.BusinessObject.Enums.BookingStatus.Completed => "status-header-completed",
                         UniSpace.BusinessObject.Enums.BookingStatus.Cancelled => "status-header-cancelled",
                         _ => ""
                     })">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white-primary">
                            <i class="bi bi-bookmark-fill neon-orange"></i> Booking Information
                        </h5>
                        <span class="badge badge-glass badge-orange fs-6">
                            @Model.Booking.StatusDisplay
                        </span>
                    </div>
                </div>
                <div class="glass-card-body">
                    <!-- User Information -->
                    <div class="mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-person-circle"></i> User Information
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1 text-white-secondary"><strong class="text-white-primary">Name:</strong> @Model.Booking.UserName</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1 text-white-secondary"><strong class="text-white-primary">Email:</strong> @Model.Booking.UserEmail</p>
                            </div>
                        </div>
                    </div>

                    <div class="glass-divider"></div>

                    <!-- Room Information -->
                    <div class="mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-door-open"></i> Room Information
                        </h6>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="mb-1 text-white-secondary"><strong class="text-white-primary">Room:</strong> @Model.Booking.RoomName</p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-white-secondary"><strong class="text-white-primary">Type:</strong> <span class="badge badge-info">@Model.Booking.RoomTypeDisplay</span></p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-white-secondary"><strong class="text-white-primary">Campus:</strong> @Model.Booking.CampusName</p>
                            </div>
                        </div>
                    </div>

                    <div class="glass-divider"></div>

                    <!-- Schedule Information -->
                    <div class="mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-calendar-range"></i> Schedule
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="time-box">
                                    <h6>Start Time</h6>
                                    <p class="mb-1"><strong>@Model.Booking.StartTime.ToString("dddd, MMMM dd, yyyy")</strong></p>
                                    <p class="mb-0 fs-4"><strong>@Model.Booking.StartTime.ToString("HH:mm")</strong></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="time-box">
                                    <h6>End Time</h6>
                                    <p class="mb-1"><strong>@Model.Booking.EndTime.ToString("dddd, MMMM dd, yyyy")</strong></p>
                                    <p class="mb-0 fs-4"><strong>@Model.Booking.EndTime.ToString("HH:mm")</strong></p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 text-center">
                            @{
                                var duration = Model.Booking.EndTime - Model.Booking.StartTime;
                                <p class="mb-0">
                                    <span class="badge badge-glass">
                                        Duration: @duration.TotalHours.ToString("0.##") hours
                                    </span>
                                </p>
                            }
                        </div>
                    </div>

                    <div class="glass-divider"></div>

                    <!-- Purpose -->
                    <div class="mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-chat-left-text"></i> Purpose
                        </h6>
                        <div class="glass-alert alert-light">
                            <span class="text-white-secondary">@Model.Booking.Purpose</span>
                        </div>
                    </div>

                    <!-- Admin Note -->
                    @if (!string.IsNullOrEmpty(Model.Booking.AdminNote))
                    {
                        <div class="glass-divider"></div>
                        <div class="mb-4">
                            <h6 class="section-title">
                                <i class="bi bi-clipboard-check"></i> Admin Note
                            </h6>
                            <div class="glass-alert alert-warning">
                                <span class="text-white-secondary">@Model.Booking.AdminNote</span>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="glass-divider"></div>
                    <div class="d-flex gap-2 flex-wrap">
                        @if (Model.Booking.Status == UniSpace.BusinessObject.Enums.BookingStatus.Pending)
                        {
                            <a asp-page="./Confirm" asp-route-id="@Model.Booking.Id" class="btn glass-btn-warning">
                                <i class="bi bi-pencil-square"></i> Review Booking
                            </a>
                            <form method="post" asp-page-handler="Approve" asp-route-id="@Model.Booking.Id" class="d-inline">
                                <button type="submit" class="btn glass-btn-success" onclick="return confirm('Are you sure you want to approve this booking?')">
                                    <i class="bi bi-check-circle"></i> Quick Approve
                                </button>
                            </form>
                        }
                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Booking.Id" class="d-inline">
                            <button type="submit" class="btn glass-btn-danger" onclick="return confirm('Are you sure you want to delete this booking?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="glass-card mb-4">
                <div class="glass-card-header neon-orange-border">
                    <h6 class="mb-0 text-white-primary">
                        <i class="bi bi-info-circle neon-orange"></i> Booking Status
                    </h6>
                </div>
                <div class="glass-card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            <span class="badge @Model.GetStatusBadgeClass(Model.Booking.Status)">
                                @Model.Booking.StatusDisplay
                            </span>
                        </dd>

                        <dt class="col-sm-5">Booking ID:</dt>
                        <dd class="col-sm-7">
                            <small class="font-monospace">@Model.Booking.Id.ToString().Substring(0, 8)...</small>
                        </dd>

                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">
                            <small class="text-white-secondary">@Model.Booking.CreatedAt.ToString("MM/dd/yyyy HH:mm")</small>
                        </dd>

                        @if (Model.Booking.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-5">Updated:</dt>
                            <dd class="col-sm-7">
                                <small class="text-white-secondary">@Model.Booking.UpdatedAt.Value.ToString("MM/dd/yyyy HH:mm")</small>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="glass-card mb-4">
                <div class="glass-card-header">
                    <h6 class="mb-0 text-white-primary">
                        <i class="bi bi-link-45deg neon-orange"></i> Quick Links
                    </h6>
                </div>
                <div class="glass-card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="/Admin/Room/Details" asp-route-id="@Model.Booking.RoomId" class="btn glass-btn-orange btn-sm">
                            <i class="bi bi-door-open"></i> View Room Details
                        </a>
                        <a asp-page="/Admin/Booking/Index" asp-route-status="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Pending)" class="btn glass-btn-warning btn-sm">
                            <i class="bi bi-clock"></i> View Pending Bookings
                        </a>
                    </div>
                </div>
            </div>

            <!-- Booking Statistics -->
            <div class="glass-card">
                <div class="glass-card-header neon-orange-border">
                    <h6 class="mb-0 text-white-primary">
                        <i class="bi bi-graph-up neon-orange"></i> Statistics
                    </h6>
                </div>
                <div class="glass-card-body">
                    <p class="mb-2 text-white-secondary">
                        <strong class="text-white-primary">User ID:</strong><br />
                        <small class="font-monospace">@Model.Booking.UserId.ToString().Substring(0, 13)...</small>
                    </p>
                    <p class="mb-0 text-white-secondary">
                        <strong class="text-white-primary">Room ID:</strong><br />
                        <small class="font-monospace">@Model.Booking.RoomId.ToString().Substring(0, 13)...</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.glass-alert').fadeOut('slow');
        }, 5000);
    </script>
}