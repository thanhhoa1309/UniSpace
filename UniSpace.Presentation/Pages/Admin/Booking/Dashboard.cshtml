@page
@model UniSpace.Presentation.Pages.Admin.Booking.DashboardModel
@{
    ViewData["Title"] = "Booking Confirmation Dashboard";
}

<style>
    .stat-card {
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: none;
        position: relative;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
    }

    .stat-card.pending::before {
        background: linear-gradient(90deg, #ffc107, #ff9800);
    }

    .stat-card.approved::before {
        background: linear-gradient(90deg, #28a745, #20c997);
    }

    .stat-card.rejected::before {
        background: linear-gradient(90deg, #dc3545, #e74c3c);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .pending-list-item {
        border-left: 4px solid #ffc107;
        transition: all 0.3s ease;
        padding: 15px;
        margin-bottom: 10px;
        background: white;
        border-radius: 8px;
    }

    .pending-list-item:hover {
        background: #fff9e6;
        transform: translateX(5px);
        box-shadow: 0 3px 10px rgba(255, 193, 7, 0.2);
    }

    .priority-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 600;
    }

    .chart-container {
        position: relative;
        height: 300px;
    }

    .action-required-pulse {
        animation: pulse-ring 2s ease-in-out infinite;
    }

    @@keyframes pulse-ring {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.4);
        }
        50% {
            box-shadow: 0 0 0 10px rgba(255, 193, 7, 0);
        }
    }

    .quick-action-btn {
        padding: 12px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-weight: 600;
    }

    .quick-action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .gradient-warning {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
    }

    .gradient-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    }

    .gradient-danger {
        background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
    }

    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px;
        border-radius: 15px;
        color: white;
        margin-bottom: 30px;
    }

    .time-badge {
        background: rgba(255, 255, 255, 0.2);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 12px;
        backdrop-filter: blur(10px);
    }

    .status-progress {
        height: 8px;
        border-radius: 10px;
        background: #e9ecef;
        overflow: hidden;
    }

    .status-progress-bar {
        height: 100%;
        transition: width 0.6s ease;
    }

    .metric-change {
        font-size: 12px;
        font-weight: 600;
    }

    .metric-change.up {
        color: #28a745;
    }

    .metric-change.down {
        color: #dc3545;
    }
</style>

<div class="container-fluid mt-4 px-4">
    <!-- Dashboard Header -->
    <div class="dashboard-header shadow-lg">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="bi bi-clipboard-check"></i> Booking Confirmation Dashboard
                </h1>
                <p class="mb-3 opacity-75">
                    <i class="bi bi-calendar-event"></i> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                    <span class="time-badge ms-2">
                        <i class="bi bi-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                </p>
                @if (Model.PendingBookings > 0)
                {
                    <div class="alert alert-warning border-0 mb-0" style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px);">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>@Model.PendingBookings booking(s)</strong> awaiting your confirmation
                    </div>
                }
            </div>
            <div class="col-md-4 text-end">
                <a asp-page="./Index" class="btn btn-light btn-lg mb-2 w-100 quick-action-btn">
                    <i class="bi bi-list-ul"></i> View All Bookings
                </a>
                <a asp-page="/Admin/Dashboard" class="btn btn-outline-light btn-lg w-100 quick-action-btn">
                    <i class="bi bi-arrow-left"></i> Admin Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-2 col-lg-4 col-md-6">
            <div class="card stat-card shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small mb-2">Total Bookings</div>
                            <h2 class="fw-bold mb-1">@Model.TotalBookings</h2>
                            <div class="status-progress mt-2">
                                <div class="status-progress-bar gradient-primary" style="width: 100%;"></div>
                            </div>
                        </div>
                        <div class="stat-icon gradient-primary text-white">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-lg-4 col-md-6">
            <div class="card stat-card pending shadow-lg @(Model.PendingBookings > 0 ? "action-required-pulse" : "")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-2">Pending</div>
                            <h2 class="fw-bold mb-1 text-warning">@Model.PendingBookings</h2>
                            @if (Model.TotalBookings > 0)
                            {
                                var pendingPercent = (double)Model.PendingBookings / Model.TotalBookings * 100;
                                <div class="status-progress mt-2">
                                    <div class="status-progress-bar gradient-warning" style="width: @pendingPercent.ToString("0")%;"></div>
                                </div>
                                <small class="text-muted">@pendingPercent.ToString("0.0")% of total</small>
                            }
                        </div>
                        <div class="stat-icon gradient-warning text-white">
                            <i class="bi bi-clock-history"></i>
                        </div>
                    </div>
                </div>
                @if (Model.PendingBookings > 0)
                {
                    <div class="card-footer bg-warning">
                        <a asp-page="./Index" asp-route-status="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Pending)" class="text-dark small text-decoration-none fw-bold">
                            Review Now <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="col-xl-2 col-lg-4 col-md-6">
            <div class="card stat-card approved shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-2">Approved</div>
                            <h2 class="fw-bold mb-1 text-success">@Model.ApprovedBookings</h2>
                            @if (Model.TotalBookings > 0)
                            {
                                var approvedPercent = (double)Model.ApprovedBookings / Model.TotalBookings * 100;
                                <div class="status-progress mt-2">
                                    <div class="status-progress-bar gradient-success" style="width: @approvedPercent.ToString("0")%;"></div>
                                </div>
                                <small class="text-muted">@approvedPercent.ToString("0.0")% of total</small>
                            }
                        </div>
                        <div class="stat-icon gradient-success text-white">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-lg-4 col-md-6">
            <div class="card stat-card rejected shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-2">Rejected</div>
                            <h2 class="fw-bold mb-1 text-danger">@Model.RejectedBookings</h2>
                            @if (Model.TotalBookings > 0)
                            {
                                var rejectedPercent = (double)Model.RejectedBookings / Model.TotalBookings * 100;
                                <div class="status-progress mt-2">
                                    <div class="status-progress-bar gradient-danger" style="width: @rejectedPercent.ToString("0")%;"></div>
                                </div>
                                <small class="text-muted">@rejectedPercent.ToString("0.0")% of total</small>
                            }
                        </div>
                        <div class="stat-icon gradient-danger text-white">
                            <i class="bi bi-x-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-lg-4 col-md-6">
            <div class="card stat-card shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small mb-2">Completed</div>
                            <h2 class="fw-bold mb-1 text-info">@Model.CompletedBookings</h2>
                            <div class="status-progress mt-2">
                                <div class="status-progress-bar bg-info" style="width: 75%;"></div>
                            </div>
                        </div>
                        <div class="stat-icon bg-info text-white">
                            <i class="bi bi-check2-all"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-lg-4 col-md-6">
            <div class="card stat-card shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small mb-2">Cancelled</div>
                            <h2 class="fw-bold mb-1 text-secondary">@Model.CancelledBookings</h2>
                            <div class="status-progress mt-2">
                                <div class="status-progress-bar bg-secondary" style="width: 40%;"></div>
                            </div>
                        </div>
                        <div class="stat-icon bg-secondary text-white">
                            <i class="bi bi-slash-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row g-4">
        <!-- Pending Bookings (Priority) -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-header gradient-warning text-dark py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            Pending Confirmations
                        </h5>
                        @if (Model.PendingBookingsList.Any())
                        {
                            <span class="badge bg-dark fs-6">@Model.PendingBookingsList.Count items</span>
                        }
                    </div>
                </div>
                <div class="card-body p-3">
                    @if (Model.PendingBookingsList.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.PendingBookingsList)
                            {
                                <div class="pending-list-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <i class="bi bi-person-circle fs-2 text-primary"></i>
                                                </div>
                                                <div>
                                                    <strong class="d-block">@booking.UserName</strong>
                                                    <small class="text-muted">@booking.UserEmail</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <span class="priority-badge">@booking.RoomTypeDisplay</span>
                                            <div class="mt-1">
                                                <strong>@booking.RoomName</strong>
                                            </div>
                                            <small class="text-muted">@booking.CampusName</small>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <i class="bi bi-calendar-event text-warning fs-4"></i>
                                                <div class="mt-1">
                                                    <strong>@booking.StartTime.ToString("MMM dd")</strong><br/>
                                                    <span class="text-primary">@booking.StartTime.ToString("HH:mm")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <a asp-page="./Confirm" asp-route-id="@booking.Id" class="btn btn-warning btn-sm px-4">
                                                <i class="bi bi-clipboard-check me-1"></i> Review Now
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-check-circle text-success" style="font-size: 64px;"></i>
                            <h5 class="mt-3 text-muted">All caught up!</h5>
                            <p class="text-muted mb-0">No pending bookings require your attention</p>
                        </div>
                    }
                </div>
                @if (Model.PendingBookingsList.Any())
                {
                    <div class="card-footer bg-light">
                        <a asp-page="./Index" asp-route-status="@((int)UniSpace.BusinessObject.Enums.BookingStatus.Pending)" class="btn btn-outline-warning w-100">
                            <i class="bi bi-list-ul"></i> View All Pending Bookings
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Today's Schedule -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-calendar-day me-2"></i>
                        Today's Schedule
                    </h5>
                </div>
                <div class="card-body p-3" style="max-height: 500px; overflow-y: auto;">
                    @if (Model.TodayBookings.Any())
                    {
                        @foreach (var booking in Model.TodayBookings)
                        {
                            <div class="card mb-3 border-start border-4 @(booking.Status == UniSpace.BusinessObject.Enums.BookingStatus.Approved ? "border-success" : booking.Status == UniSpace.BusinessObject.Enums.BookingStatus.Pending ? "border-warning" : "border-secondary")">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1">@booking.RoomName</h6>
                                            <small class="text-muted">@booking.CampusName</small>
                                        </div>
                                        <span class="badge @Model.GetStatusBadgeClass(booking.Status)">
                                            @booking.StatusDisplay
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <i class="bi bi-clock text-primary me-1"></i>
                                        <strong>@booking.StartTime.ToString("HH:mm")</strong> - @booking.EndTime.ToString("HH:mm")
                                    </div>
                                    <div class="text-truncate">
                                        <i class="bi bi-person text-muted me-1"></i>
                                        <small>@booking.UserName</small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 48px;"></i>
                            <p class="text-muted mt-3 mb-0">No bookings scheduled for today</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header gradient-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-clock-history me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentBookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="120">Created</th>
                                        <th>User</th>
                                        <th>Room</th>
                                        <th>Campus</th>
                                        <th>Schedule</th>
                                        <th width="120">Status</th>
                                        <th width="100">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.RecentBookings)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar3"></i>
                                                    @booking.CreatedAt.ToString("MMM dd")<br/>
                                                    @booking.CreatedAt.ToString("HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-person-circle fs-4 text-primary me-2"></i>
                                                    <div>
                                                        <strong class="d-block">@booking.UserName</strong>
                                                        <small class="text-muted">@booking.UserEmail</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary mb-1">@booking.RoomTypeDisplay</span><br/>
                                                <strong>@booking.RoomName</strong>
                                            </td>
                                            <td>
                                                <i class="bi bi-building"></i> @booking.CampusName
                                            </td>
                                            <td>
                                                <i class="bi bi-calendar-event text-primary"></i>
                                                @booking.StartTime.ToString("MMM dd, HH:mm")<br/>
                                                <small class="text-muted">Duration: @((booking.EndTime - booking.StartTime).TotalHours.ToString("0.##"))h</small>
                                            </td>
                                            <td>
                                                <span class="badge @Model.GetStatusBadgeClass(booking.Status)">
                                                    @booking.StatusDisplay
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-page="./Details" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 64px;"></i>
                            <p class="text-muted mt-3 mb-0">No recent bookings</p>
                        </div>
                    }
                </div>
                @if (Model.RecentBookings.Any())
                {
                    <div class="card-footer bg-light">
                        <a asp-page="./Index" class="btn btn-outline-primary w-100">
                            <i class="bi bi-list-ul"></i> View All Bookings
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-refresh pending count every 30 seconds
            setInterval(function() {
                // Could implement AJAX refresh here
                console.log('Auto-refresh timer');
            }, 30000);

            // Add smooth scroll to pending items
            $('.pending-list-item').on('click', function(e) {
                if (!$(e.target).is('a, button')) {
                    var reviewBtn = $(this).find('a[asp-page="./Confirm"]');
                    if (reviewBtn.length) {
                        window.location.href = reviewBtn.attr('href');
                    }
                }
            });
        });
    </script>
}
