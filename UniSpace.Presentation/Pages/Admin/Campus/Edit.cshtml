@page
@model UniSpace.Presentation.Pages.Admin.Campus.EditModel
@{
    ViewData["Title"] = "Edit Campus";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Admin/Dashboard">
                            <i class="bi bi-house"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="Index">Campus Management</a>
                    </li>
                    <li class="breadcrumb-item active">Edit Campus</li>
                </ol>
            </nav>

            <!-- Main Card -->
            <div class="card shadow-lg">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Campus
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />

                        <!-- Campus Name -->
                        <div class="mb-4">
                            <label asp-for="Input.Name" class="form-label fw-bold">
                                <i class="bi bi-building text-primary"></i> Campus Name 
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Name" 
                                   class="form-control form-control-lg" 
                                   placeholder="Enter campus name"
                                   autofocus />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-4">
                            <label asp-for="Input.Address" class="form-label fw-bold">
                                <i class="bi bi-geo-alt text-success"></i> Address 
                                <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Input.Address" 
                                      class="form-control" 
                                      rows="3"
                                      placeholder="Enter complete address"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <!-- Campus Info -->
                        @if (Model.Campus != null)
                        {
                            <div class="alert alert-light border">
                                <h6 class="alert-heading">
                                    <i class="bi bi-info-circle text-info"></i> Campus Information
                                </h6>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">
                                            <strong>Campus ID:</strong><br/>
                                            <code>@Model.Campus.Id</code>
                                        </small>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">
                                            <strong>Created:</strong><br/>
                                            @Model.Campus.CreatedAt.ToString("dd MMM yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-12">
                                        <small class="text-muted">
                                            <strong>Total Rooms:</strong>
                                            <span class="badge bg-info">@Model.Campus.TotalRooms</span>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-between">
                            <div>
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                                <a asp-page="Details" asp-route-id="@Model.Input.Id" 
                                   class="btn btn-outline-info">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Update Campus
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
