@page
@model UniSpace.Presentation.Pages.Admin.Campus.DetailsModel
@{
    ViewData["Title"] = "Campus Details";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Admin/Dashboard">
                    <i class="bi bi-house"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="Index">Campus Management</a>
            </li>
            <li class="breadcrumb-item active">Campus Details</li>
        </ol>
    </nav>

    <!-- Alerts -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Campus != null)
    {
        <div class="row">
            <!-- Main Information -->
            <div class="col-lg-8">
                <!-- Campus Header Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-building"></i> @Model.Campus.Name
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>
                                    <i class="bi bi-geo-alt text-success"></i> Address:
                                </strong>
                            </div>
                            <div class="col-md-9">
                                @Model.Campus.Address
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>
                                    <i class="bi bi-door-open text-primary"></i> Total Rooms:
                                </strong>
                            </div>
                            <div class="col-md-9">
                                <span class="badge bg-primary rounded-pill">
                                    @Model.Campus.TotalRooms rooms
                                </span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <strong>
                                    <i class="bi bi-calendar text-warning"></i> Created At:
                                </strong>
                            </div>
                            <div class="col-md-9">
                                @Model.Campus.CreatedAt.ToString("dddd, dd MMMM yyyy HH:mm")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <strong>
                                    <i class="bi bi-key text-secondary"></i> Campus ID:
                                </strong>
                            </div>
                            <div class="col-md-9">
                                <code class="bg-light p-2 rounded">@Model.Campus.Id</code>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rooms Section -->
                <div class="card shadow-lg">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-door-open"></i> Rooms in this Campus
                            </h5>
                            <button class="btn btn-sm btn-primary" disabled>
                                <i class="bi bi-plus"></i> Add Room
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.Campus.TotalRooms > 0)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> 
                                This campus has <strong>@Model.Campus.TotalRooms room(s)</strong>.
                                Room management feature will be available soon.
                            </div>
                            <div class="text-center py-3">
                                <button class="btn btn-outline-primary" disabled>
                                    <i class="bi bi-list"></i> View Rooms
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox display-4 text-muted"></i>
                                <p class="text-muted mt-3">No rooms in this campus yet.</p>
                                <button class="btn btn-primary" disabled>
                                    <i class="bi bi-plus-circle"></i> Add First Room
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Actions & Statistics Sidebar -->
            <div class="col-lg-4">
                <!-- Actions Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-gear"></i> Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-page="Edit" asp-route-id="@Model.Campus.Id" 
                               class="btn btn-warning btn-lg">
                                <i class="bi bi-pencil"></i> Edit Campus
                            </a>
                            <button type="button" class="btn btn-danger btn-lg" 
                                    onclick="confirmDelete('@Model.Campus.Id', '@Model.Campus.Name')">
                                <i class="bi bi-trash"></i> Delete Campus
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="card shadow-lg">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-bar-chart"></i> Statistics
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 pb-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Total Rooms:</span>
                                <strong class="h5 mb-0 text-primary">@Model.Campus.TotalRooms</strong>
                            </div>
                        </div>
                        <div class="mb-3 pb-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Available Rooms:</span>
                                <strong class="h5 mb-0 text-success">0</strong>
                            </div>
                        </div>
                        <div class="mb-3 pb-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Booked Rooms:</span>
                                <strong class="h5 mb-0 text-warning">0</strong>
                            </div>
                        </div>
                        <div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Under Maintenance:</span>
                                <strong class="h5 mb-0 text-danger">0</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Campus not found.
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    Are you sure you want to delete campus <strong id="campusName" class="text-danger"></strong>?
                </p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> 
                    <small><strong>Warning:</strong> This action cannot be undone. The campus will be soft deleted.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form method="post" asp-page-handler="Delete" class="d-inline">
                    <input type="hidden" name="id" id="campusId" value="@Model.Campus?.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Campus
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(campusId, campusName) {
            document.getElementById('campusName').textContent = campusName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
