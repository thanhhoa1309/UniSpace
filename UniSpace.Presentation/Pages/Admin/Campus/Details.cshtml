@page
@model UniSpace.Presentation.Pages.Admin.Campus.DetailsModel
@{
    ViewData["Title"] = "Campus Details";
}

<style>
    /* Page Container */
    .details-page-container {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    /* Breadcrumb */
    .breadcrumb-glass {
        background: rgba(45, 45, 45, 0.4);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 14px 20px;
        margin-bottom: 0;
        display: flex;
        flex-wrap: wrap;
        list-style: none;
    }

    .breadcrumb-item-glass {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
    }

        .breadcrumb-item-glass + .breadcrumb-item-glass::before {
            content: "›";
            color: #a0a0a0;
            padding: 0 10px;
            font-size: 1.2rem;
        }

        .breadcrumb-item-glass.active {
            color: #ff8a00;
            font-weight: 600;
        }

    .breadcrumb-link {
        color: #d1d5db;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .breadcrumb-link:hover {
            color: #ff8a00;
            text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
        }

    /* Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    .text-neon {
        color: #ff8a00;
    }

    .text-light-glass {
        color: #e0e0e0;
    }

    .text-danger-neon {
        color: #f87171;
    }

    /* Glass Cards */
    .glass-card-details {
        background: rgba(45, 45, 45, 0.5);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .glass-card-details:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    .glass-card-sidebar {
        background: rgba(45, 45, 45, 0.5);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .glass-card-sidebar:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Card Headers */
    .card-header-details {
        background: linear-gradient(135deg, rgba(255, 138, 0, 0.2) 0%, rgba(255, 107, 0, 0.15) 100%);
        border-bottom: 2px solid rgba(255, 138, 0, 0.4);
        padding: 20px 24px;
    }

    .card-header-section {
        background: rgba(255, 138, 0, 0.1);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 18px 24px;
    }

    .card-header-sidebar {
        background: rgba(255, 138, 0, 0.1);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 18px 24px;
    }

    /* Card Bodies */
    .card-body-details {
        padding: 28px 24px;
    }

    .card-body-sidebar {
        padding: 24px;
    }

    /* Detail Rows */
    .detail-row {
        display: flex;
        margin-bottom: 24px;
        padding-bottom: 24px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

        .detail-row:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .detail-label {
        flex: 0 0 30%;
        font-weight: 600;
        color: #e0e0e0;
        display: flex;
        align-items: center;
    }

    .detail-value {
        flex: 1;
        color: #d1d5db;
        display: flex;
        align-items: center;
    }

    /* Badges */
    .badge-neon-large {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        color: #fff;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

    /* Code Display */
    .code-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 138, 0, 0.3);
        color: #ff8a00;
        padding: 8px 12px;
        border-radius: 6px;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }

    /* Action Buttons */
    .actions-grid {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-action-edit {
        background: rgba(251, 191, 36, 0.2);
        border: 2px solid rgba(251, 191, 36, 0.4);
        color: #fbbf24;
        font-weight: 600;
        padding: 14px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
    }

        .btn-action-edit:hover {
            background: rgba(251, 191, 36, 0.3);
            box-shadow: 0 0 25px rgba(251, 191, 36, 0.5);
            transform: translateY(-2px);
            color: #fcd34d;
        }

    .btn-action-delete {
        background: rgba(239, 68, 68, 0.2);
        border: 2px solid rgba(239, 68, 68, 0.4);
        color: #f87171;
        font-weight: 600;
        padding: 14px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
    }

        .btn-action-delete:hover {
            background: rgba(239, 68, 68, 0.3);
            box-shadow: 0 0 25px rgba(239, 68, 68, 0.5);
            transform: translateY(-2px);
            color: #fca5a5;
        }

    .btn-action-back {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 14px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
    }

        .btn-action-back:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
            transform: translateY(-2px);
        }

    /* Statistics */
    .stat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 20px;
        margin-bottom: 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .stat-item-last {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none;
    }

    .stat-label {
        color: #9ca3af;
        font-size: 0.95rem;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
    }

    .stat-primary {
        color: #ff8a00;
        text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
    }

    .stat-success {
        color: #10b981;
    }

    .stat-warning {
        color: #fbbf24;
    }

    .stat-danger {
        color: #f87171;
    }

    /* Disabled Buttons */
    .btn-glass-disabled {
        background: rgba(255, 255, 255, 0.03);
        border: 2px solid rgba(255, 255, 255, 0.1);
        color: #6b7280;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: not-allowed;
        opacity: 0.5;
        display: inline-flex;
        align-items: center;
    }

    /* Empty State */
    .empty-state-details {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-icon {
        font-size: 5rem;
        color: #6b7280;
        margin-bottom: 20px;
    }

    .empty-text {
        color: #9ca3af;
        font-size: 1rem;
        margin-bottom: 24px;
    }

    /* Alerts */
    .alert-glass-success {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #6ee7b7;
        position: relative;
    }

    .alert-glass-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #fca5a5;
        position: relative;
    }

    .alert-glass-warning {
        background: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.3);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fcd34d;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-glass-info {
        background: rgba(255, 138, 0, 0.08);
        border: 1px solid rgba(255, 138, 0, 0.3);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fbbf24;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn-close-glass {
        position: absolute;
        right: 16px;
        background: transparent;
        border: none;
        color: inherit;
        font-size: 1.2rem;
        cursor: pointer;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

        .btn-close-glass:hover {
            opacity: 1;
        }

    /* Modal */
    .modal-content-glass {
        background: rgba(35, 35, 35, 0.95);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 138, 0, 0.3);
        border-radius: 15px;
    }

    .modal-header-glass {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header-danger {
        background: rgba(239, 68, 68, 0.15);
        border-bottom-color: rgba(239, 68, 68, 0.3);
    }

    .modal-title {
        color: #f87171;
        font-weight: 700;
    }

    .btn-close-modal {
        background: transparent;
        border: none;
        color: #fff;
        font-size: 1.5rem;
        cursor: pointer;
        opacity: 0.7;
        transition: opacity 0.3s ease;
        padding: 0;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-close-modal:hover {
            opacity: 1;
        }

    .modal-body-glass {
        padding: 24px;
        color: #e0e0e0;
    }

    .modal-footer-glass {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 24px;
        display: flex;
        gap: 12px;
        justify-content: flex-end;
    }

    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
    }

        .btn-glass-secondary:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    .btn-danger-neon {
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        border: 2px solid #dc2626;
        color: #fff;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(220, 38, 38, 0.4);
        cursor: pointer;
        display: inline-flex;
        align-items: center;
    }

        .btn-danger-neon:hover {
            box-shadow: 0 0 30px rgba(220, 38, 38, 0.7);
            transform: translateY(-2px);
        }

    /* Responsive */
    @@media (max-width: 992px) {
        .detail-row {
            flex-direction: column;
            gap: 8px;
        }

        .detail-label {
            flex: none;
        }
    }

    @@media (max-width: 768px) {
        .details-page-container {
            padding: 15px 0;
        }

        .card-header-details,
        .card-header-section,
        .card-header-sidebar {
            padding: 16px 20px;
        }

        .card-body-details,
        .card-body-sidebar {
            padding: 20px;
        }
    }
</style>

<div class="details-page-container">
    <div class="container mt-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb-glass">
                <li class="breadcrumb-item-glass">
                    <a asp-page="/Admin/Dashboard" class="breadcrumb-link">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                </li>
                <li class="breadcrumb-item-glass">
                    <a asp-page="Index" class="breadcrumb-link">Campus Management</a>
                </li>
                <li class="breadcrumb-item-glass active">Campus Details</li>
            </ol>
        </nav>

        <!-- Alerts -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert-glass-success mb-4" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <span>@Model.SuccessMessage</span>
                <button type="button" class="btn-close-glass" onclick="this.parentElement.style.display='none'">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-glass-danger mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <span>@Model.ErrorMessage</span>
                <button type="button" class="btn-close-glass" onclick="this.parentElement.style.display='none'">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        }

        @if (Model.Campus != null)
        {
            <div class="row">
                <!-- Main Information -->
                <div class="col-lg-8 mb-4">
                    <!-- Campus Header Card -->
                    <div class="glass-card-details mb-4">
                        <div class="card-header-details">
                            <h4 class="mb-0 neon-text">
                                <i class="bi bi-building me-2"></i> @Model.Campus.Name
                            </h4>
                        </div>
                        <div class="card-body-details">
                            <div class="detail-row">
                                <div class="detail-label">
                                    <i class="bi bi-geo-alt-fill text-neon me-2"></i> Address:
                                </div>
                                <div class="detail-value">
                                    @Model.Campus.Address
                                </div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">
                                    <i class="bi bi-door-open text-neon me-2"></i> Total Rooms:
                                </div>
                                <div class="detail-value">
                                    <span class="badge-neon-large">
                                        @Model.Campus.TotalRooms rooms
                                    </span>
                                </div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">
                                    <i class="bi bi-calendar-event text-neon me-2"></i> Created At:
                                </div>
                                <div class="detail-value">
                                    @Model.Campus.CreatedAt.ToString("dddd, dd MMMM yyyy HH:mm")
                                </div>
                            </div>

                            <div class="detail-row mb-0">
                                <div class="detail-label">
                                    <i class="bi bi-key text-neon me-2"></i> Campus ID:
                                </div>
                                <div class="detail-value">
                                    <code class="code-glass">@Model.Campus.Id</code>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Rooms Section -->
                    <div class="glass-card-details">
                        <div class="card-header-section">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                <h5 class="mb-0 neon-text">
                                    <i class="bi bi-door-open me-2"></i> Rooms in this Campus
                                </h5>
                                <button class="btn-glass-disabled" disabled>
                                    <i class="bi bi-plus me-2"></i> Add Room
                                </button>
                            </div>
                        </div>
                        <div class="card-body-details">
                            @if (Model.Campus.TotalRooms > 0)
                            {
                                <div class="alert-glass-info mb-4">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    This campus has <strong>@Model.Campus.TotalRooms room(s)</strong>.
                                    Room management feature will be available soon.
                                </div>
                                <div class="text-center">
                                    <button class="btn-glass-disabled" disabled>
                                        <i class="bi bi-list me-2"></i> View Rooms
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state-details">
                                    <i class="bi bi-inbox empty-icon"></i>
                                    <p class="empty-text">No rooms in this campus yet.</p>
                                    <button class="btn-glass-disabled" disabled>
                                        <i class="bi bi-plus-circle me-2"></i> Add First Room
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Actions & Statistics Sidebar -->
                <div class="col-lg-4">
                    <!-- Actions Card -->
                    <div class="glass-card-sidebar mb-4">
                        <div class="card-header-sidebar">
                            <h5 class="mb-0 neon-text">
                                <i class="bi bi-gear me-2"></i> Actions
                            </h5>
                        </div>
                        <div class="card-body-sidebar">
                            <div class="actions-grid">
                                <a asp-page="Edit" asp-route-id="@Model.Campus.Id"
                                   class="btn-action-edit">
                                    <i class="bi bi-pencil-square me-2"></i> Edit Campus
                                </a>
                                <button type="button" class="btn-action-delete"
                                        onclick="confirmDelete('@Model.Campus.Id', '@Model.Campus.Name')">
                                    <i class="bi bi-trash me-2"></i> Delete Campus
                                </button>
                                <a asp-page="Index" class="btn-action-back">
                                    <i class="bi bi-arrow-left me-2"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Card -->
                    <div class="glass-card-sidebar">
                        <div class="card-header-sidebar">
                            <h5 class="mb-0 neon-text">
                                <i class="bi bi-bar-chart-fill me-2"></i> Statistics
                            </h5>
                        </div>
                        <div class="card-body-sidebar">
                            <div class="stat-item">
                                <span class="stat-label">Total Rooms:</span>
                                <strong class="stat-value stat-primary">@Model.Campus.TotalRooms</strong>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Available Rooms:</span>
                                <strong class="stat-value stat-success">0</strong>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Booked Rooms:</span>
                                <strong class="stat-value stat-warning">0</strong>
                            </div>
                            <div class="stat-item stat-item-last">
                                <span class="stat-label">Under Maintenance:</span>
                                <strong class="stat-value stat-danger">0</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert-glass-warning">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Campus not found.
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content-glass">
            <div class="modal-header-glass modal-header-danger">
                <h5 class="modal-title mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close-modal" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="modal-body-glass">
                <p class="mb-3 text-light-glass">
                    Are you sure you want to delete campus <strong id="campusName" class="text-danger-neon"></strong>?
                </p>
                <div class="alert-glass-warning">
                    <i class="bi bi-info-circle me-2"></i>
                    <small><strong>Warning:</strong> This action cannot be undone. The campus will be soft deleted.</small>
                </div>
            </div>
            <div class="modal-footer-glass">
                <button type="button" class="btn-glass-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </button>
                <form method="post" asp-page-handler="Delete" class="d-inline">
                    <input type="hidden" name="id" id="campusId" value="@Model.Campus?.Id" />
                    <button type="submit" class="btn-danger-neon">
                        <i class="bi bi-trash me-2"></i> Delete Campus
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(campusId, campusName) {
            document.getElementById('campusName').textContent = campusName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Auto-hide alerts
        setTimeout(function() {
            var alerts = document.querySelectorAll('[class*="alert-glass"]');
            alerts.forEach(function(alert) {
                if (alert.querySelector('.btn-close-glass')) {
                    alert.style.display = 'none';
                }
            });
        }, 5000);
    </script>
}