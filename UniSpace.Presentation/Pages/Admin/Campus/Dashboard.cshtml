@page
@model UniSpace.Presentation.Pages.Admin.Campus.DashboardModel
@{
    ViewData["Title"] = "Campus Dashboard";
}

<div class="container-fluid mt-4 dashboard-container">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="glass-card p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="neon-text"><i class="bi bi-building"></i> Campus Dashboard</h2>
                        <p class="text-secondary">Comprehensive overview of all campus locations</p>
                    </div>
                    <div>
                        <a asp-page="Index" class="btn btn-glass me-2">
                            <i class="bi bi-list"></i> View All
                        </a>
                        <a asp-page="Create" class="btn btn-neon">
                            <i class="bi bi-plus-circle"></i> Add Campus
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards Row 1 -->
    <div class="row mb-4">
        <!-- Total Campuses -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card-new h-100">
                <div class="stat-card-content">
                    <div class="stat-header">
                        <span class="stat-title-new orange-text">TOTAL CAMPUSES</span>
                        <div class="stat-icon-circle orange-bg">
                            <i class="bi bi-building"></i>
                        </div>
                    </div>
                    <div class="stat-value-new">@Model.TotalCampuses</div>
                    <div class="stat-description">All registered locations</div>
                </div>
            </div>
        </div>

        <!-- Total Rooms -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card-new h-100">
                <div class="stat-card-content">
                    <div class="stat-header">
                        <span class="stat-title-new orange-text">TOTAL ROOMS</span>
                        <div class="stat-icon-circle orange-bg">
                            <i class="bi bi-door-open"></i>
                        </div>
                    </div>
                    <div class="stat-value-new">@Model.TotalRooms</div>
                    <div class="stat-description">Across all campuses</div>
                </div>
            </div>
        </div>

        <!-- Active Campuses -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card-new h-100">
                <div class="stat-card-content">
                    <div class="stat-header">
                        <span class="stat-title-new green-text">ACTIVE CAMPUSES</span>
                        <div class="stat-icon-circle green-bg">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                    <div class="stat-value-new">@Model.ActiveCampuses</div>
                    <div class="stat-description">Currently operational</div>
                </div>
            </div>
        </div>

        <!-- Campuses with Rooms -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stat-card-new h-100">
                <div class="stat-card-content">
                    <div class="stat-header">
                        <span class="stat-title-new orange-text">CAMPUSES WITH ROOMS</span>
                        <div class="stat-icon-circle orange-bg">
                            <i class="bi bi-grid-3x3"></i>
                        </div>
                    </div>
                    <div class="stat-value-new">@Model.CampusesWithRooms</div>
                    <div class="stat-description">Have assigned rooms</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards Row 2 -->
    <div class="row mb-4">
        <!-- Utilization Rate -->
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="stat-card-large h-100">
                <div class="stat-card-content">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-grid-3x3 orange-text me-2" style="font-size: 1.5rem;"></i>
                        <span class="stat-title-large orange-text">Campus Utilization Rate</span>
                    </div>
                    <div class="stat-value-large mb-2">@Model.CampusUtilizationRate%</div>
                    <div class="stat-description mb-3">Percentage of campuses with assigned rooms</div>
                    <div class="progress-bar-new">
                        <div class="progress-fill-new" style="width: @Model.CampusUtilizationRate%"></div>
                    </div>
                    <div class="mt-3 stat-footer-text">
                        @Model.CampusesWithRooms out of @Model.TotalCampuses campuses have rooms assigned
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Rooms -->
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="stat-card-large h-100">
                <div class="stat-card-content">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-door-open orange-text me-2" style="font-size: 1.5rem;"></i>
                        <span class="stat-title-large orange-text">Average Rooms per Campus</span>
                    </div>
                    <div class="stat-value-large mb-2">@Model.AverageRoomsPerCampus</div>
                    <div class="stat-description mb-4">Average number of rooms across all campuses</div>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon-circle-small orange-bg me-3">
                                <i class="bi bi-building"></i>
                            </div>
                            <span class="stat-inline-text">@Model.TotalCampuses Campuses</span>
                        </div>
                        <i class="bi bi-arrow-right text-muted" style="font-size: 1.5rem;"></i>
                        <div class="d-flex align-items-center">
                            <div class="stat-icon-circle-small orange-bg me-3">
                                <i class="bi bi-door-open"></i>
                            </div>
                            <span class="stat-inline-text">@Model.TotalRooms Rooms</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Campuses and Top Campuses -->
    <div class="row">
        <!-- Recent Campuses -->
        <div class="col-xl-6 col-md-12 mb-4">
            <div class="glass-card h-100">
                <div class="card-header-glass">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-clock-history neon-text"></i> Recent Campuses
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentCampuses.Any())
                    {
                        <div class="list-group-glass">
                            @foreach (var campus in Model.RecentCampuses)
                            {
                                <a asp-page="Details" asp-route-id="@campus.Id"
                                   class="list-item-glass">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1 text-light">
                                                <i class="bi bi-building neon-text"></i> @campus.Name
                                            </h6>
                                            <p class="mb-1 small text-secondary">
                                                <i class="bi bi-geo-alt"></i> @campus.Address
                                            </p>
                                            <small class="text-secondary">
                                                <i class="bi bi-calendar"></i> Created: @campus.CreatedAt.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge-neon">@campus.TotalRooms rooms</span>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-secondary"></i>
                            <p class="text-secondary mt-3">No campuses available</p>
                            <a asp-page="Create" class="btn btn-neon">
                                <i class="bi bi-plus-circle"></i> Create First Campus
                            </a>
                        </div>
                    }
                </div>
                @if (Model.RecentCampuses.Any())
                {
                    <div class="card-footer-glass">
                        <a asp-page="Index" class="btn btn-glass-small w-100">
                            <i class="bi bi-eye"></i> View All Campuses
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Top Campuses by Rooms -->
        <div class="col-xl-6 col-md-12 mb-4">
            <div class="glass-card h-100">
                <div class="card-header-glass">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-trophy neon-text"></i> Top Campuses by Rooms
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.TopCampusesByRooms.Any())
                    {
                        <div class="list-group-glass">
                            @for (int i = 0; i < Model.TopCampusesByRooms.Count; i++)
                            {
                                var campus = Model.TopCampusesByRooms[i];
                                var trophy = i == 0 ? "🥇" : i == 1 ? "🥈" : i == 2 ? "🥉" : "";

                                <a asp-page="Details" asp-route-id="@campus.Id"
                                   class="list-item-glass">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(trophy))
                                            {
                                                <span class="me-2" style="font-size: 1.5em;">@trophy</span>
                                            }
                                            else
                                            {
                                                <span class="badge-glass me-2">@(i + 1)</span>
                                            }
                                            <div>
                                                <h6 class="mb-1 text-light">@campus.Name</h6>
                                                <small class="text-secondary">@campus.Address</small>
                                            </div>
                                        </div>
                                        <div>
                                            <h5 class="mb-0">
                                                <span class="badge-neon">@campus.TotalRooms</span>
                                            </h5>
                                            <small class="text-secondary">rooms</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-secondary"></i>
                            <p class="text-secondary mt-3">No campuses with rooms yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Campus Room Distribution Chart -->
    @if (Model.CampusRoomDistribution.Any())
    {
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="glass-card">
                    <div class="card-header-glass">
                        <h6 class="m-0 font-weight-bold">
                            <i class="bi bi-bar-chart neon-text"></i> Campus Room Distribution
                        </h6>
                    </div>
                    <div class="card-body">
                        <canvas id="campusRoomChart" style="height: 300px;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <div class="glass-card">
                <div class="card-header-glass">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-lightning neon-text"></i> Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="Create" class="btn btn-neon btn-lg w-100">
                                <i class="bi bi-plus-circle"></i><br />
                                <small>Add New Campus</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="Index" class="btn btn-glass btn-lg w-100">
                                <i class="bi bi-list"></i><br />
                                <small>View All Campuses</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-glass btn-lg w-100" disabled>
                                <i class="bi bi-door-open"></i><br />
                                <small>Manage Rooms</small>
                            </button>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-glass btn-lg w-100" disabled>
                                <i class="bi bi-file-earmark-text"></i><br />
                                <small>Generate Report</small>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Dark Background */
    .dashboard-container {
        min-height: 100vh;
        padding: 20px;
    }

    /* New Statistics Cards (Row 1) */
    .stat-card-new {
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 12px;
        padding: 0;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .stat-card-new:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 138, 0, 0.15);
            border-color: rgba(255, 138, 0, 0.4);
        }

    .stat-card-content {
        padding: 24px;
    }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .stat-title-new {
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .stat-icon-circle {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #1a1a1a;
    }

    .orange-bg {
        background: linear-gradient(135deg, #ff8a00 0%, #e67700 100%);
    }

    .green-bg {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .orange-text {
        color: #ff8a00;
    }

    .green-text {
        color: #10b981;
    }

    .stat-value-new {
        font-size: 3rem;
        font-weight: 700;
        color: #ffffff;
        margin: 12px 0;
        line-height: 1;
    }

    .stat-description {
        font-size: 0.875rem;
        color: #9ca3af;
    }

    /* Large Statistics Cards (Row 2) */
    .stat-card-large {
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 12px;
        padding: 0;
        transition: all 0.3s ease;
    }

        .stat-card-large:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 138, 0, 0.15);
            border-color: rgba(255, 138, 0, 0.4);
        }

    .stat-title-large {
        font-size: 1rem;
        font-weight: 700;
        letter-spacing: 0.3px;
    }

    .stat-value-large {
        font-size: 3.5rem;
        font-weight: 700;
        color: #ffffff;
        line-height: 1;
    }

    .progress-bar-new {
        width: 100%;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill-new {
        height: 100%;
        background: linear-gradient(90deg, #ff8a00 0%, #ffb700 100%);
        border-radius: 20px;
        transition: width 0.8s ease;
        box-shadow: 0 0 15px rgba(255, 138, 0, 0.5);
    }

    .stat-footer-text {
        font-size: 0.875rem;
        color: #6b7280;
    }

    .stat-icon-circle-small {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: #1a1a1a;
    }

    .stat-inline-text {
        font-size: 1rem;
        color: #d1d5db;
        font-weight: 500;
    }

    /* Glassmorphism Cards */
    .glass-card {
        background: rgba(45, 45, 45, 0.4);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        transition: all 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.2);
            border: 1px solid rgba(255, 138, 0, 0.3);
        }

    /* Orange Neon Text */
    .neon-text {
        color: #ff8a00;
        font-weight: bold;
    }

    /* Card Headers */
    .card-header-glass {
        background: rgba(255, 138, 0, 0.1);
        border-bottom: 1px solid rgba(255, 138, 0, 0.3);
        padding: 15px 20px;
        border-radius: 15px 15px 0 0;
        color: #fff;
    }

    .card-footer-glass {
        background: rgba(45, 45, 45, 0.3);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 15px 20px;
        border-radius: 0 0 15px 15px;
    }

    /* Buttons */
    .btn-neon {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: bold;
        padding: 10px 25px;
        border-radius: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.5);
    }

        .btn-neon:hover {
            background: linear-gradient(135deg, #ff6b00 0%, #ff8a00 100%);
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.8), 0 0 40px rgba(255, 138, 0, 0.6);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-glass {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        padding: 10px 25px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-glass:hover {
            background: rgba(255, 138, 0, 0.2);
            border: 1px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.3);
        }

    .btn-glass-small {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        padding: 8px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .btn-glass-small:hover {
            background: rgba(255, 138, 0, 0.2);
            border: 1px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
        }

    /* List Items */
    .list-group-glass {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .list-item-glass {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 15px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

        .list-item-glass:hover {
            background: rgba(255, 138, 0, 0.1);
            border: 1px solid rgba(255, 138, 0, 0.4);
            transform: translateX(5px);
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    /* Badges */
    .badge-neon {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        color: #fff;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: bold;
        box-shadow: 0 0 15px rgba(255, 138, 0, 0.6);
        display: inline-block;
    }

    .badge-glass {
        background: rgba(255, 255, 255, 0.1);
        color: #ff8a00;
        padding: 6px 12px;
        border-radius: 20px;
        border: 1px solid rgba(255, 138, 0, 0.3);
        font-weight: bold;
        display: inline-block;
    }

    /* Text Colors */
    .text-secondary {
        color: #a0a0a0 !important;
    }

    .text-light {
        color: #e0e0e0 !important;
    }

    /* Card Body */
    .card-body {
        padding: 20px;
        color: #e0e0e0;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stat-value-new {
            font-size: 2.5rem;
        }

        .stat-value-large {
            font-size: 2.5rem;
        }

        .stat-icon-circle {
            width: 48px;
            height: 48px;
            font-size: 1.25rem;
        }
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Campus Room Distribution Chart
        @if (Model.CampusRoomDistribution.Any())
        {
                <text>
                const ctx = document.getElementById('campusRoomChart');
                const campusNames = @Html.Raw(Json.Serialize(Model.CampusRoomDistribution.Keys));
                const roomCounts = @Html.Raw(Json.Serialize(Model.CampusRoomDistribution.Values));

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: campusNames,
                        datasets: [{
                            label: 'Number of Rooms',
                            data: roomCounts,
                            backgroundColor: 'rgba(255, 138, 0, 0.6)',
                            borderColor: '#ff8a00',
                            borderWidth: 2,
                            borderRadius: 8,
                            hoverBackgroundColor: 'rgba(255, 138, 0, 0.8)',
                            hoverBorderColor: '#ff8a00',
                            shadowOffsetX: 0,
                            shadowOffsetY: 0,
                            shadowBlur: 20,
                            shadowColor: 'rgba(255, 138, 0, 0.5)'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    color: '#a0a0a0',
                                    font: {
                                        size: 12
                                    }
                                },
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)',
                                    borderColor: 'rgba(255, 255, 255, 0.2)'
                                }
                            },
                            x: {
                                ticks: {
                                    color: '#a0a0a0',
                                    font: {
                                        size: 12
                                    }
                                },
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.05)',
                                    borderColor: 'rgba(255, 255, 255, 0.2)'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                backgroundColor: 'rgba(45, 45, 45, 0.9)',
                                titleColor: '#ff8a00',
                                bodyColor: '#e0e0e0',
                                borderColor: '#ff8a00',
                                borderWidth: 1,
                                padding: 12,
                                displayColors: false,
                                callbacks: {
                                    label: function(context) {
                                        return context.parsed.y + ' rooms';
                                    }
                                }
                            }
                        }
                    }
                });
                </text>
        }
    </script>
}