@page
@model UniSpace.Presentation.Pages.Admin.Campus.IndexModel
@{
    ViewData["Title"] = "Campus Management";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-building"></i> Campus Management</h2>
                    <p class="text-muted">Manage all university campus locations</p>
                </div>
                <a asp-page="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Add New Campus
                </a>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search and Filter Bar -->
    <div class="row mb-4">
        <div class="col-md-8">
            <form method="get" class="input-group input-group-lg">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" name="search" class="form-control" 
                       placeholder="Search campus by name or address..." 
                       value="@Model.SearchTerm" />
                <button class="btn btn-primary" type="submit">
                    Search
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                }
            </form>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Dashboard" class="btn btn-info btn-lg">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
    </div>

    <!-- Campus Cards/Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> Campus List 
                        <span class="badge bg-light text-dark ms-2">@Model.Campuses.Count</span>
                    </h5>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-light active" id="viewTable">
                            <i class="bi bi-table"></i> Table
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-light" id="viewGrid">
                            <i class="bi bi-grid-3x3"></i> Grid
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Campuses.Any())
                    {
                        <!-- Table View -->
                        <div id="tableView">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 5%">#</th>
                                            <th style="width: 25%">
                                                <i class="bi bi-building"></i> Campus Name
                                            </th>
                                            <th style="width: 30%">
                                                <i class="bi bi-geo-alt"></i> Address
                                            </th>
                                            <th style="width: 10%" class="text-center">
                                                <i class="bi bi-door-open"></i> Rooms
                                            </th>
                                            <th style="width: 15%">
                                                <i class="bi bi-calendar"></i> Created
                                            </th>
                                            <th style="width: 15%" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Campuses.Count; i++)
                                        {
                                            var campus = Model.Campuses[i];
                                            <tr>
                                                <td><strong>@(i + 1)</strong></td>
                                                <td>
                                                    <strong class="text-primary">@campus.Name</strong>
                                                </td>
                                                <td>
                                                    <i class="bi bi-geo-alt text-muted"></i> @campus.Address
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-info rounded-pill">
                                                        @campus.TotalRooms
                                                    </span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @campus.CreatedAt.ToString("dd MMM yyyy")
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-page="Details" asp-route-id="@campus.Id" 
                                                           class="btn btn-info" title="View Details">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a asp-page="Edit" asp-route-id="@campus.Id" 
                                                           class="btn btn-warning" title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-danger" 
                                                                onclick="confirmDelete('@campus.Id', '@campus.Name')" 
                                                                title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Grid View (Hidden by default) -->
                        <div id="gridView" class="p-3" style="display: none;">
                            <div class="row g-3">
                                @foreach (var campus in Model.Campuses)
                                {
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100 shadow-sm hover-shadow">
                                            <div class="card-header bg-primary text-white">
                                                <h6 class="mb-0">
                                                    <i class="bi bi-building"></i> @campus.Name
                                                </h6>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <i class="bi bi-geo-alt text-muted"></i> 
                                                    @campus.Address
                                                </p>
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <span class="badge bg-info">
                                                        <i class="bi bi-door-open"></i> @campus.TotalRooms Rooms
                                                    </span>
                                                    <small class="text-muted">
                                                        @campus.CreatedAt.ToString("dd MMM yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="card-footer bg-light">
                                                <div class="d-flex gap-2">
                                                    <a asp-page="Details" asp-route-id="@campus.Id" 
                                                       class="btn btn-sm btn-info flex-fill">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                    <a asp-page="Edit" asp-route-id="@campus.Id" 
                                                       class="btn btn-sm btn-warning flex-fill">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-danger flex-fill"
                                                            onclick="confirmDelete('@campus.Id', '@campus.Name')">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <text>No campuses found matching "@Model.SearchTerm"</text>
                                }
                                else
                                {
                                    <text>No campuses available</text>
                                }
                            </h4>
                            <p class="text-muted">
                                @if (string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <text>Get started by creating your first campus</text>
                                }
                            </p>
                            <a asp-page="Create" class="btn btn-primary btn-lg mt-3">
                                <i class="bi bi-plus-circle"></i> Create First Campus
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    Are you sure you want to delete campus <strong id="campusName" class="text-danger"></strong>?
                </p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> 
                    <small>This action cannot be undone. All associated data will be marked as deleted.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form method="post" asp-page-handler="Delete" class="d-inline">
                    <input type="hidden" name="id" id="campusId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Campus
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@section Scripts {
    <script>
        // Delete confirmation
        function confirmDelete(campusId, campusName) {
            document.getElementById('campusId').value = campusId;
            document.getElementById('campusName').textContent = campusName;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // View toggle
        document.getElementById('viewTable').addEventListener('click', function() {
            document.getElementById('tableView').style.display = 'block';
            document.getElementById('gridView').style.display = 'none';
            this.classList.add('active');
            this.classList.remove('btn-outline-light');
            this.classList.add('btn-light');
            document.getElementById('viewGrid').classList.remove('active');
            document.getElementById('viewGrid').classList.add('btn-outline-light');
            document.getElementById('viewGrid').classList.remove('btn-light');
        });

        document.getElementById('viewGrid').addEventListener('click', function() {
            document.getElementById('tableView').style.display = 'none';
            document.getElementById('gridView').style.display = 'block';
            this.classList.add('active');
            this.classList.remove('btn-outline-light');
            this.classList.add('btn-light');
            document.getElementById('viewTable').classList.remove('active');
            document.getElementById('viewTable').classList.add('btn-outline-light');
            document.getElementById('viewTable').classList.remove('btn-light');
        });

        // Auto-hide alerts
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
