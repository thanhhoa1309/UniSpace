@page
@model UniSpace.Presentation.Pages.Admin.RoomReports.DetailsModel
@using UniSpace.BusinessObject.Enums
@{
    ViewData["Title"] = "Report Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
    .detail-card {
        border-radius: 15px;
        border: none;
        transition: all 0.3s ease;
    }

    .gradient-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px;
        color: white;
        border-radius: 15px 15px 0 0;
    }

    .info-section {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .info-row {
        padding: 15px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .status-badge-large {
        padding: 12px 24px;
        border-radius: 25px;
        font-size: 16px;
        font-weight: 600;
    }

    .description-box {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-left: 4px solid #667eea;
        padding: 25px;
        border-radius: 10px;
        min-height: 150px;
    }

    .action-buttons {
        position: sticky;
        top: 20px;
    }

    .btn-action {
        padding: 15px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .btn-action:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .timeline-item {
        position: relative;
        padding-left: 40px;
        margin-bottom: 20px;
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: 12px;
        top: 24px;
        height: 100%;
        width: 2px;
        background: #dee2e6;
    }

    .timeline-item:last-child::before {
        display: none;
    }

    .timeline-icon {
        position: absolute;
        left: 0;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background: white;
        border: 3px solid;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@if (Model.Report == null)
{
    <div class="container mt-5">
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Report Not Available</h4>
            <p>The report information could not be loaded.</p>
            <hr>
            <p class="mb-0">
                <a asp-page="./Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back to Reports List
                </a>
            </p>
        </div>
    </div>
}
else
{
    <div class="container-fluid px-4 py-4">
        <!-- Header -->
        <div class="card detail-card shadow-lg mb-4">
            <div class="gradient-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="display-6 fw-bold mb-2">
                            <i class="bi bi-file-text"></i> Report Details
                        </h1>
                        <p class="mb-0 opacity-75">Complete information about this room report</p>
                    </div>
                    <a asp-page="./Index" class="btn btn-light btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error!</strong> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <!-- Left Column - Report Details -->
            <div class="col-lg-8">
                <!-- Status & Issue Type -->
                <div class="card detail-card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="mb-0">
                                <i class="bi bi-tag-fill text-primary"></i>
                                @Model.Report.IssueType
                            </h4>
                            <span class="status-badge-large @(Model.Report.Status == ReportStatus.Open ? "bg-warning text-dark" : "bg-success text-white")">
                                <i class="bi bi-@(Model.Report.Status == ReportStatus.Open ? "exclamation-circle" : "check-circle")"></i>
                                @Model.Report.StatusDisplay
                            </span>
                        </div>

                        <!-- Basic Info -->
                        <div class="info-section">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="info-row">
                                        <small class="text-muted d-block mb-2">
                                            <i class="bi bi-person-circle"></i> Reporter
                                        </small>
                                        <strong class="fs-5">@Model.Report.UserName</strong><br>
                                        <small class="text-muted">@Model.Report.UserEmail</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-row">
                                        <small class="text-muted d-block mb-2">
                                            <i class="bi bi-door-open"></i> Room
                                        </small>
                                        <strong class="fs-5">@Model.Report.RoomName</strong><br>
                                        <small class="text-muted"><i class="bi bi-building"></i> @Model.Report.CampusName</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mt-4">
                            <h5 class="mb-3">
                                <i class="bi bi-chat-left-quote"></i> Issue Description
                            </h5>
                            <div class="description-box">
                                <i class="bi bi-quote fs-3 text-muted d-block mb-3"></i>
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Report.Description</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Timeline -->
                <div class="card detail-card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="mb-4">
                            <i class="bi bi-clock-history"></i> Timeline
                        </h5>

                        <div class="timeline-item">
                            <div class="timeline-icon border-primary">
                                <i class="bi bi-plus-circle text-primary"></i>
                            </div>
                            <div>
                                <strong>Report Created</strong>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @Model.Report.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")
                                </small>
                                <p class="mb-0 mt-2 text-muted">
                                    Report submitted by @Model.Report.UserName
                                </p>
                            </div>
                        </div>

                        @if (Model.Report.UpdatedAt.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-icon border-@(Model.Report.Status == ReportStatus.Open ? "warning" : "success")">
                                    <i class="bi bi-@(Model.Report.Status == ReportStatus.Open ? "arrow-counterclockwise" : "check-circle") text-@(Model.Report.Status == ReportStatus.Open ? "warning" : "success")"></i>
                                </div>
                                <div>
                                    <strong>Status Updated</strong>
                                    <br>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @Model.Report.UpdatedAt.Value.ToString("MMMM dd, yyyy 'at' HH:mm")
                                    </small>
                                    <p class="mb-0 mt-2 text-muted">
                                        Report marked as @Model.Report.StatusDisplay.ToLower()
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column - Actions & Info -->
            <div class="col-lg-4">
                <!-- Quick Actions -->
                <div class="card detail-card shadow-sm mb-4 action-buttons">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-lightning-charge"></i> Quick Actions
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-grid gap-3">
                            @if (Model.Report.Status == ReportStatus.Open)
                            {
                                <form method="post" asp-page-handler="Resolve" asp-route-id="@Model.Report.Id" 
                                      onsubmit="return confirmResolve();">
                                    <button type="submit" class="btn btn-success btn-action w-100">
                                        <i class="bi bi-check-circle-fill"></i>
                                        Mark as Resolved
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Reopen" asp-route-id="@Model.Report.Id"
                                      onsubmit="return confirmReopen();">
                                    <button type="submit" class="btn btn-warning btn-action w-100">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                        Reopen Report
                                    </button>
                                </form>
                            }

                            <a asp-page="/Admin/Booking/Details" asp-route-id="@Model.Report.BookingId" class="btn btn-outline-primary btn-action">
                                <i class="bi bi-calendar-check"></i>
                                View Related Booking
                            </a>

                            <a asp-page="/Admin/Room/Details" asp-route-id="@Model.Report.RoomId" class="btn btn-outline-secondary btn-action">
                                <i class="bi bi-door-open"></i>
                                View Room Details
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="card detail-card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-info-circle"></i> Additional Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Report ID</small>
                            <code class="text-primary">@Model.Report.Id</code>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Booking ID</small>
                            <code class="text-primary">@Model.Report.BookingId</code>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Room ID</small>
                            <code class="text-primary">@Model.Report.RoomId</code>
                        </div>
                        <div>
                            <small class="text-muted d-block mb-1">User ID</small>
                            <code class="text-primary">@Model.Report.UserId</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmResolve() {
            event.preventDefault();
            
            Swal.fire({
                title: 'Mark as Resolved?',
                html: `
                    <div class="text-start">
                        <p class="mb-2"><strong>Issue:</strong> @Model.Report?.IssueType</p>
                        <p class="mb-2"><strong>Room:</strong> @Model.Report?.RoomName</p>
                        <p class="text-muted mb-0"><i class="bi bi-info-circle"></i> This will mark the report as resolved and notify the user.</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-check-circle"></i> Yes, Resolve!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
            
            return false;
        }

        function confirmReopen() {
            event.preventDefault();
            
            Swal.fire({
                title: 'Reopen Report?',
                html: `
                    <div class="text-start">
                        <p class="mb-2"><strong>Issue:</strong> @Model.Report?.IssueType</p>
                        <p class="mb-2"><strong>Room:</strong> @Model.Report?.RoomName</p>
                        <p class="text-muted mb-0"><i class="bi bi-info-circle"></i> This will reopen the report for further action.</p>
                    </div>
                `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-arrow-counterclockwise"></i> Yes, Reopen!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
            
            return false;
        }

        // Auto-dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
