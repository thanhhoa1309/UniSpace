<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniSpace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            background-attachment: fixed;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        footer {
            margin-top: auto;
        }

        /* Navbar Glassmorphism */
        .navbar-glass {
            background: rgba(45, 45, 45, 0.8) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 138, 0, 0.2) !important;
            position: relative;
            z-index: 1;
        }

        .navbar-brand {
            color: #ff8a00 !important;
            font-weight: 700;
            font-size: 1.5rem;
            transition: color 0.3s ease;
            padding-left: 2.5rem !important
        }

            .navbar-brand:hover {
                color: #ff6b00 !important;
                text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
            }

        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            transition: all 0.3s ease;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ff8a00 !important;
                transform: translateY(-2px);
            }

        .dropdown-menu {
            background: rgba(45, 45, 45, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 138, 0, 0.2);
            border-radius: 15px;
        }

        /* Ensure dropdown parent has proper stacking context */

        /* Ensure shown dropdown stays on top */

        .dropdown-item {
            color: rgba(255, 255, 255, 0.9);
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background: rgba(255, 138, 0, 0.1);
                color: #ff8a00;
            }

        .dropdown-divider {
            border-color: rgba(255, 255, 255, 0.1);
        }

        /* Badge Styles */
        .badge.bg-warning {
            background: linear-gradient(135deg, #ff8a00, #ff6b00) !important;
            border: 1px solid rgba(255, 138, 0, 0.3);
        }

        .badge.bg-info {
            background: linear-gradient(135deg, #00ffff, #0080ff) !important;
            border: 1px solid rgba(0, 255, 255, 0.3);
        }

        .badge.bg-success {
            background: linear-gradient(135deg, #10b981, #059669) !important;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        /* Footer Glassmorphism */
        .footer-glass {
            background: rgba(45, 45, 45, 0.8) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-top: 1px solid rgba(255, 138, 0, 0.2) !important;
            color: rgba(255, 255, 255, 0.7) !important;
        }

        /* Navbar Toggler */
        .navbar-toggler {
            border-color: rgba(255, 138, 0, 0.3);
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 0.25rem rgba(255, 138, 0, 0.25);
            }

        .navbar-toggler-icon {
            filter: brightness(0) invert(1);
        }

        /* Guest User Links Padding */
        .navbar-nav > li:last-child .nav-link {
            padding-right: 2.5rem !important;
        }

        .navbar-nav > li:nth-last-child(1) {
            margin-left: 1rem;
        }

    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-glass border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/Logo -->
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-mortarboard"></i> UniSpace
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Left Side Navigation -->
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Authenticated User Navigation -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- User Menu (Students & Lecturers) -->
                            @if (User.IsInRole("Student") || User.IsInRole("Lecturer"))
                            {
                                <!-- Dashboard -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Dashboard">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>

                                <!-- Booking Menu -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-calendar-check"></i> Bookings
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-page="/Bookings/SearchRooms">
                                                <i class="bi bi-search"></i> Search Rooms
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Bookings/MyBookings">
                                                <i class="bi bi-list-check"></i> My Bookings
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Reports -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/RoomReports/MyReports">
                                        <i class="bi bi-file-text"></i> My Reports
                                    </a>
                                </li>
                            }

                            <!-- Admin Menu -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- Admin Dashboard -->
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Dashboard">
                                                <i class="bi bi-speedometer2"></i> Admin Dashboard
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>

                                        <!-- Campus Management -->
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Campus/Dashboard">
                                                <i class="bi bi-building"></i> Campus Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Campus/Index">
                                                <i class="bi bi-list"></i> Manage Campuses
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>

                                        <!-- Room Management -->
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Room/Dashboard">
                                                <i class="bi bi-door-open"></i> Room Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Room/Index">
                                                <i class="bi bi-list"></i> Manage Rooms
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>

                                        <!-- Schedule Management -->
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Schedule/Dashboard">
                                                <i class="bi bi-calendar3"></i> Schedule Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Schedule/Index">
                                                <i class="bi bi-list"></i> Manage Schedules
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>

                                        <!-- Reports & Analytics -->
                                        <li>
                                            <a class="dropdown-item" asp-page="/RoomReports/MyReports">
                                                <i class="bi bi-file-text"></i> Room Reports
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right Side - User Account -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Logged In User Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    @User.Identity.Name

                                    <!-- Role Badge -->
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("Teacher"))
                                    {
                                        <span class="badge bg-info text-dark ms-1">Teacher</span>
                                    }
                                    else if (User.IsInRole("Student"))
                                    {
                                        <span class="badge bg-success ms-1">Student</span>
                                    }
                                </a>

                                <!-- User Dropdown Menu -->
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bi bi-person"></i> Profile
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Student") || User.IsInRole("Lecturer"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/Bookings/MyBookings">
                                                <i class="bi bi-calendar-check"></i> My Bookings
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/RoomReports/MyReports">
                                                <i class="bi bi-file-text"></i> My Reports
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Auth/Logout">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Guest User Links -->
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="border-top footer footer-glass text-center py-3">
        <div class="container">
            <p class="mb-0">
                &copy; @DateTime.Now.Year UniSpace - University Space Management System
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>