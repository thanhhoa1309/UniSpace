@page
@model UniSpace.Presentation.Pages.Bookings.MyBookingsModel
@using UniSpace.BusinessObject.Enums
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check"></i> My Bookings
                            <span class="badge bg-info ms-2" id="realTimeIndicator" style="display:none;">
                                <i class="bi bi-broadcast"></i> Live
                            </span>
                        </h5>
                        <a href="/Bookings/SearchRooms" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-circle"></i> New Booking
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i> <strong>Error!</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> <strong>Success!</strong> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Real-time notification area -->
                    <div id="realtimeNotification" class="alert alert-success alert-dismissible fade show d-none" role="alert">
                        <i class="bi bi-info-circle"></i> <span id="notificationMessage"></span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>

                    <!-- Filter -->
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label for="statusFilter" class="form-label">
                                <i class="bi bi-funnel"></i> Filter by Status
                            </label>
                            <select class="form-select" id="statusFilter" name="statusFilter" onchange="this.form.submit()">
                                <option value="">All Statuses</option>
                                <option value="0" selected="@(Model.StatusFilter == BookingStatus.Pending)">Pending</option>
                                <option value="1" selected="@(Model.StatusFilter == BookingStatus.Approved)">Approved</option>
                                <option value="2" selected="@(Model.StatusFilter == BookingStatus.Rejected)">Rejected</option>
                                <option value="3" selected="@(Model.StatusFilter == BookingStatus.Completed)">Completed</option>
                                <option value="4" selected="@(Model.StatusFilter == BookingStatus.Cancelled)">Cancelled</option>
                            </select>
                        </div>
                    </form>

                    @if (Model.Bookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0" id="bookingsTable">
                                <thead>
                                    <tr>
                                        <th>ROOM</th>
                                        <th>TIME</th>
                                        <th>PURPOSE</th>
                                        <th class="text-center">STATUS</th>
                                        <th class="text-center">ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.Bookings)
                                    {
                                        <tr data-booking-id="@booking.Id" id="booking-@booking.Id">
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <strong class="mb-1">@booking.RoomName</strong>
                                                    <small class="text-muted">
                                                        @booking.CampusName | @booking.RoomTypeDisplay
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <strong class="mb-1">
                                                        @booking.StartTime.ToLocalTime().ToString("MMM dd, yyyy")
                                                    </strong>
                                                    <small class="text-muted">
                                                        @booking.StartTime.ToLocalTime().ToString("HH:mm") - @booking.EndTime.ToLocalTime().ToString("HH:mm")
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-muted">
                                                    @(booking.Purpose.Length > 50 ? booking.Purpose.Substring(0, 50) + "..." : booking.Purpose)
                                                </span>
                                            </td>
                                            <td class="text-center booking-status">
                                                @{
                                                    var badgeClass = booking.Status switch
                                                    {
                                                        BookingStatus.Pending => "bg-warning",
                                                        BookingStatus.Approved => "bg-success",
                                                        BookingStatus.Rejected => "bg-danger",
                                                        BookingStatus.Completed => "bg-info",
                                                        BookingStatus.Cancelled => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass status-badge" data-status="@booking.Status">
                                                    @booking.StatusDisplay
                                                </span>
                                                @if (!string.IsNullOrEmpty(booking.AdminNote))
                                                {
                                                    <br><small class="text-muted mt-1 admin-note">Note: @booking.AdminNote</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <a href="/Bookings/Details?id=@booking.Id" 
                                                       class="btn btn-sm btn-info text-white" 
                                                       title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>

                                                    @if (booking.Status == BookingStatus.Pending)
                                                    {
                                                        <a href="/Bookings/Edit?id=@booking.Id" 
                                                           class="btn btn-sm btn-warning text-white action-edit" 
                                                           title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    }

                                                    @if (booking.Status == BookingStatus.Pending || booking.Status == BookingStatus.Approved)
                                                    {
                                                        <form method="post" 
                                                              asp-page-handler="Cancel" 
                                                              asp-route-id="@booking.Id" 
                                                              class="d-inline action-cancel"
                                                              onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                                            <button type="submit" 
                                                                    class="btn btn-sm btn-danger text-white" 
                                                                    title="Cancel">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        </form>
                                                    }

                                                    @if (booking.Status == BookingStatus.Completed)
                                                    {
                                                        <a href="/RoomReports/Create?bookingId=@booking.Id" 
                                                           class="btn btn-sm btn-dark text-white action-report" 
                                                           title="Report Issue">
                                                            <i class="bi bi-exclamation-triangle"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    @{
                                        var prevDisabled = Model.PageNumber == 1 ? "disabled" : "";
                                        var nextDisabled = Model.PageNumber == Model.TotalPages ? "disabled" : "";
                                    }
                                    <li class="page-item @prevDisabled">
                                        <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)@(Model.StatusFilter.HasValue ? $"&statusFilter={(int)Model.StatusFilter}" : "")">
                                            <i class="bi bi-chevron-left"></i> Previous
                                        </a>
                                    </li>

                                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                    {
                                        var activeClass = i == Model.PageNumber ? "active" : "";
                                        <li class="page-item @activeClass">
                                            <a class="page-link" href="?pageNumber=@i@(Model.StatusFilter.HasValue ? $"&statusFilter={(int)Model.StatusFilter}" : "")">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @nextDisabled">
                                        <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)@(Model.StatusFilter.HasValue ? $"&statusFilter={(int)Model.StatusFilter}" : "")">
                                            Next <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle"></i> You don't have any bookings yet.
                            <a href="/Bookings/SearchRooms" class="alert-link">Start booking now!</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize SignalR connection
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/bookingHub")
                .withAutomaticReconnect()
                .configureLogging(signalR.LogLevel.Information)
                .build();

            // Connection handlers
            connection.onreconnecting(() => {
                console.log('SignalR: Reconnecting...');
                $('#realTimeIndicator').removeClass('bg-info').addClass('bg-warning').show();
            });

            connection.onreconnected(() => {
                console.log('SignalR: Reconnected');
                $('#realTimeIndicator').removeClass('bg-warning').addClass('bg-info');
                showNotification('Connection restored', 'success');
            });

            connection.onclose(() => {
                console.log('SignalR: Connection closed');
                $('#realTimeIndicator').hide();
            });

            // Listen for booking status updates
            connection.on("BookingStatusUpdated", function(data) {
                console.log('Booking status updated:', data);
                updateBookingStatus(data.bookingId, data.status, data.message);
                showNotification(data.message, 'info');
            });

            // Listen for booking completion
            connection.on("BookingCompleted", function(data) {
                console.log('Booking completed:', data);
                updateBookingToCompleted(data.bookingId, data.roomName);
                showNotification(`Your booking for "${data.roomName}" has been completed!`, 'success');
            });

            // Start connection
            connection.start()
                .then(() => {
                    console.log('SignalR: Connected');
                    $('#realTimeIndicator').show();
                })
                .catch(err => {
                    console.error('SignalR connection error:', err);
                });

            // Update booking status in UI
            function updateBookingStatus(bookingId, newStatus, message) {
                const row = $(`tr[data-booking-id="${bookingId}"]`);
                if (row.length === 0) return;

                const statusCell = row.find('.booking-status');
                const statusBadge = statusCell.find('.status-badge');
                
                // Update badge class and text
                const statusInfo = getStatusInfo(newStatus);
                statusBadge.removeClass()
                    .addClass(`badge ${statusInfo.class} status-badge`)
                    .attr('data-status', newStatus)
                    .text(statusInfo.text);

                // Add glow animation
                row.addClass('table-success');
                setTimeout(() => row.removeClass('table-success'), 2000);

                // Update actions based on new status
                updateActionButtons(row, newStatus);
            }

            function updateBookingToCompleted(bookingId, roomName) {
                const row = $(`tr[data-booking-id="${bookingId}"]`);
                if (row.length === 0) return;

                // Update status badge
                const statusBadge = row.find('.status-badge');
                statusBadge.removeClass()
                    .addClass('badge bg-info status-badge')
                    .attr('data-status', 'Completed')
                    .text('Completed');

                // Add report button
                const actionsCell = row.find('.action-buttons');
                actionsCell.find('.action-edit, .action-cancel').remove();
                
                if (actionsCell.find('.action-report').length === 0) {
                    actionsCell.append(`
                        <a href="/RoomReports/Create?bookingId=${bookingId}" 
                           class="btn btn-sm btn-dark text-white action-report" 
                           title="Report Issue">
                            <i class="bi bi-exclamation-triangle"></i>
                        </a>
                    `);
                }

                // Highlight row
                row.addClass('table-info');
                setTimeout(() => row.removeClass('table-info'), 3000);
            }

            function updateActionButtons(row, status) {
                const actionsCell = row.find('.action-buttons');
                
                // Remove old action buttons
                actionsCell.find('.action-edit, .action-cancel, .action-report').remove();

                // Add appropriate buttons based on status
                if (status === 'Pending') {
                    // Add edit and cancel buttons
                    actionsCell.append(`
                        <a href="/Bookings/Edit?id=${row.data('booking-id')}" 
                           class="btn btn-sm btn-warning text-white action-edit" 
                           title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    `);
                }
                
                if (status === 'Pending' || status === 'Approved') {
                    // Add cancel button
                    actionsCell.append(`
                        <form method="post" 
                              action="?handler=Cancel&id=${row.data('booking-id')}" 
                              class="d-inline action-cancel"
                              onsubmit="return confirm('Are you sure?');">
                            <button type="submit" 
                                    class="btn btn-sm btn-danger text-white" 
                                    title="Cancel">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </form>
                    `);
                }

                if (status === 'Completed') {
                    // Add report button
                    actionsCell.append(`
                        <a href="/RoomReports/Create?bookingId=${row.data('booking-id')}" 
                           class="btn btn-sm btn-dark text-white action-report" 
                           title="Report Issue">
                            <i class="bi bi-exclamation-triangle"></i>
                        </a>
                    `);
                }
            }

            function getStatusInfo(status) {
                const statusMap = {
                    'Pending': { class: 'bg-warning', text: 'Pending' },
                    'Approved': { class: 'bg-success', text: 'Approved' },
                    'Rejected': { class: 'bg-danger', text: 'Rejected' },
                    'Completed': { class: 'bg-info', text: 'Completed' },
                    'Cancelled': { class: 'bg-secondary', text: 'Cancelled' }
                };
                return statusMap[status] || { class: 'bg-secondary', text: status };
            }

            function showNotification(message, type = 'info') {
                const notification = $('#realtimeNotification');
                const messageSpan = $('#notificationMessage');
                
                // Update notification style
                notification.removeClass('alert-info alert-success alert-warning alert-danger')
                    .addClass(`alert-${type}`);
                
                // Set message
                messageSpan.text(message);
                
                // Show notification
                notification.removeClass('d-none').addClass('show');
                
                // Auto hide after 5 seconds
                setTimeout(() => {
                    notification.removeClass('show').addClass('d-none');
                }, 5000);
            }
        });
    </script>

    <style>
        @@keyframes glow {
            0%, 100% { background-color: transparent; }
            50% { background-color: rgba(25, 135, 84, 0.2); }
        }

        .table-success {
            animation: glow 2s ease-in-out;
        }

        .table-info {
            animation: glow 3s ease-in-out;
            background-color: rgba(13, 202, 240, 0.2) !important;
        }

        #realTimeIndicator {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
    </style>
}
