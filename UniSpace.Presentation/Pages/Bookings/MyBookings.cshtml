@page
@model UniSpace.Presentation.Pages.Bookings.MyBookingsModel
@using UniSpace.BusinessObject.Enums
@{
    ViewData["Title"] = "My Bookings";
}

<style>
    /* Page Container */
    .mybookings-page-container {
        min-height: 100vh;
        padding: 40px 0;
    }

    /* Glass Card */
    .glass-card-bookings {
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .glass-card-bookings:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Card Header */
    .glass-card-header-bookings {
        background: rgba(255, 138, 0, 0.15);
        border-bottom: 2px solid rgba(255, 138, 0, 0.3);
        padding: 20px 24px;
    }

        .glass-card-header-bookings h5 {
            color: #ff8a00;
            font-weight: bold;
            margin: 0;
        }

    /* Card Body */
    .glass-card-body-bookings {
        padding: 24px;
    }

    /* Real-time indicator */
    .badge-live {
        background: rgba(6, 182, 212, 0.2);
        border: 1px solid rgba(6, 182, 212, 0.4);
        color: #06b6d4;
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 0.85rem;
        animation: pulse 2s infinite;
    }

    /* Buttons */
    .btn-neon-primary {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 8px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-neon-primary:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    /* Alert Styling */
    .alert-glass-danger {
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #fca5a5;
        margin-bottom: 20px;
    }

    .alert-glass-success {
        background: rgba(16, 185, 129, 0.15);
        border: 1px solid rgba(16, 185, 129, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #6ee7b7;
        margin-bottom: 20px;
    }

    .alert-glass-info {
        background: rgba(6, 182, 212, 0.15);
        border: 1px solid rgba(6, 182, 212, 0.4);
        border-radius: 10px;
        padding: 16px 20px;
        color: #22d3ee;
    }

    /* Filter Section */
    .filter-section {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        padding: 16px;
        margin-bottom: 24px;
    }

    .form-label-glass {
        color: #e0e0e0;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-select-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 10px 14px;
        transition: all 0.3s ease;
    }

        .form-select-glass:focus {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 138, 0, 0.6);
            outline: none;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.2);
            color: #ffffff;
        }

        .form-select-glass option {
            background: #2d2d2d;
            color: #ffffff;
        }

    /* Table Styling */
    .table-glass {
        color: #e0e0e0;
        margin-bottom: 0;
    }

        .table-glass thead th {
            background: rgba(255, 138, 0, 0.1);
            color: #ff8a00;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(255, 138, 0, 0.3);
            padding: 16px 12px;
            border: none;
        }

        .table-glass tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .table-glass tbody tr:hover {
                background: rgba(255, 138, 0, 0.05);
            }

        .table-glass tbody td {
            padding: 16px 12px;
            vertical-align: middle;
            border: none;
        }

        .table-glass strong {
            color: #ff8a00;
        }

        .table-glass .text-muted {
            color: #9ca3af !important;
        }

    /* Status Badges */
    .badge-neon {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        color: #fff;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
        box-shadow: 0 0 15px rgba(255, 138, 0, 0.5);
    }

    .badge-glass-success {
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.4);
        color: #10b981;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    .badge-glass-danger {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.4);
        color: #f87171;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    .badge-glass-info {
        background: rgba(6, 182, 212, 0.2);
        border: 1px solid rgba(6, 182, 212, 0.4);
        color: #06b6d4;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    .badge-glass-secondary {
        background: rgba(156, 163, 175, 0.2);
        border: 1px solid rgba(156, 163, 175, 0.4);
        color: #9ca3af;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    /* Action Buttons */
    .btn-action-glass {
        padding: 6px 12px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.875rem;
        margin: 0 2px;
    }

    .btn-action-info {
        background: rgba(59, 130, 246, 0.2);
        color: #60a5fa;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

        .btn-action-info:hover {
            background: rgba(59, 130, 246, 0.3);
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
            color: #60a5fa;
        }

    .btn-action-warning {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
        border: 1px solid rgba(251, 191, 36, 0.3);
    }

        .btn-action-warning:hover {
            background: rgba(251, 191, 36, 0.3);
            box-shadow: 0 0 15px rgba(251, 191, 36, 0.4);
            color: #fbbf24;
        }

    .btn-action-danger {
        background: rgba(239, 68, 68, 0.2);
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

        .btn-action-danger:hover {
            background: rgba(239, 68, 68, 0.3);
            box-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
            color: #f87171;
        }

    .btn-action-dark {
        background: rgba(75, 85, 99, 0.2);
        color: #9ca3af;
        border: 1px solid rgba(75, 85, 99, 0.3);
    }

        .btn-action-dark:hover {
            background: rgba(75, 85, 99, 0.3);
            box-shadow: 0 0 15px rgba(75, 85, 99, 0.4);
            color: #9ca3af;
        }

    /* Pagination */
    .pagination-glass {
        display: flex;
        gap: 8px;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .page-item.active .page-link-glass {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border-color: #ff8a00;
        color: #fff;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.5);
    }

    .page-item.disabled .page-link-glass {
        background: rgba(255, 255, 255, 0.02);
        border-color: rgba(255, 255, 255, 0.1);
        color: #6b7280;
        cursor: not-allowed;
        pointer-events: none;
    }

    .page-link-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        color: #ffffff;
        padding: 8px 14px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        min-width: 40px;
        text-align: center;
    }

        .page-link-glass:hover:not(.page-item.disabled .page-link-glass) {
            background: rgba(255, 138, 0, 0.2);
            border-color: rgba(255, 138, 0, 0.4);
            color: #ff8a00;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.3);
        }

    /* Animation */
    @@keyframes glow {
        0%, 100% {
            background-color: transparent;
        }

        50% {
            background-color: rgba(16, 185, 129, 0.2);
        }
    }

    .table-success {
        animation: glow 2s ease-in-out;
    }

    .table-info {
        animation: glow 3s ease-in-out;
        background-color: rgba(6, 182, 212, 0.2) !important;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    /* Empty State */
    .empty-state-glass {
        text-align: center;
        padding: 60px 40px;
        color: #9ca3af;
    }

        .empty-state-glass i {
            font-size: 4rem;
            color: #ff8a00;
            margin-bottom: 20px;
        }

        .empty-state-glass a {
            color: #ff8a00;
            text-decoration: none;
            font-weight: 600;
        }

            .empty-state-glass a:hover {
                color: #ffa500;
                text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-card-body-bookings {
            padding: 20px;
        }
    }
</style>

<div class="mybookings-page-container">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="glass-card-bookings mb-4">
                    <div class="glass-card-header-bookings">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar-check"></i> My Bookings
                                <span class="badge-live ms-2" id="realTimeIndicator" style="display:none;">
                                    <i class="bi bi-broadcast"></i> Live
                                </span>
                            </h5>
                            <a href="/Bookings/SearchRooms" class="btn btn-neon-primary btn-sm">
                                <i class="bi bi-plus-circle"></i> New Booking
                            </a>
                        </div>
                    </div>
                    <div class="glass-card-body-bookings">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert-glass-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-circle"></i> <strong>Error!</strong> @TempData["Error"]
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close" style="filter: brightness(0) invert(1);"></button>
                            </div>
                        }

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert-glass-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle"></i> <strong>Success!</strong> @TempData["Success"]
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close" style="filter: brightness(0) invert(1);"></button>
                            </div>
                        }

                        <!-- Real-time notification area -->
                        <div id="realtimeNotification" class="alert-glass-success alert-dismissible fade show d-none" role="alert">
                            <i class="bi bi-info-circle"></i> <span id="notificationMessage"></span>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
                        </div>

                        <!-- Filter -->
                        <div class="filter-section">
                            <form method="get" class="row g-3">
                                <div class="col-md-3">
                                    <label for="statusFilter" class="form-label-glass">
                                        <i class="bi bi-funnel"></i> Filter by Status
                                    </label>
                                    <select class="form-select-glass" id="statusFilter" name="statusFilter" onchange="this.form.submit()">
                                        <option value="">All Statuses</option>
                                        <option value="0" selected="@(Model.StatusFilter == BookingStatus.Pending)">Pending</option>
                                        <option value="1" selected="@(Model.StatusFilter == BookingStatus.Approved)">Approved</option>
                                        <option value="2" selected="@(Model.StatusFilter == BookingStatus.Rejected)">Rejected</option>
                                        <option value="3" selected="@(Model.StatusFilter == BookingStatus.Completed)">Completed</option>
                                        <option value="4" selected="@(Model.StatusFilter == BookingStatus.Cancelled)">Cancelled</option>
                                    </select>
                                </div>
                            </form>
                        </div>

                        @if (Model.Bookings.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-glass align-middle mb-0" id="bookingsTable">
                                    <thead>
                                        <tr>
                                            <th>ROOM</th>
                                            <th>TIME</th>
                                            <th>PURPOSE</th>
                                            <th class="text-center">STATUS</th>
                                            <th class="text-center">ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var booking in Model.Bookings)
                                        {
                                            <tr data-booking-id="@booking.Id" id="booking-@booking.Id">
                                                <td>
                                                    <div class="d-flex flex-column">
                                                        <strong class="mb-1">@booking.RoomName</strong>
                                                        <small class="text-muted">
                                                            @booking.CampusName | @booking.RoomTypeDisplay
                                                        </small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex flex-column">
                                                        <strong class="mb-1">
                                                            @booking.StartTime.ToLocalTime().ToString("MMM dd, yyyy")
                                                        </strong>
                                                        <small class="text-muted">
                                                            @booking.StartTime.ToLocalTime().ToString("HH:mm") - @booking.EndTime.ToLocalTime().ToString("HH:mm")
                                                        </small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="text-muted">
                                                        @(booking.Purpose.Length > 50 ? booking.Purpose.Substring(0, 50) + "..." : booking.Purpose)
                                                    </span>
                                                </td>
                                                <td class="text-center booking-status">
                                                    @{
                                                        var badgeClass = booking.Status switch
                                                        {
                                                            BookingStatus.Pending => "badge-neon",
                                                            BookingStatus.Approved => "badge-glass-success",
                                                            BookingStatus.Rejected => "badge-glass-danger",
                                                            BookingStatus.Completed => "badge-glass-info",
                                                            BookingStatus.Cancelled => "badge-glass-secondary",
                                                            _ => "badge-glass-secondary"
                                                        };
                                                    }
                                                    <span class="badge @badgeClass status-badge" data-status="@booking.Status">
                                                        @booking.StatusDisplay
                                                    </span>
                                                    @if (!string.IsNullOrEmpty(booking.AdminNote))
                                                    {
                                                        <br>
                                            
                                                        <small class="text-muted mt-1 admin-note">Note: @booking.AdminNote</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="action-buttons d-flex justify-content-center">
                                                        <a href="/Bookings/Details?id=@booking.Id"
                                                           class="btn btn-action-glass btn-action-info"
                                                           title="View Details">
                                                            <i class="bi bi-eye"></i>
                                                        </a>

                                                        @if (booking.Status == BookingStatus.Pending)
                                                        {
                                                            <a href="/Bookings/Edit?id=@booking.Id"
                                                               class="btn btn-action-glass btn-action-warning action-edit"
                                                               title="Edit">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                        }

                                                        @if (booking.Status == BookingStatus.Pending || booking.Status == BookingStatus.Approved)
                                                        {
                                                            <form method="post"
                                                                  asp-page-handler="Cancel"
                                                                  asp-route-id="@booking.Id"
                                                                  class="d-inline action-cancel"
                                                                  onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                                                <button type="submit"
                                                                        class="btn btn-action-glass btn-action-danger"
                                                                        title="Cancel">
                                                                    <i class="bi bi-x-circle"></i>
                                                                </button>
                                                            </form>
                                                        }

                                                        @if (booking.Status == BookingStatus.Completed)
                                                        {
                                                            <a asp-page="/RoomReports/Create" 
                                                               asp-route-bookingId="@booking.Id" 
                                                               class="btn btn-warning">
                                                                <i class="bi bi-exclamation-triangle"></i> Report Issue
                                                            </a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            @if (Model.TotalPages > 1)
                            {
                                <nav aria-label="Page navigation" class="mt-4">
                                    <ul class="pagination pagination-glass justify-content-center mb-0">
                                        @{
                                            var prevDisabled = Model.PageNumber == 1 ? "disabled" : "";
                                            var nextDisabled = Model.PageNumber == Model.TotalPages ? "disabled" : "";
                                        }
                                        <li class="page-item @prevDisabled">
                                            <a class="page-link-glass" href="?pageNumber=@(Model.PageNumber - 1)@(Model.StatusFilter.HasValue ? $"&statusFilter={(int)Model.StatusFilter}" : "")">
                                                <i class="bi bi-chevron-left"></i> Previous
                                            </a>
                                        </li>

                                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                        {
                                            var activeClass = i == Model.PageNumber ? "active" : "";
                                            <li class="page-item @activeClass">
                                                <a class="page-link-glass" href="?pageNumber=@i@(Model.StatusFilter.HasValue ? $"&statusFilter={(int)Model.StatusFilter}" : "")">@i</a>
                                            </li>
                                        }

                                        <li class="page-item @nextDisabled">
                                            <a class="page-link-glass" href="?pageNumber=@(Model.PageNumber + 1)@(Model.StatusFilter.HasValue ? $"&statusFilter={(int)Model.StatusFilter}" : "")">
                                                Next <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            }
                        }
                        else
                        {
                            <div class="empty-state-glass">
                                <i class="bi bi-calendar-x"></i>
                                <h5 class="mt-3" style="color: #e0e0e0;">You don't have any bookings yet.</h5>
                                <p class="mt-2">
                                    <a href="/Bookings/SearchRooms">Start booking now!</a>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize SignalR connection
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/bookingHub")
                .withAutomaticReconnect()
                .configureLogging(signalR.LogLevel.Information)
                .build();

            // Connection handlers
            connection.onreconnecting(() => {
                console.log('SignalR: Reconnecting...');
                $('#realTimeIndicator').removeClass('badge-live').addClass('badge-glass-secondary').show();
            });

            connection.onreconnected(() => {
                console.log('SignalR: Reconnected');
                $('#realTimeIndicator').removeClass('badge-glass-secondary').addClass('badge-live');
                showNotification('Connection restored', 'success');
            });

            connection.onclose(() => {
                console.log('SignalR: Connection closed');
                $('#realTimeIndicator').hide();
            });

            // Listen for booking status updates
            connection.on("BookingStatusUpdated", function(data) {
                console.log('Booking status updated:', data);
                updateBookingStatus(data.bookingId, data.status, data.message);
                showNotification(data.message, 'info');
            });

            // Listen for booking completion
            connection.on("BookingCompleted", function(data) {
                console.log('Booking completed:', data);
                updateBookingToCompleted(data.bookingId, data.roomName);
                showNotification(`Your booking for "${data.roomName}" has been completed!`, 'success');
            });

            // Start connection
            connection.start()
                .then(() => {
                    console.log('SignalR: Connected');
                    $('#realTimeIndicator').show();
                })
                .catch(err => {
                    console.error('SignalR connection error:', err);
                });

            // Update booking status in UI
            function updateBookingStatus(bookingId, newStatus, message) {
                const row = $(`tr[data-booking-id="${bookingId}"]`);
                if (row.length === 0) return;

                const statusCell = row.find('.booking-status');
                const statusBadge = statusCell.find('.status-badge');

                // Update badge class and text
                const statusInfo = getStatusInfo(newStatus);
                statusBadge.removeClass()
                    .addClass(`badge ${statusInfo.class} status-badge`)
                    .attr('data-status', newStatus)
                    .text(statusInfo.text);

                // Add glow animation
                row.addClass('table-success');
                setTimeout(() => row.removeClass('table-success'), 2000);

                // Update actions based on new status
                updateActionButtons(row, newStatus);
            }

            function updateBookingToCompleted(bookingId, roomName) {
                const row = $(`tr[data-booking-id="${bookingId}"]`);
                if (row.length === 0) return;

                // Update status badge
                const statusBadge = row.find('.status-badge');
                statusBadge.removeClass()
                    .addClass('badge badge-glass-info status-badge')
                    .attr('data-status', 'Completed')
                    .text('Completed');

                // Add report button
                const actionsCell = row.find('.action-buttons');
                actionsCell.find('.action-edit, .action-cancel').remove();

                if (actionsCell.find('.action-report').length === 0) {
                    actionsCell.append(`
                        <a href="/RoomReports/Create?bookingId=${bookingId}"
                           class="btn btn-action-glass btn-action-dark action-report"
                           title="Report Issue">
                            <i class="bi bi-exclamation-triangle"></i>
                        </a>
                    `);
                }

                // Highlight row
                row.addClass('table-info');
                setTimeout(() => row.removeClass('table-info'), 3000);
            }

            function updateActionButtons(row, status) {
                const actionsCell = row.find('.action-buttons');

                // Remove old action buttons
                actionsCell.find('.action-edit, .action-cancel, .action-report').remove();

                // Add appropriate buttons based on status
                if (status === 'Pending') {
                    // Add edit button
                    actionsCell.append(`
                        <a href="/Bookings/Edit?id=${row.data('booking-id')}"
                           class="btn btn-action-glass btn-action-warning action-edit"
                           title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    `);
                }

                if (status === 'Pending' || status === 'Approved') {
                    // Add cancel button
                    actionsCell.append(`
                        <form method="post"
                              action="?handler=Cancel&id=${row.data('booking-id')}"
                              class="d-inline action-cancel"
                              onsubmit="return confirm('Are you sure?');">
                            <button type="submit"
                                    class="btn btn-action-glass btn-action-danger"
                                    title="Cancel">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </form>
                    `);
                }

                if (status === 'Completed') {
                    // Add report button
                    actionsCell.append(`
                        <a href="/RoomReports/Create?bookingId=${row.data('booking-id')}"
                           class="btn btn-action-glass btn-action-dark action-report"
                           title="Report Issue">
                            <i class="bi bi-exclamation-triangle"></i>
                        </a>
                    `);
                }
            }

            function getStatusInfo(status) {
                const statusMap = {
                    'Pending': { class: 'badge-neon', text: 'Pending' },
                    'Approved': { class: 'badge-glass-success', text: 'Approved' },
                    'Rejected': { class: 'badge-glass-danger', text: 'Rejected' },
                    'Completed': { class: 'badge-glass-info', text: 'Completed' },
                    'Cancelled': { class: 'badge-glass-secondary', text: 'Cancelled' }
                };
                return statusMap[status] || { class: 'badge-glass-secondary', text: status };
            }

            function showNotification(message, type = 'info') {
                const notification = $('#realtimeNotification');
                const messageSpan = $('#notificationMessage');

                // Update notification style
                notification.removeClass('alert-glass-info alert-glass-success alert-glass-danger')
                    .addClass(`alert-glass-${type}`);

                // Set message
                messageSpan.text(message);

                // Show notification
                notification.removeClass('d-none').addClass('show');

                // Auto hide after 5 seconds
                setTimeout(() => {
                    notification.removeClass('show').addClass('d-none');
                }, 5000);
            }
        });
    </script>
