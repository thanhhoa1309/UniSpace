@page
@model UniSpace.Presentation.Pages.Bookings.DetailsModel
@using UniSpace.BusinessObject.Enums
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <h6 class="mb-0">Booking Details</h6>
                        <a href="/Bookings/MyBookings" class="btn btn-secondary btn-sm ms-auto">
                            <i class="fas fa-arrow-left"></i> Back to My Bookings
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Booking != null)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Status Badge -->
                                <div class="mb-4 text-center">
                                    @{
                                        var badgeClass = Model.Booking.Status switch
                                        {
                                            BookingStatus.Pending => "bg-warning",
                                            BookingStatus.Approved => "bg-success",
                                            BookingStatus.Rejected => "bg-danger",
                                            BookingStatus.Completed => "bg-info",
                                            BookingStatus.Cancelled => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass" style="font-size: 1.2rem; padding: 0.5rem 1rem;">
                                        @Model.Booking.StatusDisplay
                                    </span>
                                </div>

                                <!-- Room Information -->
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <h6 class="mb-0"><i class="fas fa-door-open"></i> Room Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Room:</strong> @Model.Booking.RoomName</p>
                                                <p><strong>Campus:</strong> @Model.Booking.CampusName</p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>Type:</strong> @Model.Booking.RoomTypeDisplay</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Booking Information -->
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <h6 class="mb-0"><i class="fas fa-calendar"></i> Booking Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Start Time:</strong><br>
                                                @Model.Booking.StartTime.ToLocalTime().ToString("dddd, MMMM dd, yyyy")<br>
                                                <span class="text-primary">@Model.Booking.StartTime.ToLocalTime().ToString("HH:mm")</span>
                                                </p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>End Time:</strong><br>
                                                @Model.Booking.EndTime.ToLocalTime().ToString("dddd, MMMM dd, yyyy")<br>
                                                <span class="text-primary">@Model.Booking.EndTime.ToLocalTime().ToString("HH:mm")</span>
                                                </p>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12">
                                                <p><strong>Duration:</strong> 
                                                @{
                                                    var duration = Model.Booking.EndTime - Model.Booking.StartTime;
                                                    @($"{duration.TotalHours:F1} hours")
                                                }
                                                </p>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <p><strong>Purpose:</strong></p>
                                                <p class="text-secondary">@Model.Booking.Purpose</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- User Information -->
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <h6 class="mb-0"><i class="fas fa-user"></i> User Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Name:</strong> @Model.Booking.UserName</p>
                                        <p><strong>Email:</strong> @Model.Booking.UserEmail</p>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.Booking.AdminNote))
                                {
                                    <div class="alert alert-info">
                                        <strong><i class="fas fa-info-circle"></i> Admin Note:</strong><br>
                                        @Model.Booking.AdminNote
                                    </div>
                                }

                                <!-- Timestamps -->
                                <div class="card">
                                    <div class="card-body">
                                        <small class="text-muted">
                                            <p class="mb-1"><strong>Created:</strong> @Model.Booking.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</p>
                                            @if (Model.Booking.UpdatedAt.HasValue)
                                            {
                                                <p class="mb-0"><strong>Last Updated:</strong> @Model.Booking.UpdatedAt.Value.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</p>
                                            }
                                        </small>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="mt-4 d-flex justify-content-end gap-2">
                                    @if (Model.Booking.Status == BookingStatus.Pending)
                                    {
                                        <a href="/Bookings/Edit?id=@Model.Booking.Id" class="btn btn-warning">
                                            <i class="fas fa-edit"></i> Edit Booking
                                        </a>
                                    }

                                    @if (Model.Booking.Status == BookingStatus.Pending || Model.Booking.Status == BookingStatus.Approved)
                                    {
                                        <form method="post" asp-page-handler="Cancel" asp-route-id="@Model.Booking.Id"
                                              onsubmit="return confirm('Are you sure you want to cancel this booking?');" class="d-inline">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-times"></i> Cancel Booking
                                            </button>
                                        </form>
                                    }

                                    @if (Model.Booking.Status == BookingStatus.Completed)
                                    {
                                        <a href="/RoomReports/Create?bookingId=@Model.Booking.Id" class="btn btn-warning">
                                            <i class="fas fa-exclamation-triangle"></i> Report Issue
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
