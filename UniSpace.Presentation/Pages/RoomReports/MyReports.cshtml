@page
@model UniSpace.Presentation.Pages.RoomReports.MyReportsModel
@{
    ViewData["Title"] = "My Reports";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-file-text"></i> My Room Reports
        </h2>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Reports == null || !Model.Reports.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h5>No Reports Yet</h5>
            <p class="mb-0">You haven't submitted any room reports. If you encounter any issues during your bookings, you can report them here.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var report in Model.Reports)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm @(report.Status == UniSpace.BusinessObject.Enums.ReportStatus.Open ? "border-warning" : "border-success")">
                        <div class="card-header @(report.Status == UniSpace.BusinessObject.Enums.ReportStatus.Open ? "bg-warning" : "bg-success") text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="bi bi-tag"></i> @report.IssueType
                                </h6>
                                <span class="badge @(report.Status == UniSpace.BusinessObject.Enums.ReportStatus.Open ? "bg-dark" : "bg-light text-dark")">
                                    @report.StatusDisplay
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-building"></i> <strong>Campus:</strong> @report.CampusName
                                </small>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-door-open"></i> <strong>Room:</strong> @report.RoomName
                                </small>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i> <strong>Reported:</strong> @report.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                </small>
                            </div>
                            
                            <div class="mb-3">
                                <p class="card-text small">
                                    <strong>Description:</strong><br/>
                                    @(report.Description.Length > 150 ? report.Description.Substring(0, 150) + "..." : report.Description)
                                </p>
                            </div>

                            @if (!string.IsNullOrEmpty(report.AdminResponse))
                            {
                                <div class="alert alert-info mb-0">
                                    <small>
                                        <strong><i class="bi bi-chat-left-dots"></i> Admin Response:</strong><br/>
                                        @report.AdminResponse
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-page="./Details" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <div class="alert alert-light">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h5 class="text-primary">@Model.Reports.Count</h5>
                        <small class="text-muted">Total Reports</small>
                    </div>
                    <div class="col-md-4">
                        <h5 class="text-warning">@Model.Reports.Count(r => r.Status == UniSpace.BusinessObject.Enums.ReportStatus.Open)</h5>
                        <small class="text-muted">Open Reports</small>
                    </div>
                    <div class="col-md-4">
                        <h5 class="text-success">@Model.Reports.Count(r => r.Status == UniSpace.BusinessObject.Enums.ReportStatus.Resolved)</h5>
                        <small class="text-muted">Resolved Reports</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
