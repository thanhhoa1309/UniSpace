@page
@model UniSpace.Presentation.Pages.RoomReports.CreateModel
@{
    ViewData["Title"] = "Report Room Issue";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
    /* Page Container */
    .create-report-page-container {
        min-height: 100vh;
        padding: 40px 0;
    }

    /* Main Form Card */
    .report-form-card-glass {
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 138, 0, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .report-form-card-glass:hover {
            border: 1px solid rgba(255, 138, 0, 0.4);
            box-shadow: 0 12px 40px 0 rgba(255, 138, 0, 0.15);
        }

    /* Gradient Header */
    .gradient-header-glass {
        background: linear-gradient(135deg, rgba(255, 138, 0, 0.3) 0%, rgba(255, 107, 0, 0.25) 100%);
        border-bottom: 2px solid rgba(255, 138, 0, 0.4);
        padding: 40px 30px;
        text-align: center;
    }

        .gradient-header-glass i {
            color: #ff8a00;
            text-shadow: 0 0 20px rgba(255, 138, 0, 0.5);
        }

        .gradient-header-glass h1 {
            color: #ffffff;
            font-weight: 700;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .gradient-header-glass p {
            color: rgba(255, 255, 255, 0.85);
        }

    /* Card Body */
    .card-body-glass {
        padding: 40px;
        color: #e0e0e0;
    }

    /* Form Controls */
    .form-control-glass,
    .form-select-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.15);
        border-radius: 10px;
        color: #ffffff;
        padding: 12px 20px;
        transition: all 0.3s ease;
    }

        .form-control-glass::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .form-control-glass:focus,
        .form-select-glass:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 138, 0, 0.6);
            color: #ffffff;
            box-shadow: 0 0 15px rgba(255, 138, 0, 0.2);
            outline: none;
        }

        .form-select-glass option {
            background: #2d2d2d;
            color: #ffffff;
        }

    /* Info Box */
    .info-box-glass {
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(59, 130, 246, 0.2) 100%);
        border: 1px solid rgba(6, 182, 212, 0.4);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 28px;
    }

        .info-box-glass h6 {
            color: #22d3ee;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .info-box-glass ul {
            color: #e0e0e0;
            margin-bottom: 0;
        }

            .info-box-glass ul li {
                margin-bottom: 6px;
            }

    /* Form Group */
    .form-group-glass {
        position: relative;
        margin-bottom: 28px;
    }

    /* Form Label */
    .form-label-glass {
        font-weight: 600;
        color: #e0e0e0;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
    }

        .form-label-glass i {
            color: #ff8a00;
        }

    .required-asterisk {
        color: #ff8a00;
        font-size: 18px;
    }

    /* Character Counter */
    .char-counter {
        position: absolute;
        right: 20px;
        bottom: 15px;
        font-size: 12px;
        font-weight: 600;
        z-index: 10;
    }

        .char-counter .badge {
            padding: 6px 12px;
            border-radius: 8px;
        }

    /* Helper Text */
    .helper-text-glass {
        background: rgba(6, 182, 212, 0.15);
        border-left: 3px solid #06b6d4;
        padding: 12px;
        border-radius: 8px;
        margin-top: 8px;
        font-size: 14px;
        color: #e0e0e0;
    }

        .helper-text-glass i {
            color: #fbbf24;
        }

    /* Buttons */
    .btn-submit-glass {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%);
        border: 2px solid #ff8a00;
        color: #fff;
        font-weight: 600;
        padding: 15px 40px;
        border-radius: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4);
    }

        .btn-submit-glass:hover {
            box-shadow: 0 0 30px rgba(255, 138, 0, 0.7);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-cancel-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        font-weight: 600;
        padding: 15px 30px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-cancel-glass:hover {
            border: 2px solid rgba(255, 138, 0, 0.5);
            color: #ff8a00;
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.2);
        }

    /* Help Card */
    .help-card-glass {
        background: rgba(45, 45, 45, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(6, 182, 212, 0.2);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        margin-top: 24px;
    }

        .help-card-glass:hover {
            border-color: rgba(6, 182, 212, 0.4);
            box-shadow: 0 12px 30px rgba(6, 182, 212, 0.2);
        }

    .help-card-body {
        padding: 24px;
        color: #e0e0e0;
    }

        .help-card-body h6 {
            color: #06b6d4;
            font-weight: 700;
            margin-bottom: 12px;
        }

            .help-card-body h6 i {
                color: #06b6d4;
            }

        .help-card-body p {
            color: #9ca3af;
            margin-bottom: 0;
        }

            .help-card-body p a {
                color: #ff8a00;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .help-card-body p a:hover {
                    color: #ffa500;
                    text-shadow: 0 0 10px rgba(255, 138, 0, 0.5);
                }

    /* Alert Styles */
    .alert-glass-danger {
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.4);
        border-left: 4px solid #ef4444;
        border-radius: 10px;
        padding: 16px 20px;
        color: #fca5a5;
        margin-bottom: 24px;
    }

    /* Validation */
    .text-danger {
        color: #fca5a5 !important;
        font-size: 0.875rem;
        margin-top: 6px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .gradient-header-glass,
        .card-body-glass,
        .help-card-body {
            padding: 24px;
        }

        .btn-submit-glass,
        .btn-cancel-glass {
            padding: 12px 24px;
        }
    }

    /* SweetAlert2 Custom Styling */
    .swal2-popup {
        background: rgba(35, 35, 35, 0.95) !important;
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 138, 0, 0.3);
        color: #e0e0e0 !important;
    }

    .swal2-title {
        color: #ffffff !important;
    }

    .swal2-html-container {
        color: #e0e0e0 !important;
    }

    .swal2-confirm {
        background: linear-gradient(135deg, #ff8a00 0%, #ff6b00 100%) !important;
        box-shadow: 0 0 20px rgba(255, 138, 0, 0.4) !important;
    }
</style>

<div class="create-report-page-container">
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="report-form-card-glass">
                    <div class="gradient-header-glass">
                        <i class="bi bi-exclamation-triangle-fill display-1 mb-3 d-block"></i>
                        <h1 class="display-6 fw-bold mb-2">Report Room Issue</h1>
                        <p class="mb-0">Help us maintain quality by reporting any problems you encountered</p>
                    </div>

                    <div class="card-body-glass">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert-glass-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>
                                <strong>Error!</strong> @Model.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" style="filter: brightness(0) invert(1);"></button>
                            </div>
                        }

                        <div class="info-box-glass">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-info-circle-fill fs-3 me-3" style="color: #22d3ee;"></i>
                                <div>
                                    <h6>Important Information</h6>
                                    <ul class="small">
                                        <li>Each booking can only be reported once</li>
                                        <li>Please provide detailed information to help us resolve issues quickly</li>
                                        <li>Reports are reviewed by administrators within 24 hours</li>
                                        <li>You'll be notified when your report is resolved</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <form method="post" id="reportForm">
                            <input type="hidden" asp-for="Input.BookingId" />

                            <!-- Issue Type -->
                            <div class="form-group-glass">
                                <label asp-for="Input.IssueType" class="form-label-glass">
                                    <i class="bi bi-tag-fill"></i>
                                    Issue Type
                                    <span class="required-asterisk">*</span>
                                </label>
                                <select asp-for="Input.IssueType" class="form-select form-select-glass" id="issueType" required>
                                    <option value="">-- Select Issue Type --</option>
                                    <option value="Broken Equipment">Broken Equipment</option>
                                    <option value="Cleanliness">Cleanliness</option>
                                    <option value="Air Conditioning">Air Conditioning</option>
                                    <option value="Lighting">Lighting</option>
                                    <option value="Furniture">Furniture</option>
                                    <option value="Technology">Technology (Projector, Computer, etc.)</option>
                                    <option value="Safety">Safety Concern</option>
                                    <option value="Noise">Noise Issue</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Input.IssueType" class="text-danger"></span>
                            </div>

                            <!-- Description -->
                            <div class="form-group-glass">
                                <label asp-for="Input.Description" class="form-label-glass">
                                    <i class="bi bi-chat-left-text-fill"></i>
                                    Detailed Description
                                    <span class="required-asterisk">*</span>
                                </label>
                                <div class="position-relative">
                                    <textarea asp-for="Input.Description"
                                              class="form-control form-control-glass"
                                              rows="8"
                                              id="description"
                                              maxlength="1000"
                                              placeholder="Please describe the issue in detail...

Example:
• What is the problem?
• When did you notice it?
• Where exactly in the room?
• How severe is the issue?
• Any other relevant details..."
                                              required></textarea>
                                    <div class="char-counter">
                                        <span id="charCount" class="badge bg-secondary">0</span> / 1000
                                    </div>
                                </div>
                                <div class="helper-text-glass">
                                    <i class="bi bi-lightbulb-fill"></i>
                                    <strong>Tip:</strong> The more details you provide, the faster we can resolve the issue.
                                    Minimum 10 characters required.
                                </div>
                                <span asp-validation-for="Input.Description" class="text-danger"></span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3 justify-content-end mt-5">
                                <a asp-page="/Bookings/MyBookings" class="btn btn-cancel-glass btn-lg px-4">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-submit-glass btn-lg px-5">
                                    <i class="bi bi-send-fill"></i> Submit Report
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Help Card -->
                <div class="help-card-glass">
                    <div class="help-card-body">
                        <h6>
                            <i class="bi bi-question-circle"></i> Need Help?
                        </h6>
                        <p class="small">
                            If you have urgent issues or need immediate assistance, please contact facility management
                            at <a href="mailto:facility@unispace.edu">facility@unispace.edu</a> or call ext. 5000.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Character counter
            const description = $('#description');
            const charCount = $('#charCount');
            const charBadge = charCount.parent();

            description.on('input', function () {
                const length = $(this).val().length;
                charCount.text(length);

                // Update badge color based on length
                charBadge.removeClass('bg-secondary bg-danger bg-warning bg-success');

                if (length < 10) {
                    charBadge.addClass('bg-danger');
                } else if (length < 50) {
                    charBadge.addClass('bg-warning');
                } else if (length > 950) {
                    charBadge.addClass('bg-warning');
                } else {
                    charBadge.addClass('bg-success');
                }
            });

            // Initialize character count
            description.trigger('input');

            // Form validation
            $('#reportForm').on('submit', function (e) {
                const issueType = $('#issueType').val();
                const desc = description.val().trim();

                if (!issueType) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Issue Type Required',
                        text: 'Please select the type of issue you want to report.',
                        confirmButtonColor: '#ff8a00'
                    });
                    return false;
                }

                if (desc.length < 10) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Description Too Short',
                        text: 'Please provide at least 10 characters to describe the issue.',
                        confirmButtonColor: '#ff8a00'
                    });
                    description.focus();
                    return false;
                }

                // Confirmation dialog
                e.preventDefault();
                Swal.fire({
                    title: 'Submit Report?',
                    html: `
                        <div class="text-start">
                            <p class="mb-2"><strong>Issue Type:</strong> ${issueType}</p>
                            <p class="mb-2"><strong>Description Length:</strong> ${desc.length} characters</p>
                            <div class="alert alert-info mt-3 mb-0" style="background: rgba(6, 182, 212, 0.15); border: 1px solid rgba(6, 182, 212, 0.4); color: #22d3ee;">
                                <small><i class="bi bi-info-circle"></i> You can only submit one report per booking.</small>
                            </div>
                        </div>
                    `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#ff8a00',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="bi bi-send"></i> Yes, Submit!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });

            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}