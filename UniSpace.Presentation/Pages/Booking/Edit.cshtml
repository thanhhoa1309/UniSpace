@page
@model UniSpace.Presentation.Pages.Booking.EditModel
@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Booking
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="UpdateBooking.Id" />

                        <div class="mb-3">
                            <label asp-for="UpdateBooking.RoomId" class="form-label">Room *</label>
                            <select asp-for="UpdateBooking.RoomId" class="form-select">
                                <option value="">-- Select Room --</option>
                                @foreach (var campus in Model.Campuses)
                                {
                                    <optgroup label="@campus.Name">
                                        @foreach (var room in Model.Rooms.Where(r => r.CampusId == campus.Id))
                                        {
                                            <option value="@room.Id">
                                                @room.Name (@room.TypeDisplay) - Capacity: @room.Capacity
                                            </option>
                                        }
                                    </optgroup>
                                }
                            </select>
                            <span asp-validation-for="UpdateBooking.RoomId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdateBooking.StartTime" class="form-label">Start Time *</label>
                                <input asp-for="UpdateBooking.StartTime" type="datetime-local" class="form-control" id="startTime" />
                                <span asp-validation-for="UpdateBooking.StartTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdateBooking.EndTime" class="form-label">End Time *</label>
                                <input asp-for="UpdateBooking.EndTime" type="datetime-local" class="form-control" id="endTime" />
                                <span asp-validation-for="UpdateBooking.EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Duration</label>
                            <input type="text" class="form-control" id="duration" readonly>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateBooking.Purpose" class="form-label">Purpose *</label>
                            <textarea asp-for="UpdateBooking.Purpose" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="UpdateBooking.Purpose" class="text-danger"></span>
                            <small class="text-muted">Maximum 500 characters</small>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Note:</strong> You can only edit bookings that are in "Pending" status.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Details" asp-route-id="@Model.UpdateBooking.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Update Booking
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function updateDuration() {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            
            if (startTime && endTime) {
                const start = new Date(startTime);
                const end = new Date(endTime);
                const diff = (end - start) / 1000 / 60;
                
                if (diff > 0) {
                    const hours = Math.floor(diff / 60);
                    const minutes = diff % 60;
                    document.getElementById('duration').value = `${hours}h ${minutes}m`;
                } else {
                    document.getElementById('duration').value = 'Invalid time range';
                }
            }
        }

        document.getElementById('startTime').addEventListener('change', updateDuration);
        document.getElementById('endTime').addEventListener('change', updateDuration);
        
        // Initial calculation
        updateDuration();

        // Set minimum date
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        document.getElementById('startTime').min = now.toISOString().slice(0, 16);
        document.getElementById('endTime').min = now.toISOString().slice(0, 16);
    </script>
}
